<script>
    document.getElementById('jobForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = {
            customerName: document.getElementById('customerName').value,
            customerPhone: document.getElementById('customerPhone').value,
            vehicleModel: document.getElementById('vehicleModel').value,
            licensePlate: document.getElementById('licensePlate').value,
            serviceDetails: document.getElementById('serviceDetails').value,
            assignedToUid: document.getElementById('assignedMekanik').value, // ID Mekanik
        };

        try {
            const response = await fetch('/api/jobs', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            });

            const data = await response.json();

            if (response.ok) {
                alert(`Pekerjaan berhasil dibuat: ${data.message}`);
                // Redirect ke daftar pekerjaan Kasir
                window.location.href = '/kasir/dashboard'; 
            } else {
                alert(`Gagal membuat pekerjaan: ${data.message || 'Terjadi kesalahan server.'}`);
            }

        } catch (error) {
            console.error('Error saat membuat pekerjaan:', error);
            alert('Terjadi kesalahan jaringan.');
        }
    });
</script>