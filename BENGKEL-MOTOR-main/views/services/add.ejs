<div class="container py-5 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-7">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-emerald-gradient text-white py-4 border-0 text-center">
                    <div class="mb-2">
                        <i class="fas fa-file-medical fa-2x"></i>
                    </div>
                    <h3 class="mb-1 fw-bold">Tambah Jasa Servis</h3>
                    <p class="mb-0 opacity-75 small">Daftarkan layanan perawatan atau perbaikan baru</p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form action="/api/services/add" method="POST">
                        
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted text-uppercase">Nama Layanan Jasa</label>
                            <div class="input-group shadow-sm rounded-3 overflow-hidden border">
                                <span class="input-group-text bg-white border-0"><i class="fas fa-hand-sparkles text-success"></i></span>
                                <input type="text" name="name" class="form-control border-0 py-2" placeholder="Contoh: Service Besar / Ganti Ban" required>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-5">
                                <label class="form-label small fw-bold text-muted text-uppercase">Kode Jasa</label>
                                <div class="input-group shadow-sm rounded-3 overflow-hidden border">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-hashtag text-success"></i></span>
                                    <input type="text" name="code" class="form-control border-0 py-2 font-monospace" placeholder="SRV-01" required>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <label class="form-label small fw-bold text-muted text-uppercase">Biaya Jasa (IDR)</label>
                                <div class="input-group shadow-sm rounded-3 overflow-hidden border">
                                    <span class="input-group-text bg-success bg-opacity-10 border-0 text-success fw-bold">Rp</span>
                                    <input type="number" name="price" class="form-control border-0 py-2" placeholder="0" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label class="form-label small fw-bold text-muted text-uppercase">Deskripsi / Cakupan Pekerjaan</label>
                            <div class="input-group shadow-sm rounded-3 overflow-hidden border">
                                <span class="input-group-text bg-white border-0 align-items-start pt-2"><i class="fas fa-clipboard-list text-muted"></i></span>
                                <textarea name="description" class="form-control border-0 py-2" rows="3" placeholder="Apa saja yang dikerjakan dalam jasa ini?"></textarea>
                            </div>
                        </div>

                        <hr class="my-4 opacity-10">

                        <div class="row g-3">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-success btn-emerald w-100 py-3 fw-bold rounded-3 shadow">
                                    <i class="fas fa-plus-circle me-2"></i>SIMPAN JASA BARU
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a href="/services" class="btn btn-outline-secondary w-100 py-3 fw-bold rounded-3">
                                    BATAL
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-emerald-gradient {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
    }

    .font-monospace {
        font-family: 'Courier New', Courier, monospace;
        letter-spacing: 1px;
    }

    .form-control:focus {
        box-shadow: none;
        background-color: #fff !important;
        border: 1px solid #2ecc71 !important;
    }

    .btn-emerald {
        background-color: #2ecc71;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-emerald:hover {
        background-color: #27ae60;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(46, 204, 113, 0.3) !important;
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
