<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1"><%= title %></h1>
            <p class="text-muted mb-0">Kelola akses staf (Admin, Kasir, Mekanik) dan pemantauan akun terdaftar.</p>
        </div>
        <div>
            <a href="/register" class="btn btn-success px-4 py-2 fw-bold rounded-3 shadow-sm btn-emerald">
                <i class="fas fa-user-plus me-2"></i>Tambah User Baru
            </a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 me-3 p-3">
                        <i class="fas fa-users-cog fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Total Staf</h6>
                        <h4 class="fw-bold mb-0"><%= users.length %></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 me-3 p-3">
                        <i class="fas fa-wrench fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Total Mekanik</h6>
                        <h4 class="fw-bold mb-0"><%= users.filter(u => u.role === 'mekanik').length %></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-3 me-3 p-3">
                        <i class="fas fa-user-shield fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Administrator</h6>
                        <h4 class="fw-bold mb-0"><%= users.filter(u => u.role === 'admin').length %></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom border-light">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-table me-2 text-success"></i>Daftar Akun Sistem</h6>
                </div>
                <div class="col-auto">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light border-0"><i class="fas fa-search"></i></span>
                        <input type="text" id="userSearch" class="form-control bg-light border-0" placeholder="Cari nama atau email...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <% if (users.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="userTable">
                        <thead class="table-light">
                            <tr class="small text-uppercase fw-bold text-muted">
                                <th class="ps-4">Nama & Informasi</th>
                                <th>Email</th>
                                <th>Akses Role</th>
                                <th>Tgl Terdaftar</th>
                                <th class="text-center pe-4">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(u => { %>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-success bg-opacity-10 text-success rounded-circle me-3 d-flex align-items-center justify-content-center fw-bold" style="width: 40px; height: 40px;">
                                                <%= u.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark"><%= u.name %></div>
                                                <small class="text-muted"><i class="fas fa-building me-1 small"></i><%= u.department || 'Workshop' %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-muted"><%= u.email %></td>
                                    <td>
                                        <% 
                                            let roleClass = 'success';
                                            if(u.role === 'admin') roleClass = 'danger';
                                            if(u.role === 'mekanik') roleClass = 'warning text-dark';
                                            if(u.role === 'kasir') roleClass = 'primary';
                                        %>
                                        <span class="badge bg-<%= roleClass %> bg-opacity-10 text-<%= roleClass %> px-3 py-2 rounded-pill border border-<%= roleClass %> border-opacity-25" style="font-size: 0.75rem;">
                                            <%= u.role.toUpperCase() %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="small text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            <%= new Date(u.createdAt).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                        </span>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group shadow-sm rounded-3">
                                            <a href="/users/edit/<%= u._id %>" class="btn btn-sm btn-white border border-light" title="Edit Profile">
                                                <i class="fas fa-edit text-warning"></i>
                                            </a>
                                            
                                            <form action="/api/users/delete/<%= u._id %>?_method=DELETE" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-white border border-light ms-n1" 
                                                    onclick="return confirm('Peringatan! Data user <%= u.name %> akan dihapus secara permanen dari Database & Firebase. Lanjutkan?');" 
                                                    <%= (u._id.toString() === user._id.toString()) ? 'disabled title="Tidak bisa hapus akun sendiri"' : '' %>>
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-user-slash fa-4x text-muted opacity-25 mb-3"></i>
                    <h5 class="text-muted">Database User Kosong</h5>
                    <p class="small text-muted">Silakan tambahkan staf baru untuk memulai sistem.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
    .avatar-sm { font-size: 1rem; border: 1px solid rgba(0,0,0,0.05); }
    .btn-white { background: #fff; }
    .btn-white:hover { background: #f8f9fa; }
    
    /* Soft Badges */
    .bg-primary-opacity-10 { background-color: rgba(13, 110, 253, 0.1); }
    
    .animate-fade-in { animation: fadeIn 0.5s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    /* Custom Emerald Button */
    .btn-emerald { background-color: #2ecc71; border: none; transition: 0.3s; color: white; }
    .btn-emerald:hover { background-color: #27ae60; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3); color: white; }
</style>

<script>
    // Search Functionality
    document.getElementById('userSearch').addEventListener('keyup', function() {
        let value = this.value.toLowerCase();
        let rows = document.querySelectorAll("#userTable tbody tr");
        
        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(value) ? "" : "none";
        });
    });
</script>