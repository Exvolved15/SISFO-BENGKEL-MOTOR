<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">Riwayat Transaksi</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/dashboard" class="text-decoration-none">Dashboard</a></li>
                    <li class="breadcrumb-item active">Daftar Transaksi</li>
                </ol>
            </nav>
        </div>
        <a href="/transactions/add" class="btn btn-success px-4 py-2 rounded-3 shadow-sm btn-emerald fw-bold">
            <i class="fas fa-plus-circle me-2"></i>Transaksi Baru
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white border-start border-4 border-primary">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                        <i class="fas fa-file-invoice fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Total Invoice</h6>
                        <h4 class="fw-bold mb-0"><%= transactions.length %></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white border-start border-4 border-success">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
                        <i class="fas fa-money-bill-trend-up fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Omzet Bruto</h6>
                        <% let totalBruto = transactions.reduce((acc, trx) => acc + (trx.totalAmount || 0), 0); %>
                        <h4 class="fw-bold mb-0">Rp <%= totalBruto.toLocaleString('id-ID') %></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white border-start border-4 border-emerald">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-emerald bg-opacity-10 text-emerald rounded-3 p-3 me-3">
                        <i class="fas fa-wallet fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Pendapatan Bersih (Grand Total)</h6>
                        <% let totalNetto = transactions.reduce((acc, trx) => acc + (trx.grandTotal || 0), 0); %>
                        <h4 class="fw-bold mb-0 text-emerald">Rp <%= totalNetto.toLocaleString('id-ID') %></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-5">
        <div class="card-header bg-white py-3 border-bottom border-light">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-table me-2 text-primary"></i>Data Transaksi Bengkel</h6>
                </div>
                <div class="col-auto">
                    <div class="input-group input-group-sm shadow-sm rounded-pill overflow-hidden border">
                        <span class="input-group-text bg-white border-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" id="trxSearch" class="form-control border-0 ps-0" placeholder="Cari invoice atau pelanggan...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="trxTable">
                    <thead class="table-light">
                        <tr class="small text-uppercase fw-bold text-muted">
                            <th class="ps-4">No. Invoice</th>
                            <th>Pelanggan & Unit</th>
                            <th>Mekanik</th>
                            <th class="text-end">Total Kotor</th>
                            <th class="text-end">Diskon</th>
                            <th class="text-end">Grand Total</th>
                            <th class="text-center pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions && transactions.length > 0) { %>
                            <% transactions.forEach(trx => { %> 
                                <tr>
                                    <td class="ps-4">
                                        <span class="fw-bold text-primary font-monospace"><%= trx.invoiceNumber %></span>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark"><%= trx.customerName %></div>
                                        <small class="text-muted"><i class="fas fa-motorcycle me-1"></i><%= trx.motorName || 'Unit' %></small>
                                    </td>
                                    <td>
                                        <div class="small fw-bold"><%= trx.mechanicName || '-' %></div>
                                        <small class="text-muted" style="font-size: 0.7rem;">Technician</small>
                                    </td>
                                    <td class="text-end text-muted small">
                                        Rp <%= (trx.totalAmount || 0).toLocaleString('id-ID') %>
                                    </td>
                                    <td class="text-end text-danger small">
                                        <% if (trx.discount > 0) { %>
                                            -Rp <%= (trx.discount || 0).toLocaleString('id-ID') %>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td class="text-end fw-bold text-dark">
                                        Rp <%= (trx.grandTotal || 0).toLocaleString('id-ID') %>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group shadow-sm rounded-3">
                                            <a href="/api/transactions/<%= trx._id %>/detail" class="btn btn-sm btn-white border border-light" title="Lihat Detail">
                                                <i class="fas fa-eye text-info"></i>
                                            </a>
                                            <a href="/api/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-sm btn-white border border-light" title="Cetak Resi">
                                                <i class="fas fa-print text-secondary"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="fas fa-receipt fa-4x text-muted opacity-25 mb-3 d-block"></i>
                                    <span class="text-muted">Belum ada data transaksi yang tersimpan.</span>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-emerald { background-color: #2ecc71; }
    .text-emerald { color: #2ecc71; }
    .btn-emerald { background-color: #2ecc71; color: white; border: none; }
    .btn-emerald:hover { background-color: #27ae60; color: white; transform: translateY(-2px); }
    
    .font-monospace { font-family: 'Courier New', Courier, monospace; letter-spacing: 1px; }
    .btn-white { background: #fff; }
    .btn-white:hover { background: #f8f9fa; }
    
    .animate-fade-in { animation: fadeIn 0.5s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    
    .icon-box { width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; }
</style>

<script>
    // Real-time Search
    document.getElementById('trxSearch').addEventListener('keyup', function() {
        let value = this.value.toLowerCase();
        let rows = document.querySelectorAll("#trxTable tbody tr");
        
        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(value) ? "" : "none";
        });
    });
</script>