<section class="hero-section py-5 mb-5 animate-fade-in">
    <div class="container py-lg-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-7 text-white text-lg-start text-center" data-aos="fade-right">
                <h1 class="display-3 fw-bold mb-3">
                    <i class="fas fa-screwdriver-wrench me-2 text-success"></i>Solusi Digital <br>
                    <span class="brand-border">ACR Motor</span>
                </h1>
                <p class="lead opacity-75 mb-4">Manajemen bengkel modern dengan transparansi data dan monitoring mekanik secara real-time untuk kenyamanan Anda.</p>
                <div class="d-flex flex-wrap gap-3 justify-content-lg-start justify-content-center">
                    <a href="/login" class="btn btn-outline-light px-4 py-3 fw-bold rounded-3 shadow">
                        <i class="fas fa-user-shield me-2"></i>LOGIN SISTEM
                    </a>
                    <a href="/about" class="btn btn-outline-light px-4 py-3 fw-bold rounded-3 shadow">
                        <i class="fas fa-map-location-dot me-2"></i>LOKASI KAMI
                    </a>
                </div>
            </div>

            <div class="col-lg-5" data-aos="fade-left">
                <div class="card search-card border-0 shadow-lg bg-glass overflow-hidden">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <div class="icon-box bg-success bg-opacity-10 text-success mx-auto mb-3 shadow-sm">
                                <i class="fas fa-magnifying-glass fa-2x"></i>
                            </div>
                            <h4 class="fw-bold text-dark">Lacak Servis</h4>
                            <p class="text-muted small">Pantau progres motor Anda secara real-time</p>
                        </div>
                        
                       <form action="/track-status" method="GET">
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted">No. Invoice atau No. Plat</label>
                            <div class="input-group shadow-sm rounded-3 overflow-hidden border">
                                <span class="input-group-text bg-white border-0">
                                    <i class="fas fa-receipt text-success"></i>
                                </span>
                                <input type="text" name="invoice" class="form-control border-0 py-3" 
                                    placeholder="Contoh: INV-2025... atau B 1234 ABC" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success w-100 py-3 fw-bold rounded-3 shadow-sm btn-emerald">
                            <i class="fas fa-search-location me-2"></i>CEK STATUS SEKARANG
                        </button>
                    </form>

                        <% if (locals.error) { %>
                            <div class="alert alert-danger mt-3 small py-2 text-center" role="alert">
                                <i class="fas fa-circle-exclamation me-2"></i><%= error %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

