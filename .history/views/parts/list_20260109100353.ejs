<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1"><%= title %></h1>
            <p class="text-muted mb-0">Kelola ketersediaan suku cadang bengkel.</p>
        </div>
        <a href="/parts/add" class="btn btn-success px-4 py-2 fw-bold rounded-3 shadow-sm btn-emerald">
            <i class="fas fa-plus-circle me-2"></i>Tambah Suku Cadang
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom border-light">
            <div class="row align-items-center">
                <div class="col"><h6 class="mb-0 fw-bold">Daftar Inventaris Gudang</h6></div>
                <div class="col-auto">
                    <input type="text" id="partSearch" class="form-control form-control-sm rounded-pill" placeholder="Cari barang...">
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <% if (parts.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="partTable">
                        <thead class="table-light text-uppercase small fw-bold text-muted">
                            <tr>
                                <th class="ps-4">Preview</th>
                                <th>Kode</th>
                                <th>Nama Suku Cadang</th>
                                <th>Stok</th>
                                <th>Harga Jual</th>
                                <th class="text-center pe-4">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% parts.forEach(part => { %>
                                <tr>
                                    <td class="ps-4">
                                        <button class="btn btn-sm btn-outline-success rounded-3" 
                                                onclick="openImagePreview('<%= part.name %>', '<%= part.image || '/img/default-part.png' %>')">
                                            <i class="fas fa-image"></i>
                                        </button>
                                    </td>
                                    <td><span class="badge bg-light text-dark border font-monospace"><%= part.code %></span></td>
                                    <td class="fw-bold"><%= part.name %></td>
                                    <td class="text-center">
                                        <span class="badge <%= part.stock <= 5 ? 'bg-danger pulse-danger' : 'bg-success' %> rounded-pill px-3">
                                            <%= part.stock %>
                                        </span>
                                    </td>
                                    <td class="fw-bold text-success">Rp <%= part.sellingPrice.toLocaleString('id-ID') %></td>
                                    <td class="text-center pe-4">
                                        <a href="/parts/edit/<%= part._id %>" class="btn btn-sm btn-light border"><i class="fas fa-edit text-warning"></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg overflow-hidden">
            <div class="modal-header bg-success text-white border-0 py-3">
                <h6 class="modal-title fw-bold" id="modalPartName">Detail Gambar</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0 text-center bg-light">
                <img id="modalPartImage" src="" class="img-fluid" style="max-height: 400px; width: 100%; object-fit: contain;">
            </div>
            <div class="modal-footer border-0 p-3">
                <button type="button" class="btn btn-secondary w-100 rounded-3" data-bs-dismiss="modal">Tutup</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* CSS Khusus Inventory */
    .font-monospace { font-family: 'Courier New', Courier, monospace; letter-spacing: 1px; }
    .btn-white { background: #fff; }
    .btn-white:hover { background: #f8f9fa; }
    
    .btn-emerald { background-color: #2ecc71; border: none; transition: 0.3s; color: white; }
    .btn-emerald:hover { background-color: #27ae60; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3); color: white; }

    /* Animasi stok kritis */
    .pulse-danger {
        animation: pulse-red 2s infinite;
    }
    @keyframes pulse-red {
        0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); }
        70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); }
        100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
    }

    .animate-fade-in { animation: fadeIn 0.5s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script>
    // Pencarian Real-time
    document.getElementById('partSearch').addEventListener('keyup', function() {
        let value = this.value.toLowerCase();
        let rows = document.querySelectorAll("#partTable tbody tr");
        
        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(value) ? "" : "none";
        });
    });
    function openImagePreview(name, url) {
        document.getElementById('modalPartName').innerText = name;
        document.getElementById('modalPartImage').src = url;
        new bootstrap.Modal(document.getElementById('imagePreviewModal')).show();
    }
</script>