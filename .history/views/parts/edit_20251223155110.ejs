<div class="container py-5 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-emerald-gradient text-white py-4 border-0 text-center">
                    <div class="icon-box bg-white bg-opacity-20 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                        <i class="fas fa-edit fa-lg"></i>
                    </div>
                    <h3 class="mb-1 fw-bold">Perbarui Suku Cadang</h3>
                    <p class="mb-0 opacity-75">Update data untuk: <strong><%= part.name %></strong></p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form action="/api/parts/<%= part._id %>?_method=PUT" method="POST">
                        
                        <div class="row g-4 mb-4">
                            <div class="col-md-8">
                                <label class="form-label small fw-bold text-muted text-uppercase">Nama Suku Cadang</label>
                                <div class="input-group shadow-sm rounded-3">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-tag text-muted"></i></span>
                                    <input type="text" name="name" class="form-control border-0 bg-light py-2" value="<%= part.name %>" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted text-uppercase">Kode Part</label>
                                <div class="input-group shadow-sm rounded-3">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-barcode text-muted"></i></span>
                                    <input type="text" name="code" class="form-control border-0 bg-light py-2" value="<%= part.code %>" required>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted text-uppercase">Jumlah Stok</label>
                                <div class="input-group shadow-sm rounded-3">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-cubes text-muted"></i></span>
                                    <input type="number" name="stock" class="form-control border-0 bg-light py-2" value="<%= part.stock %>" required min="0">
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label small fw-bold text-muted text-uppercase">Supplier</label>
                                <div class="input-group shadow-sm rounded-3">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-truck-moving text-muted"></i></span>
                                    <input type="text" name="supplier" class="form-control border-0 bg-light py-2" value="<%= part.supplier %>">
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted text-uppercase text-danger">Harga Beli (Modal)</label>
                                <div class="input-group shadow-sm rounded-3 border-start border-4 border-danger">
                                    <span class="input-group-text bg-white border-0 fw-bold text-danger">Rp</span>
                                    <input type="number" name="purchasePrice" class="form-control border-0 py-2" value="<%= part.purchasePrice %>" required min="0">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted text-uppercase text-success">Harga Jual (Konsumen)</label>
                                <div class="input-group shadow-sm rounded-3 border-start border-4 border-success">
                                    <span class="input-group-text bg-white border-0 fw-bold text-success">Rp</span>
                                    <input type="number" name="sellingPrice" class="form-control border-0 py-2" value="<%= part.sellingPrice %>" required min="0">
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 opacity-10">

                        <div class="row g-3">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-success btn-emerald w-100 py-3 fw-bold rounded-3 shadow">
                                    <i class="fas fa-save me-2"></i>SIMPAN PERUBAHAN DATA
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a href="/parts" class="btn btn-outline-secondary w-100 py-3 fw-bold rounded-3">
                                    BATAL
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-emerald-gradient {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
    }

    .form-control:focus {
        box-shadow: none;
        background-color: #fff !important;
        border: 1px solid #2ecc71 !important;
    }

    .btn-emerald {
        background-color: #2ecc71;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-emerald:hover {
        background-color: #27ae60;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(46, 204, 113, 0.3) !important;
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>