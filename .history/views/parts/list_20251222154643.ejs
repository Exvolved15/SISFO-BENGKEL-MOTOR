<h1><%= title %></h1>
<p>Berikut adalah daftar suku cadang yang tersedia di bengkel.</p>

<a href="/parts/add" class="btn btn-success mb-3">Tambah Suku Cadang Baru</a>

<% if (parts.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Kode</th>
                    <th>Nama Suku Cadang</th>
                    <th>Stok</th>
                    <th>Harga Beli (Rp)</th>
                    <th>Harga Jual (Rp)</th>
                    <th>Supplier</th>
                    <th class="text-center">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (typeof parts !== 'undefined' && parts.length > 0) { %>
                    <% parts.forEach(part => { %>
                        <tr>
                            <td><%= part.code %></td>
                            <td><%= part.name %></td>
                            <td><%= part.stock %></td>
                            <td>Rp <%= (part.purchasePrice || 0).toLocaleString('id-ID') %></td>
                            <td>Rp <%= (part.sellingPrice || part.price || 0).toLocaleString('id-ID') %></td>
                            <td><%= part.supplier || '-' %></td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="/api/parts/<%= part._id %>/edit" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/api/parts/delete/<%= part._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Yakin ingin menghapus?')">
                                        <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %> 
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">Data suku cadang tidak ditemukan.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info" role="alert">
        Belum ada data suku cadang yang tersimpan.
    </div>
<% } %>