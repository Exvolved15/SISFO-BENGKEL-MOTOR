    .form-control { border-radius: 0 12px 12px 0 !important; transition: all 0.3s ease; }
    .form-control:focus { box-shadow: none; background-color: #fff !important; border: 1px solid #2ecc71 !important; }
    .btn-emerald { background-color: #2ecc71; border: none; transition: 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
    .btn-emerald:hover { background-color: #27ae60; transform: translateY(-3px); box-shadow: 0 8px 20px rgba(46, 204, 113, 0.3) !important; }
    .animate-fade-in { animation: fadeIn 0.8s ease-in-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
