<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container py-5 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-emerald-gradient text-white py-4 border-0 text-center">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-cart-plus me-2"></i>Tambah Suku Cadang Baru
                    </h3>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form action="/api/parts/add" method="POST" id="formAddPart">
                        <div class="row g-4 mb-4">
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted text-uppercase">Kode Part</label>
                                <div class="input-group shadow-sm border rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-barcode text-success"></i></span>
                                    <input type="text" name="code" class="form-control border-0 py-2" placeholder="PART-001" required>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label small fw-bold text-muted text-uppercase">Nama Suku Cadang</label>
                                <div class="input-group shadow-sm border rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-tag text-success"></i></span>
                                    <input type="text" name="name" class="form-control border-0 py-2" placeholder="Masukkan nama barang..." required>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted text-uppercase">Stok Awal</label>
                                <div class="input-group shadow-sm border rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-layer-group text-success"></i></span>
                                    <input type="number" name="stock" class="form-control border-0 py-2" min="0" required>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label small fw-bold text-muted text-uppercase">Supplier</label>
                                <div class="input-group shadow-sm border rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-truck-ramp-box text-success"></i></span>
                                    <input type="text" name="supplier" class="form-control border-0 py-2" placeholder="Nama distributor" required>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted text-uppercase text-danger">Harga Beli</label>
                                <div class="input-group shadow-sm border-start border-4 border-danger rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-0 fw-bold text-danger">Rp</span>
                                    <input type="number" name="purchasePrice" class="form-control border-0 py-2" placeholder="0" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted text-uppercase text-success">Harga Jual</label>
                                <div class="input-group shadow-sm border-start border-4 border-success rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-0 fw-bold text-success">Rp</span>
                                    <input type="number" name="price" class="form-control border-0 py-2" placeholder="0" required>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-success btn-emerald w-100 py-3 fw-bold rounded-3 shadow">
                                    <i class="fas fa-save me-2"></i>SIMPAN DATA
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a href="/parts" class="btn btn-outline-secondary w-100 py-3 fw-bold rounded-3">
                                    BATAL
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Logic untuk menangkap Error dari URL (Redirect error) dan menampilkannya sebagai Pop-up
    const urlParams = new URLSearchParams(window.location.search);
    const errorMsg = urlParams.get('error');

    if (errorMsg) {
        Swal.fire({
            icon: 'error',
            title: 'Terjadi Kesalahan',
            text: errorMsg,
            confirmButtonColor: '#2ecc71'
        });
    }

    // Integrasi Form Submit dengan AJAX agar error tidak perlu refresh halaman (Opsional)
    const form = document.getElementById('formAddPart');
    form.addEventListener('submit', async (e) => {
        // Jika Anda ingin menggunakan AJAX penuh, aktifkan code di bawah. 
        // Jika ingin standar redirect, biarkan code ini mati.
    });
</script>

