<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Sisfo Bengkel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'home' ? 'active' : '' %>" aria-current="page" href="/">Beranda</a>
                </li>
                
                <% if (typeof user !== 'undefined' && user.role === 'admin') { %>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'parts' ? 'active' : '' %>" href="/parts">Suku Cadang</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'services' ? 'active' : '' %>" href="/services">Jasa Servis</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'transactions' ? 'active' : '' %>" href="/transactions">Transaksi</a>
                </li>
                <% } %>
                
                <% if (typeof user !== 'undefined' && user.role === 'mekanik') { %>
                <li class="nav-item">
                    <a class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'jobs' ? 'active' : '' %>" href="/mekanik/jobs">Pekerjaan Saya</a>
                </li>
                <% } %>
            </ul>
            
            <ul class="navbar-nav ms-auto">
                <% if (typeof user !== 'undefined') { %>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'profile' ? 'active' : '' %>" href="/profile">
                            Profil (<%= user.role %>)
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="logout-link" href="/logout">Logout</a> 
                    </li>
                    
                    <script type="module">
                        // Pastikan Anda sudah mengimpor Firebase SDK di tempat lain (misalnya di index.ejs atau layout)
                        import { getAuth, signOut } from "firebase/auth";
                    
                        // Cek apakah element logout ada sebelum menambahkan listener
                        const logoutLink = document.getElementById('logout-link');
                    
                        if (logoutLink) {
                            logoutLink.addEventListener('click', async (e) => {
                                // 1. Mencegah navigasi langsung
                                e.preventDefault(); 
                                
                                const auth = getAuth();
                                
                                try {
                                    // 2. Sign out dari Firebase Auth di browser
                                    await signOut(auth); 
                                    console.log("CLIENT-SIDE: Firebase Sign out berhasil. Mengarahkan ke Server Logout.");
                                } catch (error) {
                                    // Walaupun gagal sign out, kita harus tetap menghapus cookie server.
                                    console.error("CLIENT-SIDE: Gagal sign out Firebase, namun tetap menghapus cookie server.", error);
                                }
                                
                                // 3. Lanjutkan ke rute server yang akan menghapus cookie HTTP-Only
                                window.location.href = '/logout'; 
                            });
                        }
                    </script>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'login' ? 'active' : '' %>" href="/login">Login</a>
                    </li>
                <% } %>
            </ul>

        </div>
