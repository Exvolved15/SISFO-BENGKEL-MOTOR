                <% if (typeof user !== 'undefined' && user && (user.role === 'admin' || user.role === 'kasir')) { %>
                    <li class="nav-item">
                        <a class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'parts' ? 'active' : '' %>" href="/parts">Suku Cadang</a>
