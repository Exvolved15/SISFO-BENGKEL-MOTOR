<div class="table-responsive">
    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Invoice</th>
                <th>Pelanggan</th>
                <th>Mekanik</th>
                <th>Total Kotor</th>
                <th>Diskon</th>
                <th>Total Bayar</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach(trx => { %> 
                <tr>
                    <td class="text-center"><strong><%= trx.invoiceNumber %></strong></td>
                    <td><%= trx.customerName %></td>
                    <td><%= trx.mechanicName || '-' %></td>
                    
                    <td class="text-end">Rp <%= (trx.totalAmount || 0).toLocaleString('id-ID') %></td>
                    
                    <td class="text-end text-danger">- Rp <%= (trx.discount || 0).toLocaleString('id-ID') %></td>
                    
                    <td class="text-end fw-bold">Rp <%= (trx.grandTotal || 0).toLocaleString('id-ID') %></td>
                    
                    <td class="text-center">
                        <div class="d-flex gap-2 justify-content-center">
                            <a href="/api/transactions/<%= trx._id %>/detail" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Detail
                            </a>
                            <a href="/api/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-secondary btn-sm">
                                <i class="fas fa-print"></i> Resi
                            </a>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>