<h1><%= title %></h1>
<p>Daftar riwayat penjualan suku cadang dan jasa servis.</p>

<div class="container-fluid px-4">
    <h1 class="mt-4">Riwayat Transaksi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Transaksi</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Data Transaksi Bengkel
            <a href="/transactions/add" class="btn btn-primary btn-sm float-end">
                <i class="fas fa-plus"></i> Transaksi Baru
            </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>No Invoice</th>
                        <th>Tanggal</th>
                        <th>Pelanggan</th>
                        <th>Mekanik</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transactions && transactions.length > 0) { %>
                        <% transactions.forEach(trx => { %>
                            <tr>
                                <td><%= trx.invoiceNumber %></td>
                                <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                <td>
                                    <%= trx.customerName %> <br>
                                    <small class="text-muted"><%= trx.vehicleLicense %></small>
                                </td>
                                <td><%= trx.mechanicName || '-' %></td>
                                <td>Rp <%= trx.grandTotal.toLocaleString('id-ID') %></td>
                                <td>
                                    <% if (trx.status === 'lunas') { %>
                                        <span class="badge bg-success">Lunas</span>
                                    <% } else { %>
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/transactions/<%= trx._id %>" class="btn btn-info btn-sm text-white">
                                        <i class="fas fa-eye"></i> Detail
                                    </a>
                                    <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-print"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %> <% } else { %> 
                        <tr>
                            <td colspan="7" class="text-center py-4">Belum ada riwayat transaksi.</td>
                        </tr>
                    <% } %> </tbody>
            </table>
        </div>
    </div>
</div>
<% } else { %>
    <div class="alert alert-warning" role="alert">
        Belum ada riwayat transaksi yang tersimpan.
    </div>
<% } %>