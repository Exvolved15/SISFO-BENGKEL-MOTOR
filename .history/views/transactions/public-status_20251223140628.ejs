<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg p-4" data-aos="zoom-in">
                <div class="text-center mb-4">
                    <h3 class="fw-bold text-success">STATUS PENGERJAAN</h3>
                    <p class="text-muted">No. Invoice: <%= transaction.invoiceNumber %></p>
                </div>

                <div class="alert bg-light border-start border-success border-4 mb-4">
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted d-block">Pelanggan:</small>
                            <span class="fw-bold"><%= transaction.customerName %></span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Unit Motor:</small>
                            <span class="fw-bold"><%= transaction.motorName %> (<%= transaction.vehicleLicense %>)</span>
                        </div>
                    </div>
                </div>

                <div class="px-4 py-5">
                    <% 
                        let status = job ? job.status : 'pending'; 
                        let percent = 0;
                        if(status === 'pending') percent = 33;
                        if(status === 'on_progress') percent = 66;
                        if(status === 'completed') percent = 100;
                    %>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" style="width: <%= percent %>%"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-3 small fw-bold">
                        <span class="<%= status === 'pending' ? 'text-success' : 'text-muted' %>">MENUNGGU</span>
                        <span class="<%= status === 'on_progress' ? 'text-success' : 'text-muted' %>">PROSES</span>
                        <span class="<%= status === 'completed' ? 'text-success' : 'text-muted' %>">SELESAI</span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="/" class="btn btn-outline-secondary px-4 rounded-pill">Kembali</a>
                </div>
            </div>
        </div>
    </div>
</div>