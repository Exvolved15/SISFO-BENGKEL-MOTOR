<div class="container-fluid px-4">
    <h1 class="mt-4">Riwayat Transaksi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Daftar Transaksi</li>
    </ol>

    <div class="card mb-4 shadow">
        <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
            <div>
                <i class="fas fa-table me-1"></i>
                Data Transaksi Bengkel
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Invoice</th>
                            <th>Pelanggan</th>
                            <th>Mekanik</th>
                            <th>Total</th>
                            <th class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transactions.forEach(trx => { %>
                            <tr>
                                <td class="fw-bold"><%= trx.invoiceNumber %></td>
                                <td><%= trx.customerName %> (<%= trx.vehicleLicense %>)</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        <i class="fas fa-user-cog me-1"></i> <%= trx.mechanicName || '-' %>
                                    </span>
                                </td>
                                <td>Rp <%= (trx.grandTotal || 0).toLocaleString('id-ID') %></td>
                                <td class="text-center">
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a href="/transactions/<%= trx._id %>" class="btn btn-primary btn-md px-3 shadow-sm">
                                            <i class="fas fa-eye me-1"></i> Detail
                                        </a>
                                        <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-secondary btn-md px-3 shadow-sm">
                                            <i class="fas fa-print"></i>
                                        </a>
                                    </div>
                                </td>
                                
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        
            <div class="mt-4 d-grid">
                <a href="/transactions/add" class="btn btn-success btn-lg py-3 shadow">
                    <i class="fas fa-plus-circle me-2"></i> BUAT TRANSAKSI BARU
                </a>
            </div>
        </div>
    </div>
</div>