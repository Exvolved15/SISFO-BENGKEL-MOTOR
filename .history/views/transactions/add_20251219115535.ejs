<div class="container-fluid px-4">
    <h1 class="mt-4">Transaksi Baru</h1>
    
    <div id="alertArea" class="mt-3"></div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-cart-plus me-1"></i> Form Transaksi Kasir
                </div>
                <div class="card-body">
                    <form id="transactionForm">
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nama Pelanggan</label>
                                <input type="text" class="form-control" id="customerName" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Plat Nomor</label>
                                <input type="text" class="form-control" id="vehicleLicense" required>
                            </div>
                        </div>

                        <hr>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tambah Suku Cadang</label>
                                <div class="input-group">
                                    <select class="form-select" id="partSelect">
                                        <option value="" selected disabled>-- Pilih Sparepart --</option>
                                        <% if(typeof parts !== 'undefined') { %>
                                            <% parts.forEach(part => { %>
                                                <option value="<%= part._id %>" 
                                                        data-type="part"
                                                        data-name="<%= part.name %>"
                                                        data-code="<%= part.code %>"
                                                        data-price="<%= part.price %>"
                                                        data-stock="<%= part.stock %>">
                                                    <%= part.name %> (Stok: <%= part.stock %>) - Rp <%= part.price.toLocaleString('id-ID') %>
                                                </option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                    <button class="btn btn-success" type="button" onclick="addItem('part')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tambah Jasa Servis</label>
                                <div class="input-group">
                                    <select class="form-select" id="serviceSelect">
                                        <option value="" selected disabled>-- Pilih Jasa --</option>
                                        <% if(typeof services !== 'undefined') { %>
                                            <% services.forEach(srv => { %>
                                                <option value="<%= srv._id %>" 
                                                        data-type="service"
                                                        data-name="<%= srv.serviceName %>"
                                                        data-code="<%= srv.serviceCode %>"
                                                        data-price="<%= srv.price %>"
                                                        data-stock="9999">
                                                    <%= srv.serviceName %> - Rp <%= srv.price.toLocaleString('id-ID') %>
                                                </option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                    <button class="btn btn-info text-white" type="button" onclick="addItem('service')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-bordered table-striped" id="cartTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nama Item</th>
                                        <th>Harga</th>
                                        <th style="width:100px;">Qty</th>
                                        <th>Subtotal</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                                        <td colspan="2" class="fw-bold fs-5" id="displayTotal">Rp 0</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Mekanik</label>
                                <select class="form-select" id="assignedTo">
                                    <option value="">-- Langsung Bayar (Tanpa Mekanik) --</option>
                                    <% if (typeof mechanics !== 'undefined' && mechanics.length > 0) { %>
                                        <% mechanics.forEach(mech => { %>
                                            <option value="<%= mech._id %>"><%= mech.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Metode Bayar</label>
                                <select class="form-select" id="paymentMethod">
                                    <option value="Cash">Tunai</option>
                                    <option value="Transfer">Transfer</option>
                                    <option value="QRIS">QRIS</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Catatan</label>
                                <input type="text" class="form-control" id="notes" placeholder="Catatan servis...">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-3" id="btnSubmit">
                            SIMPAN TRANSAKSI
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 1. Variabel Penampung Keranjang
    let cart = [];

    // 2. Fungsi Tambah Item (Dipanggil saat klik tombol +)
    function addItem(type) {
        // Tentukan ID Dropdown berdasarkan tipe
        let selectId = (type === 'part') ? 'partSelect' : 'serviceSelect';
        let selectElement = document.getElementById(selectId);
        
        // Ambil Option yang dipilih user
        let selectedOption = selectElement.options[selectElement.selectedIndex];
        
        // Validasi: Apakah user sudah memilih?
        if (selectElement.value === "" || !selectedOption) {
            alert("Harap pilih item terlebih dahulu!");
            return;
        }

        // Ambil Data dari Atribut "data-..."
        let itemId = selectedOption.value;
        let name = selectedOption.getAttribute('data-name');
        let price = parseFloat(selectedOption.getAttribute('data-price'));
        let stock = parseFloat(selectedOption.getAttribute('data-stock'));
        
        console.log("Menambahkan:", name, price); // Debugging di Console (F12)

        // Validasi Stok
        if (type === 'part' && stock <= 0) {
            alert("Stok barang ini habis!");
            return;
        }

        // Cek apakah item sudah ada di keranjang?
        let existingItem = cart.find(i => i.itemId === itemId);
        
        if (existingItem) {
            // Kalau sudah ada, tambah Qty
            if (type === 'part' && (existingItem.quantity + 1) > stock) {
                alert("Stok tidak cukup!");
                return;
            }
            existingItem.quantity++;
        } else {
            // Kalau belum ada, masukkan baru
            cart.push({
                itemId: itemId,
                itemType: type,
                name: name,
                pricePerUnit: price,
                quantity: 1
            });
        }

        // Render Ulang Tabel & Reset Dropdown
        renderCart();
        selectElement.value = ""; 
    }

    // 3. Fungsi Gambar Tabel
    function renderCart() {
        let tbody = document.querySelector("#cartTable tbody");
        tbody.innerHTML = ""; // Kosongkan tabel dulu
        let total = 0;

        if (cart.length === 0) {
            tbody.innerHTML = `<tr><td colspan="5" class="text-center text-muted">Keranjang Kosong</td></tr>`;
            document.getElementById("displayTotal").innerText = "Rp 0";
            return;
        }

        // Loop array cart dan buat baris HTML
        cart.forEach((item, index) => {
            let subtotal = item.quantity * item.pricePerUnit;
            total += subtotal;

            let row = `
                <tr>
                    <td>${item.name} <br> <small class="text-muted">${item.itemType.toUpperCase()}</small></td>
                    <td>Rp ${item.pricePerUnit.toLocaleString('id-ID')}</td>
                    <td>
                        <input type="number" min="1" class="form-control form-control-sm" style="width:70px"
                               value="${item.quantity}" onchange="updateQty(${index}, this.value)">
                    </td>
                    <td>Rp ${subtotal.toLocaleString('id-ID')}</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeItem(${index})">Hapus</button>
                    </td>
                </tr>
            `;
            tbody.innerHTML += row;
        });

        // Update Total
        document.getElementById("displayTotal").innerText = "Rp " + total.toLocaleString('id-ID');
    }

    // 4. Update Qty
    function updateQty(index, val) {
        let newQty = parseInt(val);
        if (newQty < 1) newQty = 1;
        cart[index].quantity = newQty;
        renderCart();
    }

    // 5. Hapus Item
    function removeItem(index) {
        cart.splice(index, 1);
        renderCart();
    }

    // 6. SUBMIT TRANSAKSI
    document.getElementById("transactionForm").addEventListener("submit", async function(e) {
        e.preventDefault();

        if (cart.length === 0) {
            alert("Keranjang belanja kosong!");
            return;
        }

        // Hitung Grand Total (Ambil dari teks display, bersihkan 'Rp ' dan titik)
        let totalText = document.getElementById("displayTotal").innerText;
        let totalVal = parseInt(totalText.replace(/[^0-9]/g, ''));

        const payload = {
            customerName: document.getElementById("customerName").value,
            vehicleLicense: document.getElementById("vehicleLicense").value,
            assignedTo: document.getElementById("assignedTo").value,
            paymentMethod: document.getElementById("paymentMethod").value,
            notes: document.getElementById("notes").value,
            totalAmount: totalVal,
            grandTotal: totalVal,
            itemDetails: cart // Kirim array cart langsung
        };

        let btn = document.getElementById("btnSubmit");
        btn.innerHTML = "Memproses...";
        btn.disabled = true;

        try {
            const res = await fetch('/api/transactions', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            const result = await res.json();

            if (res.ok) {
                alert("✅ Transaksi Berhasil!");
                window.location.href = "/transactions";
            } else {
                alert("❌ Gagal: " + result.message);
                btn.innerHTML = "SIMPAN TRANSAKSI";
                btn.disabled = false;
            }
        } catch (err) {
            alert("Error Koneksi: " + err.message);
            btn.innerHTML = "SIMPAN TRANSAKSI";
            btn.disabled = false;
        }
    });
</script>