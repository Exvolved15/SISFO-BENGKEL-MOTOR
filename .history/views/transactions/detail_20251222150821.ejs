<h1><%= title %></h1>

<a href="/transactions" class="btn btn-secondary mb-3">
    &larr; Kembali ke Daftar Transaksi
</a>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">Informasi Umum</div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th style="width: 40%;">Nomor Invoice</th>
                        <td>: <%= header.invoiceNumber %></td>
                    </tr>
                    <tr>
                        <th>Tanggal</th>
                        <td>: <%= new Date(header.createdAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                    </tr>
                    <tr>
                        <th>Pelanggan</th>
                        <td>: <%= header.customerName %></td>
                    </tr>
                    <tr>
                        <th>Plat Nomor</th>
                        <td>: <%= header.vehicleLicense %></td>
                    </tr>
                    <tr>
                        <th>Metode Bayar</th>
                        <td>: <span class="badge bg-primary"><%= header.paymentMethod %></span></td>
                    </tr>
                    <% if (header.notes) { %>
                        <tr>
                            <th>Catatan</th>
                            <td>: <%= header.notes %></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card bg-light mb-4">
            <div class="card-body">
                <h5 class="card-title">Ringkasan Pembayaran</h5>
                <hr>
                <tr>
                    <th>Total Kotor</th>
                    <td>: Rp <%= header.totalAmount.toLocaleString('id-ID') %></td>
                </tr>
                <tr>
                    <th>Diskon</th>
                    <td class="text-danger">: - Rp <%= header.discount.toLocaleString('id-ID') %></td>
                </tr>
                <tr>
                    <th>Total Bayar (Net)</th>
                    <td class="fw-bold">: Rp <%= header.grandTotal.toLocaleString('id-ID') %></td>
                </tr>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-info text-white">Item Penjualan</div>
    <div class="card-body">
        <% if (details.length > 0) { %>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Jenis</th>
                        <th>Kode Item</th>
                        <th>Nama Item</th>
                        <th>Harga Satuan (Rp)</th>
                        <th>Qty</th>
                        <th>Subtotal (Rp)</th>
                    </tr>
                </thead>
                <tbody>
                    <% details.forEach(item => { %>
                        <tr>
                            <td>
                                <span class="badge bg-<%= item.itemType === 'part' ? 'danger' : 'success' %>">
                                    <%= item.itemType.toUpperCase() %>
                                </span>
                            </td>
                            <td><%= item.itemCode %></td>
                            <td><%= item.itemName %></td>
                            <td><%= item.pricePerUnit.toLocaleString('id-ID') %></td>
                            <td><%= item.quantity %></td>
                            <td><%= item.subTotal.toLocaleString('id-ID') %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-muted">Tidak ada detail item yang tercatat untuk transaksi ini.</p>
        <% } %>
    </div>
</div>