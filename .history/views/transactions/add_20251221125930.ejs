<div class="container-fluid px-4">
    <h1 class="mt-4">Transaksi Baru</h1>
    
    <div id="alertArea" class="mt-3"></div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-cart-plus me-1"></i> Form Transaksi Kasir
                </div>
                <div class="card-body">
                    <form id="transactionForm">
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nama Pelanggan</label>
                                <input type="text" class="form-control" id="customerName" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Plat Nomor</label>
                                <input type="text" class="form-control" id="vehicleLicense" required>
                            </div>
                        </div>

                        <hr>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tambah Suku Cadang</label>
                                <div class="input-group">
                                    <select class="form-select" id="partSelect">
                                        <option value="" selected disabled>-- Pilih Sparepart --</option>
                                        
                                        <% if (typeof parts !== 'undefined' && parts.length > 0) { %>
                                            <% parts.forEach(part => { %>
                                                <option value="<%= part._id %>" 
                                                        data-type="part"
                                                        data-name="<%= part.name %>"
                                                        data-code="<%= part.code %>"
                                                        data-price="<%= part.price %>"
                                                        data-stock="<%= part.stock %>">
                                                    <%= part.name %> (Stok: <%= part.stock %>)
                                                </option>
                                            <% }) %>
                                        <% } else { %>
                                            <option disabled>DATA KOSONG (Cek Database)</option>
                                        <% } %>
                            
                                    </select>
                                    <button class="btn btn-success" type="button" onclick="addItem('part')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tambah Jasa Servis</label>
                                <div class="input-group">
                                    <select class="form-select" id="serviceSelect">
                                        <option value="" selected disabled>-- Pilih Jasa --</option>
                                        <% if(typeof services !== 'undefined') { %>
                                            <% services.forEach(srv => { %>
                                                <option value="<%= srv._id %>" 
                                                        data-type="service"
                                                        data-name="<%= srv.serviceName %>"
                                                        data-code="<%= srv.serviceCode %>"
                                                        data-price="<%= srv.price %>"
                                                        data-stock="9999">
                                                    <%= srv.serviceName %> - Rp <%= srv.price.toLocaleString('id-ID') %>
                                                </option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                    <button class="btn btn-info text-white" type="button" onclick="addItem('service')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-bordered table-striped" id="cartTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nama Item</th>
                                        <th>Harga</th>
                                        <th style="width:100px;">Qty</th>
                                        <th>Subtotal</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                                        <td colspan="2" class="fw-bold fs-5" id="displayTotal">Rp 0</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Mekanik</label>
                                <select class="form-select" id="assignedTo">
                                    <option value="">-- Langsung Bayar (Tanpa Mekanik) --</option>
                                    <% if (typeof mechanics !== 'undefined' && mechanics.length > 0) { %>
                                        <% mechanics.forEach(mech => { %>
                                            <option value="<%= mech._id %>"><%= mech.name %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Metode Bayar</label>
                                <select class="form-select" id="paymentMethod">
                                    <option value="Cash">Tunai</option>
                                    <option value="Transfer">Transfer</option>
                                    <option value="QRIS">QRIS</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Catatan</label>
                                <input type="text" class="form-control" id="notes" placeholder="Catatan servis...">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-3" id="btnSubmit">
                            SIMPAN TRANSAKSI
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 1. Inisialisasi State
    let cart = [];

    // 2. Fungsi Tambah Item (Suku Cadang atau Jasa)
    function addItem(type) {
        const selectId = (type === 'part') ? 'partSelect' : 'serviceSelect';
        const selectElement = document.getElementById(selectId);
        const selectedOption = selectElement.options[selectElement.selectedIndex];

        // Validasi pilihan
        if (selectElement.value === "" || !selectedOption || selectedOption.disabled) {
            alert("Silakan pilih item terlebih dahulu!");
            return;
        }

        // Ambil data dari atribut data- HTML
        const itemId = selectedOption.value;
        const name = selectedOption.getAttribute('data-name');
        const price = parseInt(selectedOption.getAttribute('data-price')) || 0;
        const stock = parseInt(selectedOption.getAttribute('data-stock')) || 0;

        // Validasi Stok khusus Suku Cadang
        if (type === 'part' && stock <= 0) {
            alert("Stok item ini habis!");
            return;
        }

        // Cek apakah item sudah ada di keranjang
        const existingItem = cart.find(i => i.itemId === itemId);
        
        if (existingItem) {
            // Jika ada, tambah quantity (cek stok jika tipe part)
            if (type === 'part' && (existingItem.quantity + 1) > stock) {
                alert("Jumlah melebihi stok yang tersedia!");
                return;
            }
            existingItem.quantity++;
        } else {
            // Jika belum ada, masukkan ke array cart
            cart.push({
                itemId: itemId,
                itemType: type,
                name: name,
                pricePerUnit: price,
                quantity: 1
            });
        }

        // Render ulang tabel dan reset dropdown
        renderCart();
        selectElement.value = ""; 
    }

    // 3. Fungsi Render Tabel & Hitung Total Otomatis
    function renderCart() {
        const tbody = document.querySelector("#cartTable tbody");
        const displayTotal = document.getElementById("displayTotal");
        
        tbody.innerHTML = "";
        let grandTotal = 0;

        if (cart.length === 0) {
            tbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">Keranjang Kosong</td></tr>';
            displayTotal.innerText = "Rp 0";
            return;
        }

        cart.forEach((item, index) => {
            const subtotal = item.quantity * item.pricePerUnit;
            grandTotal += subtotal;

            const row = `
                <tr>
                    <td>${item.name} <br> <small class="text-muted">${item.itemType === 'part' ? 'Suku Cadang' : 'Jasa'}</small></td>
                    <td>Rp ${item.pricePerUnit.toLocaleString('id-ID')}</td>
                    <td>
                        <input type="number" min="1" class="form-control form-control-sm" style="width:70px"
                               value="${item.quantity}" onchange="updateQty(${index}, this.value)">
                    </td>
                    <td>Rp ${subtotal.toLocaleString('id-ID')}</td>
                    <td>
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeItem(${index})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
            tbody.innerHTML += row;
        });

        // Update tampilan Total Biaya
        displayTotal.innerText = "Rp " + grandTotal.toLocaleString('id-ID');
    }

    // 4. Fungsi Update Quantity di Tabel
    function updateQty(index, val) {
        let newQty = parseInt(val);
        if (isNaN(newQty) || newQty < 1) newQty = 1;
        
        cart[index].quantity = newQty;
        renderCart();
    }

    // 5. Fungsi Hapus Item dari Tabel
    function removeItem(index) {
        cart.splice(index, 1);
        renderCart();
    }

    // 6. Submit Data ke Backend
    document.getElementById("transactionForm").addEventListener("submit", async function(e) {
        e.preventDefault();
        
        if (cart.length === 0) { 
            alert("Keranjang belanja masih kosong!"); 
            return; 
        }

        const btnSubmit = document.getElementById("btnSubmit");
        const originalText = btnSubmit.innerHTML;

        // Ambil nilai nominal tanpa format Rupiah
        const totalText = document.getElementById("displayTotal").innerText;
        const totalVal = parseInt(totalText.replace(/[^0-9]/g, ''));

        const payload = {
            customerName: document.getElementById("customerName").value,
            vehicleLicense: document.getElementById("vehicleLicense").value,
            assignedTo: document.getElementById("assignedTo").value || null,
            paymentMethod: document.getElementById("paymentMethod").value,
            notes: document.getElementById("notes").value,
            totalAmount: totalVal,
            grandTotal: totalVal,
            itemDetails: cart
        };

        // Loading state
        btnSubmit.disabled = true;
        btnSubmit.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Menyimpan...';

        try {
            const res = await fetch('/api/transactions', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            
            const result = await res.json();
            
            if (res.ok) {
                alert("Transaksi Berhasil Disimpan!");
                window.location.href = "/transactions";
            } else {
                alert("Gagal Simpan: " + (result.message || "Terjadi kesalahan server"));
                btnSubmit.disabled = false;
                btnSubmit.innerHTML = originalText;
            }
        } catch (err) {
            alert("Error Koneksi: " + err.message);
            btnSubmit.disabled = false;
            btnSubmit.innerHTML = originalText;
        }
    });
</script>