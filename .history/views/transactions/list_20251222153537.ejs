<div class="container-fluid px-4">
    <h1 class="mt-4">Riwayat Transaksi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Daftar Transaksi</li>
    </ol>

    <div class="card mb-4 shadow">
        <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
            <div>
                <i class="fas fa-table me-1"></i>
                Data Transaksi Bengkel
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>Invoice</th>
                            <th>Pelanggan</th>
                            <th>Mekanik</th>
                            <th>Total Kotor</th>
                            <th>Diskon</th>
                            <th>Total Bayar</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% transactions.forEach(trx => { %> 
                            <tr>
                                <td class="text-center"><strong><%= trx.invoiceNumber %></strong></td>
                                <td><%= trx.customerName %></td>
                                <td><%= trx.mechanicName || '-' %></td>
                                
                                <td class="text-end">Rp <%= (trx.totalAmount || 0).toLocaleString('id-ID') %></td>
                                
                                <td class="text-end text-danger">- Rp <%= (trx.discount || 0).toLocaleString('id-ID') %></td>
                                
                                <td class="text-end fw-bold">Rp <%= (trx.grandTotal || 0).toLocaleString('id-ID') %></td>
                                
                                <td class="text-center">
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a href="/api/transactions/<%= trx._id %>/detail" class="btn btn-info btn-sm">Detail</a>
                                        <a href="/api/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-secondary btn-sm">Resi</a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        
            <div class="mt-4 d-grid">
                <a href="/transactions/add" class="btn btn-success btn-lg py-3 shadow">
                    <i class="fas fa-plus-circle me-2"></i> BUAT TRANSAKSI BARU
                </a>
            </div>
        </div>
    </div>
</div>