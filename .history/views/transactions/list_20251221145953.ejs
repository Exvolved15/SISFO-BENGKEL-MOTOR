<div class="container-fluid px-4">
    <h1 class="mt-4">Riwayat Transaksi</h1>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-table me-1"></i> Data Transaksi Bengkel</span>
            <% if (user && user.role === 'kasir') { %>
                <a href="/transactions/add" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Transaksi Baru
                </a>
            <% } %>
        </div>
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>No Invoice</th>
                            <th>Tanggal</th>
                            <th>Pelanggan</th>
                            <th>Mekanik</th>
                            <th>Total</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions && transactions.length > 0) { %>
                            <% transactions.forEach(function(trx) { %>
                                <tr>
                                    <td><%= trx.invoiceNumber %></td>
                                    <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                    <td>
                                        <strong><%= trx.customerName %></strong><br>
                                        <small class="text-muted"><%= trx.vehicleLicense %></small>
                                    </td>
                                    <td><%= trx.mechanicName || '-' %></td>
                                    <td>Rp <%= (trx.grandTotal || 0).toLocaleString('id-ID') %></td>
                                    <td>
                                        <a href="/transactions/<%= trx._id %>" class="btn btn-info btn-sm text-white">
                                            <i class="fas fa-eye"></i> Detail
                                        </a>
                                        <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-print"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %> <% } else { %> 
                            <tr>
                                <td colspan="6" class="text-center py-4">Belum ada riwayat transaksi.</td>
                            </tr>
                        <% } %> </tbody>
                </table>
            </div>
        </div>
    </div>
</div>