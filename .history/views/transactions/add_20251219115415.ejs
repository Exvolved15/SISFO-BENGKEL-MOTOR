<div class="container-fluid px-4">
    <h1 class="mt-4">Transaksi Baru</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/transactions">Transaksi</a></li>
        <li class="breadcrumb-item active">Buat Baru</li>
    </ol>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-cart-plus me-1"></i> Form Transaksi Kasir
                </div>
                <div class="card-body">
                    <form id="transactionForm">
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="customerName" class="form-label fw-bold">Nama Pelanggan</label>
                                <input type="text" class="form-control" id="customerName" placeholder="Contoh: Budi Santoso" required>
                            </div>
                            <div class="col-md-6">
                                <label for="vehicleLicense" class="form-label fw-bold">Plat Nomor Kendaraan</label>
                                <input type="text" class="form-control" id="vehicleLicense" placeholder="Contoh: B 1234 CD" required>
                            </div>
                        </div>

                        <hr>

                        <div class="row mb-3">
                            <div class="col-md-5">
                                <label class="form-label fw-bold">Pilih Suku Cadang (Sparepart)</label>
                                <div class="input-group">
                                    <select class="form-select" id="partSelect">
                                        <option value="" selected disabled>-- Cari Suku Cadang --</option>
                                        <% parts.forEach(part => { %>
                                            <option value="<%= part._id %>" 
                                                    data-name="<%= part.name %>" 
                                                    data-price="<%= part.price %>" 
                                                    data-stock="<%= part.stock %>">
                                                <%= part.code %> - <%= part.name %> (Stok: <%= part.stock %>) | Rp <%= part.price.toLocaleString('id-ID') %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <button class="btn btn-success" type="button" onclick="addItemToTable('part')">
                                        <i class="fas fa-plus"></i> Tambah
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-5">
                                <label class="form-label fw-bold">Pilih Jasa Servis</label>
                                <div class="input-group">
                                    <select class="form-select" id="serviceSelect">
                                        <option value="" selected disabled>-- Cari Jasa Servis --</option>
                                        <% services.forEach(service => { %>
                                            <option value="<%= service._id %>" 
                                                    data-name="<%= service.serviceName %>" 
                                                    data-price="<%= service.price %>">
                                                <%= service.serviceCode %> - <%= service.serviceName %> | Rp <%= service.price.toLocaleString('id-ID') %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <button class="btn btn-info text-white" type="button" onclick="addItemToTable('service')">
                                        <i class="fas fa-plus"></i> Tambah
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive mb-4">
                            <table class="table table-bordered table-striped" id="itemTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nama Item</th>
                                        <th>Tipe</th>
                                        <th>Harga Satuan</th>
                                        <th style="width: 100px;">Qty</th>
                                        <th>Subtotal</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id="emptyRow">
                                        <td colspan="6" class="text-center text-muted">Belum ada item yang ditambahkan.</td>
                                    </tr>
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="4" class="text-end fw-bold">Total Biaya:</td>
                                        <td colspan="2" class="fw-bold fs-5" id="grandTotalDisplay">Rp 0</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <hr>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="assignedTo" class="form-label fw-bold">Tugaskan Mekanik (Opsional)</label>
                                <select class="form-select" id="assignedTo">
                                    <option value="">-- Tanpa Mekanik (Langsung Bayar) --</option>
                                    
                                    <% /* CEK APAKAH VARIABLE MECHANICS ADA? */ %>
                                    <% if (typeof mechanics !== 'undefined' && mechanics.length > 0) { %>
                                        
                                        <% mechanics.forEach(mech => { %>
                                            <option value="<%= mech._id %>"><%= mech.name %></option>
                                        <% }) %>
                                
                                    <% } else { %>
                                        <option value="" disabled>Data Mekanik Tidak Tersedia</option>
                                    <% } %>
                                </select>
                                <div class="form-text">Kosongkan jika hanya membeli sparepart.</div>
                            </div>

                            <div class="col-md-4">
                                <label for="paymentMethod" class="form-label fw-bold">Metode Pembayaran</label>
                                <select class="form-select" id="paymentMethod">
                                    <option value="Cash">Tunai (Cash)</option>
                                    <option value="Transfer">Transfer Bank</option>
                                    <option value="QRIS">QRIS</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label for="notes" class="form-label fw-bold">Catatan / Keluhan</label>
                                <textarea class="form-control" id="notes" rows="1" placeholder="Cth: Ganti oli dan cek rem"></textarea>
                            </div>
                        </div>

                        <input type="hidden" id="totalAmount" name="totalAmount" value="0">
                        <input type="hidden" id="grandTotal" name="grandTotal" value="0">

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i> Proses Transaksi & Cetak
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Variable Global Keranjang
    let cart = [];

    // Fungsi Tambah Item
    function addItemToTable(type) {
        let selectId = (type === 'part') ? 'partSelect' : 'serviceSelect';
        let selectElement = document.getElementById(selectId);
        
        // Validasi: Apakah user sudah memilih?
        if (!selectElement || selectElement.value === "") {
            alert("Silakan pilih item dari dropdown terlebih dahulu!");
            return;
        }

        // Ambil Data dari Atribut HTML (data-...)
        let selectedOption = selectElement.options[selectElement.selectedIndex];
        let itemId = selectedOption.value;
        let itemName = selectedOption.getAttribute('data-name');
        let price = parseFloat(selectedOption.getAttribute('data-price') || 0);
        let stock = parseFloat(selectedOption.getAttribute('data-stock') || 9999); // Jasa dianggap stok banyak

        // Validasi Stok untuk Part
        if (type === 'part' && stock <= 0) {
            alert("Stok barang ini habis!");
            return;
        }

        // Cek apakah item sudah ada di keranjang? (Jika ada, tambah Qty saja)
        let existingItem = cart.find(item => item.itemId === itemId);
        if (existingItem) {
            if (type === 'part' && (existingItem.quantity + 1) > stock) {
                alert("Stok tidak mencukupi untuk menambah lagi!");
                return;
            }
            existingItem.quantity += 1;
        } else {
            // Jika belum ada, masukkan item baru
            cart.push({
                itemId: itemId,
                itemType: type,
                itemName: itemName,
                pricePerUnit: price,
                quantity: 1
            });
        }

        renderTable(); // Gambar ulang tabel
        
        // Reset dropdown ke default
        selectElement.value = "";
    }

    // Fungsi Render (Gambar) Tabel
    function renderTable() {
        const tbody = document.querySelector("#itemTable tbody");
        tbody.innerHTML = ""; // Bersihkan tabel lama

        let total = 0;

        if (cart.length === 0) {
            tbody.innerHTML = `<tr id="emptyRow"><td colspan="6" class="text-center text-muted">Belum ada item.</td></tr>`;
            updateTotal(0);
            return;
        }

        cart.forEach((item, index) => {
            let subtotal = item.quantity * item.pricePerUnit;
            total += subtotal;
            
            // Badge Tipe
            let typeBadge = item.itemType === 'part' 
                ? '<span class="badge bg-success">Part</span>' 
                : '<span class="badge bg-info text-dark">Jasa</span>';

            let row = `
                <tr>
                    <td>${item.itemName}</td>
                    <td>${typeBadge}</td>
                    <td>Rp ${item.pricePerUnit.toLocaleString('id-ID')}</td>
                    <td>
                        <input type="number" min="1" class="form-control form-control-sm" 
                               value="${item.quantity}" onchange="updateQty(${index}, this.value)">
                    </td>
                    <td>Rp ${subtotal.toLocaleString('id-ID')}</td>
                    <td>
                        <button type="button" onclick="removeItem(${index})" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
            tbody.innerHTML += row;
        });

        updateTotal(total);
    }

    // Fungsi Update Total
    function updateTotal(total) {
        document.getElementById('grandTotalDisplay').innerText = "Rp " + total.toLocaleString('id-ID');
        document.getElementById('totalAmount').value = total;
        document.getElementById('grandTotal').value = total; // Jika ada diskon, logic ditambah disini
    }

    // Fungsi Ganti Qty
    function updateQty(index, newQty) {
        let qty = parseInt(newQty);
        if (qty < 1) qty = 1;
        cart[index].quantity = qty;
        renderTable();
    }

    // Fungsi Hapus Item
    function removeItem(index) {
        cart.splice(index, 1);
        renderTable();
    }

    // === SUBMIT KE BACKEND ===
    document.getElementById('transactionForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        // Cek Keranjang
        if (cart.length === 0) {
            alert("Keranjang belanja kosong! Tambahkan item dulu.");
            return;
        }

        // Ambil Data Form
        const payload = {
            customerName: document.getElementById('customerName').value,
            vehicleLicense: document.getElementById('vehicleLicense').value,
            assignedTo: document.getElementById('assignedTo').value, // ID Mekanik
            paymentMethod: document.getElementById('paymentMethod').value,
            notes: document.getElementById('notes').value,
            totalAmount: document.getElementById('totalAmount').value,
            grandTotal: document.getElementById('grandTotal').value,
            itemDetails: cart // Array Keranjang
        };

        // Kirim ke API
        const submitBtn = document.querySelector("button[type='submit']");
        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = "Memproses...";

        try {
            const res = await fetch('/api/transactions', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });

            const result = await res.json();

            if (res.ok) {
                alert("✅ Transaksi Berhasil Disimpan!");
                window.location.href = "/transactions"; 
            } else {
                alert("❌ Gagal: " + result.message);
                console.error(result);
            }
        } catch (err) {
            alert("⚠️ Error Koneksi: " + err.message);
        } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    });
</script>