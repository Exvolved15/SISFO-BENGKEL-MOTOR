<h1><%= title %></h1>
<p>Daftar riwayat penjualan suku cadang dan jasa servis.</p>

<a href="/transactions/add" class="btn btn-primary mb-3">Buat Transaksi Baru</a>

<% if (transactions.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Invoice</th>
                    <th>Pelanggan</th>
                    <th>Plat Nomor</th>
                    <th>Total Bayar</th>
                    <th>Metode</th>
                    <th>Tanggal</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(trx => { %>
                    <tr>
                        <td><%= trx.invoiceNumber %></td>
                        <td><%= trx.customerName %></td>
                        <td><%= trx.vehicleLicense %></td>
                        <td>Rp <%= trx.grandTotal.toLocaleString('id-ID') %></td>
                        <td><%= trx.paymentMethod %></td>
                        <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                        <td>
                            <a href="/transactions/<%= trx._id %>" class="btn btn-sm btn-info me-2 text-white">Detail</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-warning" role="alert">
        Belum ada riwayat transaksi yang tersimpan.
    </div>
<% } %>