<h1><%= title %></h1>
<p>Daftar riwayat penjualan suku cadang dan jasa servis.</p>

<div class="container-fluid px-4">
    <h1 class="mt-4">Riwayat Transaksi</h1>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-table me-1"></i> Riwayat Transaksi</span>
            <% if (user.role === 'kasir') { %>
                <a href="/transactions/add" class="btn btn-primary btn-sm">Buat Transaksi</a>
            <% } %>
        </div>
        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Invoice</th>
                    <th>Pelanggan</th>
                    <th>Total</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (transactions && transactions.length > 0) { %>
                    <% transactions.forEach(trx => { %>
                        <tr>
                            <td><%= trx.invoiceNumber %></td>
                            <td><%= trx.customerName %></td>
                            <td>Rp <%= trx.grandTotal.toLocaleString('id-ID') %></td>
                            <td><a href="/transactions/<%= trx._id %>" class="btn btn-sm btn-info">Detail</a></td>
                        </tr>
                    <% }) %> 
                <% } else { %> <tr>
                        <td colspan="4" class="text-center">Data tidak ditemukan</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>No Invoice</th>
                        <th>Tanggal</th>
                        <th>Pelanggan</th>
                        <th>Mekanik</th>
                        <th>Total</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transactions && transactions.length > 0) { %>
                        
                        <% transactions.forEach(trx => { %>
                            <tr>
                                <td><%= trx.invoiceNumber %></td>
                                <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                <td><%= trx.customerName %> <br> <small class="text-muted"><%= trx.vehicleLicense %></small></td>
                                <td><%= trx.mechanicName || '-' %></td>
                                <td>Rp <%= trx.grandTotal.toLocaleString('id-ID') %></td>
                                <td>
                                    <a href="/transactions/<%= trx._id %>" class="btn btn-info btn-sm text-white">Detail</a>
                                </td>
                            </tr>
                        <% }) %>

                    <% } else { %> <tr>
                            <td colspan="6" class="text-center py-4">Belum ada riwayat transaksi.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<% } else { %>
    <div class="alert alert-warning" role="alert">
        Belum ada riwayat transaksi yang tersimpan.
    </div>
<% } %>