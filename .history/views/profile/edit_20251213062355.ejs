<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1><%= title %></h1>
        <p class="text-muted">Perbarui informasi dasar dan kata sandi Anda.</p>

        <% if (typeof query !== 'undefined' && query.success || successMessage) { %>
            <div class="alert alert-success" role="alert">
                Profil berhasil diperbarui!
            </div>
        <% } %>
        
        <% if (errors && errors.general) { %>
            <div class="alert alert-danger" role="alert">
                Gagal memperbarui: <%= errors.general %>.
            </div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <form action="/profile" method="POST">
                    
                    <h5 class="mb-3">Informasi Dasar</h5>
                    <div class="mb-3">
                        <label for="name" class="form-label">Nama</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    </div>
                    
                    <hr>
                    <h5 class="mb-3">Ubah Kata Sandi (Opsional)</h5>

                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Password Lama</label>
                        <input type="password" class="form-control" id="currentPassword" name="currentPassword" placeholder="Diperlukan jika ingin ganti password">
                    </div>
                    
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Password Baru</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Minimal 6 karakter">
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Simpan Perubahan</button>
                </form>
            </div>
        </div>
    </div>
</div>