<div class="container-fluid px-4 py-4">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Antrean Servis Baru</h5>
                </div>
                <div class="card-body bg-light">
                    <% if (pendingJobs.length > 0) { %>
                        <% pendingJobs.forEach(job => { %>
                            <div class="card mb-3 shadow-sm border-0">
                                <div class="card-body">
                                    <h6>Unit: <%= job.vehicleLicense %></h6>
                                    <p>Pemilik: <%= job.customerId ? job.customerId.name : 'Umum' %></p>
                                    <button onclick="startJob('<%= job._id %>')" class="btn btn-warning">Kerjakan</button>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-coffee fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Belum ada antrean. Waktunya istirahat!</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-user-cog me-2"></i>Sedang Saya Kerjakan</h5>
                </div>
                <div class="card-body">
                    <% 
                    const myJobs = historyJobs.filter(j => {
                        // Ambil ID Mekanik dari berbagai kemungkinan field yang Anda gunakan
                        const idMekanikDiJob = j.mechanicId || j.assignedTo;
                        
                        // Pastikan ID ada dan cocok dengan ID user login (konversi ke String)
                        const isOwner = idMekanikDiJob && idMekanikDiJob._id 
                            ? idMekanikDiJob._id.toString() === user._id.toString()
                            : idMekanikDiJob && idMekanikDiJob.toString() === user._id.toString();

                        return isOwner && j.status === 'on_progress';
                    });
                    %>

                <div class="card-body">
                    <% if (myJobs.length > 0) { %>
                        <% myJobs.forEach(job => { %>
                            <div class="p-3 border rounded-3 bg-white mb-3 shadow-sm d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold text-uppercase"><%= job.vehicleLicense %></div>
                                    <small class="text-muted"><%= job.customer.name %></small>
                                </div>
                                <button onclick="finishJob('<%= job._id %>')" class="btn btn-success px-4 fw-bold">SELESAI</button>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-muted py-4">Kamu tidak memiliki pekerjaan aktif.</p>
                    <% } %>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white py-2">
                    <h6 class="mb-0 small">Update Terakhir Bengkel</h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush small">
                        <% historyJobs.slice(0, 5).forEach(job => { %>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><%= job.vehicleLicense %> (<%= job.assignedTo ? job.assignedTo.name : 'Unknown' %>)</span>
                                <span class="text-success fw-bold"><%= job.status %></span>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function finishJob(id) {
        if(confirm('Apakah pekerjaan ini sudah benar-benar selesai?')) {
            // GANTI URL menjadi /api/jobs/finish/ agar sinkron dengan app.js
            fetch(`/api/jobs/finish/${id}`, { 
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (response.ok) {
                    alert('Pekerjaan berhasil diselesaikan!');
                    window.location.reload(); // Refresh halaman agar pindah ke riwayat
                } else {
                    alert('Gagal memperbarui status. Coba lagi.');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('Terjadi kesalahan koneksi.');
            });
        }
    }
    </script>