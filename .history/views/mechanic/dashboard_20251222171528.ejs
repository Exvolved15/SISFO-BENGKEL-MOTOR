<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard Mekanik</h1>
    <p class="text-muted">Halo, <%= user.name %>! Selamat bekerja.</p>

    <div class="row g-4">
        <div class="col-xl-7">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-clipboard-list me-2"></i>Antrean Servis Baru</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Invoice</th>
                                    <th>Pelanggan</th>
                                    <th>Kendaraan</th>
                                    <th class="text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (pendingJobs && pendingJobs.length > 0) { %>
                                    <% pendingJobs.forEach(job => { %>
                                        <tr>
                                            <td><span class="badge bg-light text-dark border"><%= job.invoiceNumber %></span></td>
                                            <td><%= job.customer?.name || 'Umum' %></td>
                                            <td>
                                                <strong><%= job.vehicleLicense %></strong><br>
                                                <small class="badge bg-secondary"><%= job.motorName || '-' %></small>
                                            </td>
                                            <td class="text-center">
                                                <form action="/api/jobs/take-job/<%= job._id %>" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-primary btn-sm px-3 shadow-sm">
                                                        <i class="fas fa-tools me-1"></i> Kerjakan
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted italic">Tidak ada antrean servis baru.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Riwayat Pekerjaan Saya (Selesai)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Tanggal Selesai</th>
                                    <th>No. Invoice</th>
                                    <th>Kendaraan</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof completedJobs !== 'undefined' && completedJobs.length > 0) { %>
                                    <% completedJobs.forEach(job => { %>
                                        <tr>
                                            <td class="small">
                                                <%= job.completedAt ? new Date(job.completedAt).toLocaleString('id-ID') : '-' %>
                                            </td>
                                            <td><strong><%= job.invoiceNumber %></strong></td>
                                            <td>
                                                <%= job.vehicleLicense %><br>
                                                <small class="text-muted"><%= job.motorName %></small>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-success text-white">Selesai</span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-3 text-muted italic">Belum ada riwayat pekerjaan selesai.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-spinner fa-spin me-2"></i>Sedang Saya Kerjakan</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <% 
                        let activeJob = null;
                        if (typeof historyJobs !== 'undefined' && Array.isArray(historyJobs)) {
                            activeJob = historyJobs.find(j => 
                                j.status === 'on_progress' && 
                                j.mechanicId?._id.toString() === user._id.toString()
                            );
                        }
                    %>

                    <% if (activeJob) { %>
                        <div class="bg-light p-3 rounded border mb-3 shadow-sm">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">No. Invoice:</span>
                                <span class="fw-bold"><%= activeJob.invoiceNumber %></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Kendaraan:</span>
                                <div>
                                    <span class="fw-bold text-primary"><%= activeJob.vehicleLicense %></span><br>
                                    <small class="badge bg-secondary float-end"><%= activeJob.motorName %></small>
                                </div>
                            </div>
                            <hr>
                            <p class="small text-muted mb-2">Deskripsi Kerja:</p>
                            <p class="fw-bold mb-3