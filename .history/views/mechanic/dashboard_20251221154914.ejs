<div class="container-fluid px-4 py-4">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Antrean Servis</h5>
                </div>
                <div class="card-body">
                    <% if (pendingJobs.length > 0) { %>
                        <% pendingJobs.forEach(job => { %>
                            <div class="card mb-3 border-left-primary shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-bold text-primary"><%= job.vehicleLicense %></h6>
                                        <small class="text-muted"><%= job.invoiceNumber %></small>
                                    </div>
                                    <p class="mb-2">Customer: <strong><%= job.customer.name %></strong></p>
                                    <form action="/jobs/take-job/<%= job._id %>" method="POST">
                                        <button class="btn btn-primary w-100 btn-sm">AMBIL PEKERJAAN</button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-muted my-4">Belum ada antrean baru.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-wrench me-2"></i>Sedang Saya Kerjakan</h5>
                </div>
                <div class="card-body">
                    <% const myJobs = historyJobs.filter(j => j.assignedTo && j.assignedTo._id.toString() === user._id.toString() && j.status === 'on_progress') %>
                    <% if (myJobs.length > 0) { %>
                        <% myJobs.forEach(job => { %>
                            <div class="p-3 border rounded bg-light mb-2 d-flex justify-content-between align-items-center">
                                <span><strong><%= job.vehicleLicense %></strong> - <%= job.customer.name %></span>
                                <button onclick="markAsDone('<%= job._id %>')" class="btn btn-success btn-sm">SELESAI</button>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-muted text-center">Tidak ada pekerjaan aktif.</p>
                    <% } %>
                </div>
            </div>

            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0 small">Aktivitas Bengkel Terakhir</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <% historyJobs.slice(0, 5).forEach(job => { %>
                            <li class="list-group-item small">
                                <strong><%= job.vehicleLicense %></strong> dikerjakan oleh 
                                <span class="badge bg-secondary"><%= job.assignedTo ? job.assignedTo.name : 'Unknown' %></span>
                                <span class="float-end text-success"><%= job.status %></span>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function markAsDone(id) {
    if(confirm('Tandai pekerjaan ini sudah selesai?')) {
        fetch(`/jobs/finish/${id}`, { method: 'POST' })
        .then(() => window.location.reload());
    }
}
</script>