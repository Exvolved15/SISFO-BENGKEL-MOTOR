<div class="container-fluid px-4 py-4">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-8 p-4 d-flex align-items-center bg-white">
                    <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center text-dark shadow-sm overflow-hidden" 
                         style="width: 80px; height: 80px; min-width: 80px; border: 3px solid #f8f9fa;">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>?t=<%= Date.now() %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <span style="font-size: 2rem; font-weight: bold;"><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    
                    <div class="ms-4">
                        <h3 class="mb-1 fw-bold text-dark">Halo, <%= user.name %>!</h3>
                        <p class="text-muted mb-0">
                            <span class="badge bg-dark me-2 text-warning">Mekanik</span>
                            <i class="fas fa-tools me-1"></i> <%= user.department || 'General Repair' %>
                        </p>
                    </div>
                </div>
                <div class="col-md-4 bg-light p-4 d-flex align-items-center border-start">
                    <div class="w-100 text-center text-md-start">
                        <div class="small text-muted mb-1">Status Kehadiran:</div>
                        <span class="badge bg-success px-3 py-2"><i class="fas fa-check-circle me-1"></i> Online & Aktif</span>
                        <a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-outline-dark d-block mt-3">
                            <i class="fas fa-user-cog me-1"></i> Edit Profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% 
        let activeJob = null; 
        if (typeof historyJobs !== 'undefined' && Array.isArray(historyJobs)) {
            activeJob = historyJobs.find(j => j.status === 'on_progress');
        }
    %>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4 h-100" style="border-radius: 12px;">
                <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-wrench me-2 text-warning"></i>Pekerjaan Berjalan</h5>
                    <% if (activeJob) { %>
                        <span class="badge bg-warning text-dark pulse">SEDANG DIKERJAKAN</span>
                    <% } %>
                </div>
                <div class="card-body p-4">
                    <% if (activeJob) { %>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="text-muted small d-block mb-1">NOMOR INVOICE</label>
                                <h5 class="fw-bold text-primary"><%= activeJob.invoiceNumber %></h5>
                            </div>
                            <div class="col-md-6 mb-4 text-md-end">
                                <label class="text-muted small d-block mb-1">TANGGAL MULAI</label>
                                <p class="mb-0"><%= new Date(activeJob.createdAt).toLocaleString('id-ID') %></p>
                            </div>
                            
                            <div class="col-12">
                                <div class="bg-light rounded-3 p-3 border-start border-4 border-warning">
                                    <div class="row">
                                        <div class="col-6 col-md-4 mb-2">
                                            <small class="text-muted d-block">Pelanggan</small>
                                            <span class="fw-bold"><%= activeJob.customer?.name || 'Umum' %></span>
                                        </div>
                                        <div class="col-6 col-md-4 mb-2">
                                            <small class="text-muted d-block">Tipe Motor</small>
                                            <span class="fw-bold"><%= activeJob.motorName || '-' %></span>
                                        </div>
                                        <div class="col-12 col-md-4 mb-2">
                                            <small class="text-muted d-block">Nomor Polisi</small>
                                            <span class="badge bg-dark fs-6"><%= activeJob.vehicleLicense %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <h6 class="fw-bold"><i class="fas fa-clipboard-list me-2"></i>Keluhan & Instruksi:</h6>
                                <div class="alert alert-secondary border-0 mt-2" style="background-color: #f1f3f5;">
                                    <%= activeJob.description || 'Tidak ada deskripsi pengerjaan' %>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button onclick="finishWork('<%= activeJob._id %>')" class="btn btn-success btn-lg w-100 shadow-sm py-3 fw-bold">
                                <i class="fas fa-check-double me-2"></i> SELESAIKAN PEKERJAAN
                            </button>
                        </div>

                    <% } else { %>
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-ghost fa-4x text-light"></i>
                            </div>
                            <h5 class="text-muted">Antrean Kosong</h5>
                            <p class="text-muted small">Anda belum memulai pekerjaan apapun hari ini.</p>
                            <a href="/jobs/queue" class="btn btn-primary px-4 shadow-sm">
                                <i class="fas fa-list me-1"></i> Lihat Antrean
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 bg-primary text-white mb-4">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-history fa-2x mb-3 opacity-50"></i>
                    <h6 class="text-white-50">Pekerjaan Selesai (Hari Ini)</h6>
                    <h1 class="display-4 fw-bold">0</h1>
                </div>
            </div>
            
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4 text-center">
                    <p class="text-muted small mb-1">Status Sistem Mekanik</p>
                    <div class="d-flex align-items-center justify-content-center text-success">
                        <i class="fas fa-circle me-2" style="font-size: 10px;"></i>
                        <span class="fw-bold">Sinkronisasi Cloud Aktif</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .pulse {
        animation: pulse-animation 2s infinite;
    }
    @keyframes pulse-animation {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
    .rounded-3 { border-radius: 12px !important; }
</style>

<script>
async function finishWork(jobId) {
    if (!confirm('Apakah pekerjaan ini sudah benar-benar selesai?')) return;
    try {
        const response = await fetch(`/api/jobs/finish/${jobId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        const result = await response.json();
        if (result.success) {
            alert('Pekerjaan diselesaikan! Bagus sekali.');
            window.location.reload();
        } else {
            alert('Gagal: ' + result.message);
        }
    } catch (err) {
        alert('Kesalahan koneksi ke server');
    }
}
</script>