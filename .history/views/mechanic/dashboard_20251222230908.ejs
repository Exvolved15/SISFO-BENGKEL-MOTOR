<div class="container py-4">
    <div class="mb-3">
        <a href="/api/users" class="btn btn-secondary btn-sm">‚Üê Kembali ke Daftar Transaksi</a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informasi Umum</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-7 border-end">
                    <h5 class="border-bottom pb-2 mb-3 text-primary">Informasi Kendaraan</h5>
                    
                    
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Nomor Invoice</div>
                        <div class="col-7 fw-bold">: <%= header.invoiceNumber %></div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Tanggal</div>
                        <div class="col-7">: <%= new Date(header.createdAt).toLocaleString('id-ID', { dateStyle: 'long', timeStyle: 'short' }) %></div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Pelanggan</div>
                        <div class="col-7 fw-bold">: <%= header.customerName %></div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Tipe Motor</div>
                        <div class="col-7">: <%= header.motorName || '-' %></div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Nomor Polisi</div>
                        <div class="col-7 fw-bold">: <%= header.vehicleLicense %></div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Mekanik</div>
                        <div class="col-7">
                            <span class="badge bg-info text-dark">
                                : <%= header.mechanicName || 'Tanpa Mekanik' %>
                            </span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">Metode Bayar:</span>
                        <div class="badge bg-primary w-100 py-2 mt-1 text-uppercase"><%= header.paymentMethod %></div>
                    </div>
                </div>

                <div class="col-md-5 ps-md-4">
                    <h5 class="border-bottom pb-2 mb-3 text-primary">Ringkasan Pembayaran</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Kotor :</span>
                        <span>Rp <%= (header.totalAmount || 0).toLocaleString('id-ID') %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 text-danger">
                        <span>Diskon :</span>
                        <span>- Rp <%= (header.discount || 0).toLocaleString('id-ID') %></span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Total Bayar :</span>
                        <span class="text-success">Rp <%= (header.grandTotal || 0).toLocaleString('id-ID') %></span>
                    </div>
                    <div class="mt-4">
                        <a href="/api/transactions/print/<%= header._id %>" target="_blank" class="btn btn-dark w-100">
                            <i class="fas fa-print me-2"></i>Cetak Resi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Item Penjualan</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Jenis</th>
                            <th>Kode Item</th>
                            <th class="text-start">Nama Item</th>
                            <th>Harga Satuan</th>
                            <th>Qty</th>
                            <th class="text-end px-4">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <% if (details && details.length > 0) { %>
                            <% details.forEach(item => { %>
                            <tr>
                                <td>
                                    <span class="badge <%= item.itemType === 'part' ? 'bg-danger' : 'bg-warning text-dark' %>">
                                        <%= item.itemType.toUpperCase() %>
                                    </span>
                                </td>
                                <td><code><%= item.itemCode %></code></td>
                                <td class="text-start"><%= item.itemName %></td>
                                <td><%= (item.pricePerUnit || 0).toLocaleString('id-ID') %></td>
                                <td class="fw-bold"><%= item.quantity %></td>
                                <td class="text-end px-4 fw-bold text-primary">
                                    Rp <%= (item.subTotal || 0).toLocaleString('id-ID') %>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="6" class="py-4 text-muted italic">Tidak ada rincian item.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>