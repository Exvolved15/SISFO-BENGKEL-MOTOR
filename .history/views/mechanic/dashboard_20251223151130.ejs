<% 
    // 1. INISIALISASI DATA
    let activeJob = null;
    let pendingJobs = [];
    let completedJobs = [];
    
    if (typeof historyJobs !== 'undefined' && Array.isArray(historyJobs)) {
        activeJob = historyJobs.find(j => j.status === 'on_progress');
        pendingJobs = historyJobs.filter(j => j.status === 'pending');
        completedJobs = historyJobs.filter(j => j.status === 'completed');
    }
%>

<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-8 p-4 d-flex align-items-center bg-white">
                    <div class="profile-avatar-container rounded-circle bg-warning d-flex align-items-center justify-content-center text-dark shadow-sm overflow-hidden border border-4 border-light" 
                         style="width: 90px; height: 90px; min-width: 90px;">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>?t=<%= Date.now() %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <span style="font-size: 2.5rem; font-weight: bold;"><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    
                    <div class="ms-4">
                        <h3 class="mb-1 fw-bold text-dark">Mekanik: <%= user.name %></h3>
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            <span class="badge bg-dark text-warning border border-warning border-opacity-25 px-3 py-2 rounded-pill">
                                <i class="fas fa-wrench me-1"></i> Technical Specialist
                            </span>
                            <% if (activeJob) { %>
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3 py-2 rounded-pill pulse">
                                    <i class="fas fa-hammer fa-spin me-1"></i> Sedang Menangani Unit
                                </span>
                            <% } else { %>
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                    <i class="fas fa-circle-check me-1"></i> Standby / Siap Bekerja
                                </span>
                            <% } %>
                        </div>
                        <p class="text-muted mb-0 small"><i class="fas fa-fingerprint me-1"></i> Tech-ID: <%= user._id.toString().slice(-6).toUpperCase() %></p>
                    </div>
                </div>
                
                <div class="col-md-4 bg-light p-4 d-flex align-items-center border-start border-opacity-10">
                    <div class="w-100">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small text-muted fw-bold text-uppercase">Produktivitas Hari Ini</span>
                            <span class="small fw-bold text-success"><%= completedJobs.length %> Unit Selesai</span>
                        </div>
                        <div class="progress mb-3" style="height: 10px; border-radius: 10px;">
                            <% 
                                let target = 5; 
                                let progressPercent = (completedJobs.length / target) * 100;
                            %>
                            <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: <%= progressPercent %>%"></div>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-dark flex-grow-1 rounded-pill">
                                <i class="fas fa-user-gear me-1"></i> Akun
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4 rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-toolbox me-2 text-warning"></i>Work Order Aktif</h5>
                    <% if (activeJob) { %>
                        <span class="badge bg-warning text-dark px-3 rounded-pill fw-bold">ON PROGRESS</span>
                    <% } %>
                </div>
                <div class="card-body p-4 <%= !activeJob ? 'bg-light bg-opacity-50' : 'bg-white' %>">
                    <% if (activeJob) { %>
                        <div class="row mb-4 align-items-center">
                            <div class="col-md-7">
                                <div class="d-flex align-items-center mb-2">
                                    <h4 class="fw-bold text-primary mb-0 me-3"><%= activeJob.invoiceNumber %></h4>
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">Faktur Servis</span>
                                </div>
                                <h5 class="text-dark fw-bold"><i class="fas fa-motorcycle me-2 text-muted"></i><%= activeJob.motorName %></h5>
                            </div>
                            <div class="col-md-5 text-md-end">
                                <div class="p-3 bg-light rounded-4 d-inline-block border">
                                    <label class="text-muted small d-block fw-bold mb-1">PLAT NOMOR</label>
                                    <span class="h4 fw-bold font-monospace"><%= activeJob.vehicleLicense %></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert bg-emerald-soft border-0 rounded-4 p-3 mb-4 d-flex align-items-center">
                            <i class="fas fa-user-circle fa-2x text-success me-3"></i>
                            <div>
                                <small class="text-muted d-block fw-bold">NAMA PELANGGAN</small>
                                <span class="fw-bold text-dark fs-5"><%= activeJob.customer?.name || 'Umum / Walk-in' %></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="text-muted small fw-bold mb-2 text-uppercase"><i class="fas fa-clipboard-list me-2"></i>Instruksi & Keluhan:</label>
                            <div class="p-4 bg-light rounded-4 text-dark border-start border-4 border-warning shadow-inner">
                                <p class="mb-0 fs-6 italic"><%= activeJob.description || 'Ganti oli dan cek sistem kelistrikan umum.' %></p>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <button onclick="finishWork('<%= activeJob._id %>')" class="btn btn-success btn-lg w-100 shadow-sm fw-bold py-3 rounded-4 hover-elevate">
                                    <i class="fas fa-check-double me-2"></i> SELESAIKAN PEKERJAAN
                                </button>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-mug-hot fa-4x text-muted opacity-25"></i>
                            </div>
                            <h4 class="text-muted fw-bold">Waktunya Istirahat Sejenak</h4>
                            <p class="text-muted">Tidak ada unit yang sedang Anda kerjakan. Silakan pilih antrean di bawah.</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-secondary text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-list-check me-2"></i>Antrean Servis (Pending)</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr class="small text-uppercase fw-bold text-muted">
                                    <th class="ps-4">No. Invoice</th>
                                    <th>Kendaraan</th>
                                    <th>Status Pelanggan</th>
                                    <th class="text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (pendingJobs.length > 0) { %>
                                    <% pendingJobs.forEach(job => { %>
                                        <tr>
                                            <td class="ps-4"><span class="fw-bold text-primary"><%= job.invoiceNumber %></span></td>
                                            <td>
                                                <div class="fw-bold text-dark"><%= job.motorName %></div>
                                                <small class="badge bg-light text-muted border px-2"><%= job.vehicleLicense %></small>
                                            </td>
                                            <td>
                                                <span class="small"><%= job.customer?.name || 'Umum' %></span>
                                            </td>
                                            <td class="text-center pe-4">
                                                <button onclick="startJob('<%= job._id %>')" class="btn btn-sm btn-primary rounded-pill px-4 shadow-sm fw-bold <%= activeJob ? 'disabled opacity-50' : '' %>" <%= activeJob ? 'title="Selesaikan pekerjaan aktif dulu"' : '' %>>
                                                    AMBIL <i class="fas fa-play ms-1 small"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <i class="fas fa-calendar-day fa-2x text-muted opacity-25 mb-3 d-block"></i>
                                            <span class="text-muted small">Antrean bersih. Belum ada unit masuk untuk Anda.</span>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4 rounded-4 overflow-hidden h-100">
                <div class="card-header bg-emerald-gradient text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-history me-2"></i>Log Selesai Hari Ini</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <% if (completedJobs.length > 0) { %>
                            <% completedJobs.forEach(job => { %>
                                <div class="list-group-item p-3 border-bottom hover-light transition-all">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="fw-bold small text-success">#<%= job.invoiceNumber %></span>
                                        <span class="badge bg-light text-muted fw-normal" style="font-size: 0.7rem;">
                                            <i class="fas fa-clock me-1"></i><%= new Date(job.updatedAt).toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit'}) %>
                                        </span>
                                    </div>
                                    <div class="fw-bold text-dark small"><%= job.motorName %></div>
                                    <div class="text-muted" style="font-size: 0.75rem;"><%= job.vehicleLicense %></div>
                                    <div class="mt-2 text-end">
                                        <a href="/jobs/detail/<%= job._id %>" class="btn btn-xs btn-outline-success rounded-pill px-3 py-1" style="font-size: 0.7rem;">
                                            <i class="fas fa-eye me-1"></i>Review
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="p-5 text-center text-muted">
                                <i class="fas fa-clipboard-check fa-3x mb-3 opacity-10"></i>
                                <p class="small">Belum ada riwayat pengerjaan selesai hari ini.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3 text-center">
                    <small class="text-muted">Gunakan tombol <strong>Selesai</strong> pada WO aktif untuk memindahkan data ke sini.</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* MECHANIC DASHBOARD SPECIFIC STYLES */
    .bg-emerald-gradient { background: linear-gradient(135deg, #2ecc71, #27ae60); }
    .bg-emerald-soft { background-color: rgba(46, 204, 113, 0.1); }
    .bg-info-soft { background-color: rgba(52, 152, 219, 0.1); }
    
    .pulse { animation: pulse-animation 2s infinite; }
    @keyframes pulse-animation { 0% { opacity: 1; } 50% { opacity: 0.7; } 100% { opacity: 1; } }
    
    .shadow-inner { box-shadow: inset 0 2px 4px 0 rgba(0, 0, 0, 0.05); }
    .transition-all { transition: all 0.3s ease; }
    .hover-light:hover { background-color: #f8fdfa; }
    
    .btn-xs { padding: 0.2rem 0.5rem; font-size: 0.75rem; }
    .hover-elevate { transition: transform 0.3s ease; }
    .hover-elevate:hover { transform: translateY(-3px); }
    
    .animate-fade-in { animation: fadeIn 0.8s ease-in-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    .font-monospace { font-family: 'Courier New', Courier, monospace; letter-spacing: 1px; }
</style>

<script>
async function startJob(jobId) {
    if (!confirm('Ambil unit ini dan mulai pengerjaan?')) return;
    try {
        const response = await fetch(`/api/jobs/start/${jobId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        const result = await response.json();
        if (result.success) { 
            window.location.reload(); 
        } else { 
            alert('Gagal mengambil unit: ' + result.message); 
        }
    } catch (err) { 
        alert('Kesalahan jaringan: Hubungi Admin.'); 
    }
}

async function finishWork(jobId) {
    if (!confirm('Konfirmasi pengerjaan kendaraan telah selesai?')) return;
    try {
        const response = await fetch(`/api/jobs/finish/${jobId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        const result = await response.json();
        if (result.success) { 
            window.location.reload(); 
        } else { 
            alert('Gagal update status: ' + result.message); 
        }
    } catch (err) { 
        alert('Kesalahan koneksi ke server.'); 
    }
}
</script>