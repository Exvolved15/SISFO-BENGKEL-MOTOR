<% 
    let activeJob = null;
    let pendingJobs = [];
    let completedJobs = [];
    
    if (typeof historyJobs !== 'undefined' && Array.isArray(historyJobs)) {
        activeJob = historyJobs.find(j => j.status === 'on_progress');
        pendingJobs = historyJobs.filter(j => j.status === 'pending');
        completedJobs = historyJobs.filter(j => j.status === 'completed');
    }
%>

<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-8 p-4 d-flex align-items-center bg-white">
                    <div class="profile-avatar-container rounded-circle bg-warning d-flex align-items-center justify-content-center text-dark shadow-sm overflow-hidden border border-4 border-light" 
                         style="width: 100px; height: 100px; min-width: 100px;">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>?t=<%= Date.now() %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <span style="font-size: 3rem; font-weight: bold;"><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    <div class="ms-4">
                        <h2 class="mb-1 fw-bold text-dark"><%= user.name %></h2>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-dark text-warning border px-3 py-2 rounded-pill">TECHNICAL SPECIALIST</span>
                            <% if (activeJob) { %>
                                <span class="badge bg-danger pulse px-3 py-2 rounded-pill">SIBUK</span>
                            <% } else { %>
                                <span class="badge bg-success px-3 py-2 rounded-pill">STANDBY</span>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 bg-light p-4 d-flex align-items-center border-start border-opacity-10">
                    <div class="w-100 text-center">
                        <div class="small text-muted fw-bold text-uppercase mb-2">Akses Cepat</div>
                        <hr class="my-2">
                        <div class="px-4"> 
                            <a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-outline-dark w-100 rounded-pill shadow-sm">
                                <i class="fas fa-user-gear me-1"></i> Pengaturan Akun
                            </a>
                        </div>
                        <p class="small text-muted mt-2 mb-0">Kelola profil & keamanan</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4 rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-screwdriver-wrench me-2 text-warning"></i>Tugas Aktif</h5>
                </div>
                <div class="card-body p-4">
                    <% if (activeJob) { %>
                        <div class="row mb-4 align-items-center">
                            <div class="col-md-7">
                                <h3 class="fw-bold text-primary mb-1"><%= activeJob.invoiceNumber %></h3>
                                <h4 class="text-dark fw-bold"><%= activeJob.motorName %></h4>
                                <span class="badge bg-dark font-monospace fs-6 px-3 py-2"><%= activeJob.vehicleLicense %></span>
                            </div>
                            <div class="col-md-5 text-md-end">
                                <small class="text-muted d-block fw-bold">PELANGGAN</small>
                                <span class="fw-bold text-dark fs-5"><%= activeJob.customer?.name || 'Umum' %></span>
                            </div>
                        </div>

                        <div class="p-4 bg-light rounded-4 border-start border-4 border-warning mb-4 shadow-inner">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="text-muted small fw-bold text-uppercase">Daftar Pengerjaan:</label>
                                <button onclick="showJobDetail('<%= activeJob.invoiceNumber %>', '<%= activeJob.motorName %>', '<%= activeJob.description %>')" class="btn btn-link btn-sm fw-bold text-decoration-none">
                                    <i class="fas fa-expand-arrows-alt me-1"></i> Perbesar Detail
                                </button>
                            </div>
                            <p class="mb-0 fw-bold text-dark"><%= activeJob.description %></p>
                        </div>

                        <button onclick="updateJobStatus('<%= activeJob._id %>', 'completed')" class="btn btn-success btn-lg w-100 shadow-lg fw-bold py-4 rounded-4 hover-elevate fs-5">
                            <i class="fas fa-check-double me-2"></i> SELESAIKAN & SERAHKAN UNIT
                        </button>
                    <% } else { %>
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-mug-hot fa-4x mb-3 opacity-25"></i>
                            <h5>Belum Ada Pekerjaan Aktif</h5>
                            <p>Silakan ambil antrean di bawah untuk mulai bekerja.</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-secondary text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-pause-circle me-2"></i>Antrean Servis (Menunggu)</h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light text-uppercase">
                            <tr class="small fw-bold">
                                <th class="ps-4">No. Invoice</th>
                                <th>Unit</th>
                                <th class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pendingJobs.forEach(job => { %>
                                <tr>
                                    <td class="ps-4 fw-bold text-primary"><%= job.invoiceNumber %></td>
                                    <td>
                                        <div class="fw-bold"><%= job.motorName %></div>
                                        <small class="text-muted font-monospace"><%= job.vehicleLicense %></small>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="d-flex gap-2 justify-content-center">
                                            <button onclick="showJobDetail('<%= job.invoiceNumber %>', '<%= job.motorName %>', '<%= job.description %>')" class="btn btn-info text-white btn-sm px-3 rounded-pill fw-bold shadow-sm">
                                                DETAIL
                                            </button>
                                            <button onclick="updateJobStatus('<%= job._id %>', 'on_progress')" class="btn btn-primary btn-sm px-3 rounded-pill fw-bold shadow-sm <%= activeJob ? 'disabled opacity-50' : '' %>">
                                                AMBIL
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden sticky-top" style="top: 20px;">
                <div class="card-header bg-success text-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-history me-2"></i>Selesai Hari Ini</h6>
                </div>
                <div class="list-group list-group-flush">
                    <% completedJobs.forEach(job => { %>
                        <div class="list-group-item p-3 border-bottom hover-light cursor-pointer" onclick="showJobDetail('<%= job.invoiceNumber %>', '<%= job.motorName %>', '<%= job.description %>')">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <span class="fw-bold small text-success">#<%= job.invoiceNumber %></span>
                                <span class="badge bg-light text-muted fw-normal" style="font-size: 0.65rem;">
                                    <i class="fas fa-clock me-1"></i><%= new Date(job.updatedAt).toLocaleTimeString('id-ID', {hour:'2-digit', minute:'2-digit'}) %>
                                </span>
                            </div>
                            <div class="fw-bold text-dark small"><%= job.motorName %></div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted font-monospace"><%= job.vehicleLicense %></small>
                                <span class="text-info small fw-bold">Detail <i class="fas fa-chevron-right ms-1"></i></span>
                            </div>
                        </div>
                    <% }) %>
                    <% if (completedJobs.length === 0) { %>
                        <div class="p-5 text-center text-muted small">Belum ada unit selesai.</div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg">
            <div class="modal-header bg-dark text-white rounded-top-4">
                <h5 class="modal-title fw-bold" id="modalInv">Detail</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <h5 id="modalMotor" class="fw-bold text-primary mb-3"></h5>
                <div class="p-3 bg-light rounded-4 border-start border-4 border-info shadow-inner">
                    <p class="text-muted small fw-bold text-uppercase mb-2">Item Pekerjaan:</p>
                    <div id="modalDesc" class="text-dark fw-bold"></div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary w-100 rounded-pill py-2 fw-bold" data-bs-dismiss="modal">TUTUP</button>
            </div>
        </div>
    </div>
</div>

<style>
    .cursor-pointer { cursor: pointer; }
    .shadow-inner { box-shadow: inset 0 2px 4px 0 rgba(0,0,0,0.05); }
    .hover-elevate { transition: all 0.2s ease; }
    .hover-elevate:hover { transform: translateY(-4px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
    .pulse { animation: pulse-animation 2s infinite; }
    @keyframes pulse-animation { 0% { opacity: 1; } 50% { opacity: 0.6; } 100% { opacity: 1; } }
    .animate-fade-in { animation: fadeIn 0.5s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script>
    // FUNGSI DETAIL (FIXED)
    function showJobDetail(inv, motor, desc) {
    document.getElementById('modalInv').innerText = 'Invoice: ' + inv;
    document.getElementById('modalMotor').innerText = motor;
    
    let parts = desc ? desc.split(' | ') : ["-"];
    let items = parts[0].split(', ').join('<br>• ');
    let note = parts[1] ? `<div class="mt-3 p-2 bg-warning bg-opacity-10 rounded border-start border-4 border-warning"><strong>Catatan Kasir:</strong><br>${parts[1]}</div>` : '';
    
    document.getElementById('modalDesc').innerHTML = '• ' + items + note;
    
    const detailModal = new bootstrap.Modal(document.getElementById('detailModal'));
    detailModal.show();
}

    // FUNGSI UPDATE STATUS
    async function updateJobStatus(jobId, status) {
        const action = status === 'completed' ? 'selesaikan' : 'mulai kerjakan';
        if (!confirm(`Apakah Anda yakin ingin ${action} unit ini?`)) return;

        try {
            const response = await fetch(`/api/jobs/update-status/${jobId}`, {
                method: 'PATCH',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status })
            });
            const result = await response.json();
            if (result.success) {
                window.location.reload();
            } else {
                alert('Gagal: ' + result.message);
            }
        } catch (err) {
            alert('Kesalahan jaringan: Periksa koneksi server.');
        }
    }
</script>