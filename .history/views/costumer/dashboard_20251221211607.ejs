<div class="container mt-4">
    <h3>Halo, <%= user.name %>!</h3>
    <p class="text-muted">Pantau status kendaraan Anda di sini.</p>
    <hr>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-car me-2"></i>Status Pekerjaan Kendaraan
                </div>
                <div class="card-body">
                    <% if (jobs && jobs.length > 0) { %>
                        <div class="row">
                            <% jobs.forEach(job => { %>
                                <div class="col-md-6 mb-3">
                                    <div class="p-3 border rounded bg-light">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h5 class="mb-1"><%= job.vehicleLicense %></h5>
                                                <p class="small text-muted mb-2">Unit: <%= job.serviceName %></p>
                                            </div>
                                            <span class="badge <%= job.status === 'completed' ? 'bg-success' : 'bg-warning text-dark' %>">
                                                <%= job.status === 'completed' ? 'Selesai' : 'Sedang Dikerjakan' %>
                                            </span>
                                        </div>
                                        <hr class="my-2">
                                        <div class="small">
                                            <i class="fas fa-user-cog me-1"></i> 
                                            <strong>Mekanik:</strong> <%= job.mechanicId ? job.mechanicId.name : 'Menunggu antrean' %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-center my-3">Tidak ada kendaraan yang sedang diservis.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-file-invoice me-2"></i>Riwayat Transaksi & Resi
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tanggal</th>
                                <th>No. Invoice</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (transactions && transactions.length > 0) { %>
                                <% transactions.forEach(trx => { %>
                                    <tr>
                                        <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                        <td><strong><%= trx.invoiceNumber %></strong></td>
                                        <td>Rp<%= trx.grandTotal.toLocaleString() %></td>
                                        <td>
                                            <span class="badge <%= trx.status === 'completed' ? 'bg-success' : 'bg-secondary' %>">
                                                <%= trx.status === 'completed' ? 'Lunas' : 'Pending' %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-sm btn-outline-dark">
                                                <i class="fas fa-print me-1"></i> Cetak Resi
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="5" class="text-center py-4">Belum ada riwayat transaksi.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>