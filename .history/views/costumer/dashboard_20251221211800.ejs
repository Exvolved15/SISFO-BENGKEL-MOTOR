<div class="container mt-4">
    <h3>Halo, <%= user.name %></h3>
    <p class="text-muted">Berikut adalah status kendaraan dan riwayat servis Anda.</p>
    <hr>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-tools me-2"></i>Status Pengerjaan Kendaraan
                </div>
                <div class="card-body">
                    <% if (jobs && jobs.length > 0) { %>
                        <div class="row">
                            <% jobs.forEach(job => { %>
                                <div class="col-md-6 mb-3">
                                    <div class="p-3 border rounded <%= job.status === 'completed' ? 'border-success' : 'border-warning' %>">
                                        <h5 class="fw-bold"><%= job.vehicleLicense %></h5>
                                        <p class="mb-1"><strong>Servis:</strong> <%= job.serviceName %></p>
                                        <p class="mb-2"><strong>Mekanik:</strong> <%= job.mechanicId ? job.mechanicId.name : 'Menunggu Mekanik' %></p>
                                        <span class="badge <%= job.status === 'completed' ? 'bg-success' : 'bg-warning text-dark' %>">
                                            <%= job.status === 'completed' ? 'Selesai' : 'Sedang Dikerjakan' %>
                                        </span>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-center text-muted">Tidak ada kendaraan yang sedang diservis saat ini.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-history me-2"></i>Riwayat Servis & Pembayaran
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice</th>
                                <th>Tanggal</th>
                                <th>Total Bayar</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (transactions && transactions.length > 0) { %>
                                <% transactions.forEach(trx => { %>
                                    <tr>
                                        <td><strong><%= trx.invoiceNumber %></strong></td>
                                        <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                        <td>Rp<%= trx.grandTotal.toLocaleString() %></td>
                                        <td>
                                            <span class="badge <%= trx.status === 'completed' ? 'bg-success' : 'bg-secondary' %>">
                                                <%= trx.status === 'completed' ? 'Lunas' : 'Proses' %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-sm btn-outline-dark">
                                                <i class="fas fa-print"></i> Cetak Resi
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="5" class="text-center py-3">Belum ada riwayat transaksi.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>