<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3>Halo, <%= user.name %>!</h3>
            <p class="text-muted">Pantau status pengerjaan kendaraan Anda secara real-time.</p>
        </div>
        <span class="badge bg-primary px-3 py-2">Pelanggan</span>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="mb-0"><i class="fas fa-tools me-2"></i>Status Pengerjaan Unit</h6>
                </div>
                <div class="card-body">
                    <% if (jobs && jobs.length > 0) { %>
                        <div class="row">
                            <% jobs.forEach(job => { %>
                                <div class="col-md-6 mb-3">
                                    <div class="p-3 border-start border-4 <%= job.status === 'completed' ? 'border-success' : 'border-warning' %> bg-light rounded shadow-sm">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h5 class="fw-bold mb-0 text-uppercase"><%= job.vehicleLicense %></h5>
                                            <span class="badge <%= job.status === 'completed' ? 'bg-success' : 'bg-warning text-dark' %>">
                                                <%= job.status === 'completed' ? 'SELESAI' : 'PROSES' %>
                                            </span>
                                        </div>
                                        <p class="mb-1"><strong>Servis:</strong> <%= job.serviceName %></p>
                                        <p class="mb-0"><strong>Mekanik:</strong> <%= job.mechanicId ? job.mechanicId.name : 'Menunggu antrean...' %></p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-car-side fa-3x text-light mb-3"></i>
                            <p class="text-muted">Saat ini tidak ada pengerjaan aktif untuk kendaraan Anda.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white py-3">
                    <h6 class="mb-0"><i class="fas fa-history me-2"></i>Riwayat Transaksi</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>No. Invoice</th>
                                    <th>Tanggal</th>
                                    <th>Total Bayar</th>
                                    <th>Status</th>
                                    <th class="text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (transactions && transactions.length > 0) { %>
                                    <% transactions.forEach(trx => { %>
                                        <tr>
                                            <td><strong><%= trx.invoiceNumber %></strong></td>
                                            <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                            <td>Rp<%= trx.grandTotal.toLocaleString() %></td>
                                            <td>
                                                <% let s = (trx.status || '').toLowerCase(); %>
                                                <span class="badge <%= s === 'completed' ? 'bg-success' : 'bg-secondary' %>">
                                                    <%= s === 'completed' ? 'Lunas' : 'Pending' %>
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-sm btn-outline-dark">
                                                    <i class="fas fa-print me-1"></i> Cetak Resi
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="5" class="text-center py-4">Belum ada riwayat servis.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>