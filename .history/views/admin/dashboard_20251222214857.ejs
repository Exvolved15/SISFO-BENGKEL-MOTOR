<div class="container-fluid px-4">
    <h1 class="mt-4">Selamat Datang, Admin!</h1>
    <p class="mb-4 text-muted">Kelola operasional bengkel dan personil secara terpusat.</p>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="text-white-50 small">Total Personil</h6>
                    <h2 class="fw-bold"><%= users.length %></h2>
                    <% 
                        // Menghitung jumlah departemen unik yang ada
                        const deptCount = [...new Set(users.map(u => u.department || '-'))].length; 
                    %>
                    <small>Terbagi di <%= deptCount %> Bagian</small>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white py-3">
                    <h6 class="mb-0"><i class="fas fa-users-cog me-2"></i>Status Tim per Bagian</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nama</th>
                                    <th>Bagian (Department)</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (users && users.length > 0) { %>
                                    <% users.filter(u => u.role !== 'customer').forEach(u => { %>
                                        <tr>
                                            <td><strong><%= u.name %></strong></td>
                                            <td><span class="badge bg-light text-dark border"><%= u.department || '-' %></span></td>
                                            <td class="text-capitalize"><%= u.role %></td>
                                            <td><span class="badge bg-success">Aktif</span></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="4" class="text-center py-3">Belum ada personil terdaftar.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">User & Personel</div>
                            <div class="h5 fw-bold">Manajemen User</div>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/users">Buka Panel</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Layanan Jasa</div>
                            <div class="h5 fw-bold">Data Jasa</div>
                        </div>
                        <i class="fas fa-tools fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/services">Buka Panel</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Inventaris Barang</div>
                            <div class="h5 fw-bold">Suku Cadang</div>
                        </div>
                        <i class="fas fa-box fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/parts">Kelola Stok</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Keuangan & Resi</div>
                            <div class="h5 fw-bold">Transaksi</div>
                        </div>
                        <i class="fas fa-shopping-cart fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/transactions">Lihat Semua</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 fw-bold text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Stok Menipis (Segera Restock)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nama Barang</th>
                            <th>Stok</th>
                            <th class="text-center">Aksi Cepat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (parts && parts.length > 0) { %>
                            <% parts.forEach(part => { %>
                                <tr>
                                    <td><%= part.name %></td>
                                    <td><span class="badge bg-danger"><%= part.stock %></span></td>
                                    <td class="text-center">
                                        <form action="/api/parts/update-stock/<%= part._id %>" method="POST" class="d-inline">
                                            <input type="hidden" name="adjustment" value="10">
                                            <button type="submit" class="btn btn-sm btn-success">+10 Stok</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3" class="text-center py-3 text-muted">Semua stok aman.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>