<div class="container mt-4">
    <div class="jumbotron shadow-sm p-5 mb-4 bg-light rounded">
        <h1 class="display-4">Selamat Datang, Admin!</h1>
        <p class="lead">Ini adalah halaman dashboard untuk mengelola bengkel.</p>
        <hr class="my-4">
        
        <div class="row">
            <div class="col-md-4">
                <div class="card bg-primary text-white mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Manajemen User</h5>
                        <p class="card-text">Kelola data mekanik dan kasir.</p>
                        <a href="/users" class="btn btn-light">Buka</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Data Jasa</h5>
                        <p class="card-text">Atur daftar harga jasa servis.</p>
                        <a href="/services" class="btn btn-light">Buka</a>
                    </div>
                </div>
            </div>
        </div>
    </div> <hr class="my-5">

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <span>Manajemen Stok Suku Cadang</span>
                    <a href="/parts" class="btn btn-sm btn-outline-light">Kelola Semua</a>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Nama Barang</th>
                                <th>Stok</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% parts.forEach(p => { %>
                            <tr>
                                <td><%= p.name %></td>
                                <td>
                                    <span class="badge bg-<%= p.stock < 5 ? 'danger' : 'info' %>">
                                        <%= p.stock %>
                                    </span>
                                </td>
                                <td>
                                    <form action="/api/parts/update-stock/<%= p._id %>" method="POST" class="d-inline">
                                        <input type="hidden" name="adjustment" value="1">
                                        <button type="submit" class="btn btn-sm btn-success">+</button>
                                    </form>
                                    <form action="/api/parts/update-stock/<%= p._id %>" method="POST" class="d-inline">
                                        <input type="hidden" name="adjustment" value="-1">
                                        <button type="submit" class="btn btn-sm btn-warning">-</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-danger text-white">
                    <span>Koreksi Riwayat Transaksi</span>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Invoice</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(trx => { %>
                            <tr>
                                <td><small class="font-weight-bold"><%= trx.invoiceNumber %></small></td>
                                <td>
                                    <span class="badge bg-secondary"><%= trx.status %></span>
                                </td>
                                <td>
                                    <a href="/transactions/edit/<%= trx._id %>" class="btn btn-sm btn-warning">Edit</a>
                                    <form action="/api/jobs/delete/<%= trx._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Hapus permanen riwayat ini?')">
                                        <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>