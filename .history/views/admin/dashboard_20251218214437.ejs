<div class="container mt-4">
    <div class="jumbotron shadow-sm p-5 mb-4 bg-light rounded">
        <h1 class="display-4">Selamat Datang, Admin!</h1>
        <p class="lead">Ini adalah halaman dashboard untuk mengelola bengkel.</p>
        <hr class="my-4">
        
        <div class="row">
            <div class="col-md-4">
                <div class="card bg-primary text-white mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Manajemen User</h5>
                        <p class="card-text">Kelola data mekanik dan kasir.</p>
                        <a href="/users" class="btn btn-light">Buka</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Data Jasa</h5>
                        <p class="card-text">Atur daftar harga jasa servis.</p>
                        <a href="/services" class="btn btn-light">Buka</a>
                    </div>
                </div>
            </div>
        </div>
    </div> <hr class="my-5">

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <span>Manajemen Stok Suku Cadang</span>
                    <a href="/parts" class="btn btn-sm btn-outline-light">Kelola Semua</a>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-hover">
                        <form action="/api/parts/add" method="POST">
                            <input type="text" name="name" required placeholder="Nama Barang">
                            <input type="text" name="code" required placeholder="Kode Part (Misal: PART-001)">
                            <input type="number" name="price" required placeholder="Harga Jual">
                            <input type="number" name="stock" required placeholder="Stok Awal">
                            <button type="submit">Simpan Suku Cadang</button>
                        </form>
                        <tbody>
                            <% parts.forEach(p => { %>
                            <tr>
                                <td><%= p.name %></td>
                                <td>
                                    <span class="badge bg-<%= p.stock < 5 ? 'danger' : 'info' %>">
                                        <%= p.stock %>
                                    </span>
                                </td>
                                <td>
                                    <form action="/api/parts/update-stock/<%= p._id %>" method="POST" class="d-inline">
                                        <input type="hidden" name="adjustment" value="1">
                                        <button type="submit" class="btn btn-sm btn-success">+</button>
                                    </form>
                                    <form action="/api/parts/update-stock/<%= p._id %>" method="POST" class="d-inline">
                                        <input type="hidden" name="adjustment" value="-1">
                                        <button type="submit" class="btn btn-sm btn-warning">-</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1><%= title %></h1>
                <a href="/transactions/add" class="btn btn-primary">Buat Transaksi Baru</a>
            </div>
        
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Invoice</th>
                                <th>Pelanggan</th>
                                <th>Total</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof transactions !== 'undefined' && transactions.length > 0) { %>
                                <% transactions.forEach(trx => { %>
                                    <tr>
                                        <td><strong><%= trx.invoiceNumber %></strong></td>
                                        <td><%= trx.customer ? trx.customer.name : 'Umum' %></td>
                                        <td>Rp <%= trx.totalAmount.toLocaleString('id-ID') %></td>
                                        <td>
                                            <span class="badge bg-<%= trx.status === 'completed' ? 'success' : 'warning' %>">
                                                <%= trx.status.toUpperCase() %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %> 
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Belum ada riwayat transaksi.</td>
                                </tr>
                            <% } %> 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>