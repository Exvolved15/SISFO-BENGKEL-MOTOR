<div class="container-fluid px-4">
    <h1 class="mt-4">Selamat Datang, Admin!</h1>
    <p class="mb-4 text-muted">Ini adalah halaman dashboard untuk mengelola bengkel secara terpusat.</p>

    <div class="container-fluid px-4 py-4">
        <h2 class="mb-4">Admin Dashboard</h2>
        
        <div class="container-fluid px-4">
    <h1 class="mt-4">Admin Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Selamat Datang, <%= user.name %></li>
    </ol>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white shadow h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h5>Manajemen User</h5>
                    <a href="/users" class="btn btn-light btn-sm mt-2 fw-bold">Buka Panel</a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-cogs fa-2x mb-2"></i>
                    <h5>Data Jasa</h5>
                    <a href="/services" class="btn btn-light btn-sm mt-2 fw-bold">Buka Panel</a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark shadow h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-2x mb-2"></i>
                    <h5>Suku Cadang</h5>
                    <a href="/parts" class="btn btn-dark btn-sm mt-2 fw-bold">Buka Panel</a>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white shadow h-100 border-0">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                    <h5>Transaksi</h5>
                    <a href="/transactions" class="btn btn-light btn-sm mt-2 fw-bold">Buka Panel</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Status Stok Suku Cadang</h6>
            <a href="/parts/add" class="btn btn-primary btn-sm">+ Tambah Barang</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nama Barang</th>
                            <th>Kode</th>
                            <th>Stok</th>
                            <th>Harga Jual</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (parts && parts.length > 0) { %>
                            <% parts.forEach(p => { %>
                                <tr>
                                    <td><%= p.name %></td>
                                    <td><%= p.code %></td>
                                    <td>
                                        <span class="badge <%= p.stock <= 5 ? 'bg-danger' : 'bg-success' %>">
                                            <%= p.stock %>
                                        </span>
                                    </td>
                                    <td>Rp <%= p.price.toLocaleString('id-ID') %></td>
                                    <td>
                                        <a href="/parts/edit/<%= p._id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" class="text-center">Belum ada data barang.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    </div>

    
</div>