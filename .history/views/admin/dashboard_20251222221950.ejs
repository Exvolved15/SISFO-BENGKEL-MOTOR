<div class="container-fluid px-4 py-4">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="d-flex align-items-center mb-4">
                    <div class="rounded-circle shadow-sm border overflow-hidden" 
                         style="width: 70px; height: 70px; background-color: #0d6efd;">
                        
                        <% if (user.profileImage && user.profileImage !== '') { %>
                            <img src="<%= user.profileImage %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center text-white fw-bold fs-3">
                                <%= user.name.charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="ms-4">
                        <h4 class="mb-0 fw-bold">Halo, <%= user.name %>!</h4>
                        <small class="text-muted"><i class="fas fa-id-card me-1"></i><%= user.role.toUpperCase() %> | <%= user.department %></small>
                        <p class="text-muted mb-0">
                            <span class="badge bg-danger me-2">Administrator</span>
                            <i class="fas fa-building me-1"></i> <%= user.department || 'Kantor Pusat' %>
                        </p>
                        <small class="text-muted mt-2 d-block">
                            <i class="fas fa-clock me-1"></i> Login terakhir: <%= new Date().toLocaleDateString('id-ID') %>
                        </small>
                    </div>
                </div>
                
                <div class="col-md-4 bg-light p-4 d-flex align-items-center border-start">
                    <div class="w-100">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small text-muted">Status Sistem</span>
                            <span class="badge bg-success">Optimal</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="small text-muted">Akses Level</span>
                            <span class="small fw-bold">Full Access</span>
                        </div>
                        <hr class="my-2">
                        <a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-outline-primary w-100 mt-1">
                            <i class="fas fa-user-edit me-1"></i> Pengaturan Profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">



<div class="container-fluid px-4">
    <h1 class="mt-4">Selamat Datang</h1>
    <p class="mb-4 text-muted">Kelola operasional bengkel dan personil secara terpusat.</p>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="text-white-50 small">Total Personil</h6>
                    <h2 class="fw-bold"><%= users.length %></h2>
                    <% 
                        // Menghitung jumlah departemen unik yang ada
                        const deptCount = [...new Set(users.map(u => u.department || '-'))].length; 
                    %>
                    <small>Terbagi di <%= deptCount %> Bagian</small>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white py-3">
                    <h6 class="mb-0"><i class="fas fa-users-cog me-2"></i>Status Tim per Bagian</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nama</th>
                                    <th>Bagian (Department)</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (users && users.length > 0) { %>
                                    <% users.filter(u => u.role !== 'customer').forEach(u => { %>
                                        <tr>
                                            <td><strong><%= u.name %></strong></td>
                                            <td><span class="badge bg-light text-dark border"><%= u.department || '-' %></span></td>
                                            <td class="text-capitalize"><%= u.role %></td>
                                            <td><span class="badge bg-success">Aktif</span></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="4" class="text-center py-3">Belum ada personil terdaftar.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h5 class="fw-bold mb-3"><i class="fas fa-bolt text-warning me-2"></i>Aksi Cepat</h5>
        </div>
        <div class="col-md-3">
            <a href="/register" class="card text-decoration-none shadow-sm border-0 h-100 hover-elevate">
                <div class="card-body text-center py-4">
                    <i class="fas fa-user-plus fa-2x text-primary mb-3"></i>
                    <h6 class="text-dark fw-bold mb-0">Tambah Staf</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/parts/add" class="card text-decoration-none shadow-sm border-0 h-100 hover-elevate">
                <div class="card-body text-center py-4">
                    <i class="fas fa-plus-square fa-2x text-success mb-3"></i>
                    <h6 class="text-dark fw-bold mb-0">Input Barang</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/services/add" class="card text-decoration-none shadow-sm border-0 h-100 hover-elevate">
                <div class="card-body text-center py-4">
                    <i class="fas fa-concierge-bell fa-2x text-info mb-3"></i>
                    <h6 class="text-dark fw-bold mb-0">Tambah Jasa</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <button onclick="window.print()" class="card w-100 text-decoration-none shadow-sm border-0 h-100 hover-elevate bg-white">
                <div class="card-body text-center py-4">
                    <i class="fas fa-file-pdf fa-2x text-danger mb-3"></i>
                    <h6 class="text-dark fw-bold mb-0">Laporan Harian</h6>
                </div>
            </button>
        </div>
    </div>
    
    <style>
        .hover-elevate { transition: transform 0.2s ease, shadow 0.2s ease; }
        .hover-elevate:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
    </style>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">User & Personel</div>
                            <div class="h5 fw-bold">Manajemen User</div>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/users">Buka Panel</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Layanan Jasa</div>
                            <div class="h5 fw-bold">Data Jasa</div>
                        </div>
                        <i class="fas fa-tools fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/services">Buka Panel</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Inventaris Barang</div>
                            <div class="h5 fw-bold">Suku Cadang</div>
                        </div>
                        <i class="fas fa-box fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/parts">Kelola Stok</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-white-50">Keuangan & Resi</div>
                            <div class="h5 fw-bold">Transaksi</div>
                        </div>
                        <i class="fas fa-shopping-cart fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between small bg-black bg-opacity-10">
                    <a class="text-white stretched-link text-decoration-none" href="/transactions">Lihat Semua</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 fw-bold text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Stok Menipis (Segera Restock)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nama Barang</th>
                            <th>Stok</th>
                            <th class="text-center">Aksi Cepat</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (parts && parts.length > 0) { %>
                            <% parts.forEach(part => { %>
                                <tr>
                                    <td><%= part.name %></td>
                                    <td><span class="badge bg-danger"><%= part.stock %></span></td>
                                    <td class="text-center">
                                        <form action="/api/parts/update-stock/<%= part._id %>" method="POST" class="d-inline">
                                            <input type="hidden" name="adjustment" value="10">
                                            <button type="submit" class="btn btn-sm btn-success">+10 Stok</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3" class="text-center py-3 text-muted">Semua stok aman.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>