<div class="container-fluid px-4 py-4">
    <h2 class="mb-4">Admin Dashboard</h2>
    
    <div class="row g-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white shadow">
            <div class="card-body text-center">
                <h5>Manajemen User</h5>
                <a href="/users" class="btn btn-light btn-sm mt-2">Buka</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow">
            <div class="card-body text-center">
                <h5>Data Jasa</h5>
                <a href="/services" class="btn btn-light btn-sm mt-2">Buka</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark shadow">
            <div class="card-body text-center">
                <h5>Suku Cadang</h5>
                <a href="/parts" class="btn btn-dark btn-sm mt-2">Buka</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white shadow">
            <div class="card-body text-center">
                <h5>Transaksi</h5>
                <a href="/transactions" class="btn btn-light btn-sm mt-2">Buka</a>
            </div>
        </div>
    </div>
</div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Stok Menipis (Segera Restock)</h6>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <thead><tr><th>Nama Barang</th><th>Stok</th><th>Aksi</th></tr></thead>
                <tbody>
                    <% parts.forEach(p => { %>
                        <tr>
                            <td><%= p.name %></td>
                            <td><span class="badge bg-danger"><%= p.stock %></span></td>
                            <td><a href="/parts/edit/<%= p._id %>" class="btn btn-link btn-sm">Update Stok</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>