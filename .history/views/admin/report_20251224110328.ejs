<div class="container py-4">
    <h2 class="fw-bold mb-4">Laporan Keuangan Bengkel</h2>
    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tanggal</th>
                        <th>Pendapatan Kotor</th>
                        <th>Laba Bersih</th>
                        <th>Margin</th>
                    </tr>
                </thead>
                <tbody>
                    <% report.forEach(item => { %>
                        <tr>
                            <td><%= item._id %></td>
                            <td class="text-primary">Rp <%= item.totalRevenue.toLocaleString('id-ID') %></td>
                            <td class="text-success fw-bold">Rp <%= item.totalProfit.toLocaleString('id-ID') %></td>
                            <td>
                                <span class="badge bg-success bg-opacity-10 text-success">
                                    <%= ((item.totalProfit / item.totalRevenue) * 100).toFixed(1) %>%
                                </span>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>