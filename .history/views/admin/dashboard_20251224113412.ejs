<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-8 p-4 d-flex align-items-center bg-white">
                    <div class="profile-avatar-container rounded-circle bg-success d-flex align-items-center justify-content-center text-white shadow-sm overflow-hidden border border-4 border-light" 
                         style="width: 90px; height: 90px; min-width: 90px;">
                         <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>?t=<%= Date.now() %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <span style="font-size: 2.5rem; font-weight: bold;"><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    
                    <div class="ms-4">
                        <h3 class="mb-1 fw-bold text-dark">Selamat Datang, <%= user.name %>!</h3>
                        <p class="text-muted mb-0 d-flex align-items-center flex-wrap">
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill me-2">
                                <i class="fas fa-shield-check me-1"></i> System Administrator
                            </span>
                            <span class="me-3"><i class="fas fa-building-circle-check text-primary me-1"></i> <%= user.department || 'Kantor Pusat' %></span>
                            <span class="small"><i class="fas fa-clock text-warning me-1"></i> Sesi: <%= new Date().toLocaleDateString('id-ID') %></span>
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4 bg-light p-4 d-flex align-items-center border-start border-opacity-10">
                    <div class="w-100">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small text-muted fw-bold">STATUS INFRASTRUKTUR</span>
                            <span class="badge bg-success rounded-pill px-3">ONLINE</span>
                        </div>
                        <div class="progress mb-3" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                        </div>
                        <a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-dark w-100 rounded-pill py-2">
                            <i class="fas fa-gear me-2"></i>Konfigurasi Profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-emerald-gradient text-white border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="icon-shape bg-white bg-opacity-25 rounded-3 p-3">
                            <i class="fas fa-users-gear fa-lg"></i>
                        </div>
                        <span class="badge bg-white bg-opacity-25 rounded-pill">Personel</span>
                    </div>
                    <h2 class="fw-bold mb-1"><%= users.length %></h2>
                    <% const deptCount = [...new Set(users.map(u => u.department || '-'))].length; %>
                    <p class="small mb-0 text-white-50">Tersebar di <%= deptCount %> Unit Kerja</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-3">
                    <a href="/users" class="text-white text-decoration-none small">Detail Tim <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary-gradient text-white border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="icon-shape bg-white bg-opacity-25 rounded-3 p-3">
                            <i class="fas fa-boxes-stacked fa-lg"></i>
                        </div>
                        <span class="badge bg-white bg-opacity-25 rounded-pill">Inventaris</span>
                    </div>
                    <h2 class="fw-bold mb-1"><%= parts.length %></h2>
                    <p class="small mb-0 text-white-50">Item Suku Cadang Terdaftar</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-3">
                    <a href="/parts" class="text-white text-decoration-none small">Cek Stok <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-info-gradient text-white border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="icon-shape bg-white bg-opacity-25 rounded-3 p-3">
                            <i class="fas fa-wrench fa-lg"></i>
                        </div>
                        <span class="badge bg-white bg-opacity-25 rounded-pill">Layanan</span>
                    </div>
                    <h2 class="fw-bold mb-1">DATA JASA</h2>
                    <p class="small mb-0 text-white-50">Manajemen Katalog Service</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-3">
                    <a href="/services" class="text-white text-decoration-none small">Lihat Jasa <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger-gradient text-white border-0 shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="icon-shape bg-white bg-opacity-25 rounded-3 p-3">
                            <i class="fas fa-cart-shopping fa-lg"></i>
                        </div>
                        <span class="badge bg-white bg-opacity-25 rounded-pill">Sirkulasi</span>
                    </div>
                    <h2 class="fw-bold mb-1">TRANSAKSI</h2>
                    <p class="small mb-0 text-white-50">Pantau Arus Kas & Resi</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-3">
                    <a href="/transactions" class="text-white text-decoration-none small">Laporan Penjualan <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="h-100">
                <h5 class="fw-bold mb-3 d-flex align-items-center">
                    <i class="fas fa-bolt text-warning me-2"></i> Pusat Operasional Cepat
                </h5>
                <div class="row g-3">
                    <div class="col-sm-6 col-md-3">
                        <a href="/register" class="quick-action-card text-decoration-none bg-white p-3 d-block text-center rounded-4 shadow-sm">
                            <div class="icon-box bg-primary-soft text-primary mx-auto mb-2">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h6 class="text-dark fw-bold mb-0 small text-nowrap">Tambah Staf</h6>
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a href="/parts/add" class="quick-action-card text-decoration-none bg-white p-3 d-block text-center rounded-4 shadow-sm">
                            <div class="icon-box bg-success-soft text-success mx-auto mb-2">
                                <i class="fas fa-plus-square"></i>
                            </div>
                            <h6 class="text-dark fw-bold mb-0 small text-nowrap">Tambah Barang</h6>
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a href="/services/add" class="quick-action-card text-decoration-none bg-white p-3 d-block text-center rounded-4 shadow-sm">
                            <div class="icon-box bg-info-soft text-info mx-auto mb-2">
                                <i class="fas fa-user-gear"></i>
                            </div>
                            <h6 class="text-dark fw-bold mb-0 small text-nowrap">Tambah Jasa</h6>
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <button onclick="window.print()" class="quick-action-card w-100 border-0 bg-white p-3 d-block text-center rounded-4 shadow-sm">
                            <div class="icon-box bg-danger-soft text-danger mx-auto mb-2">
                                <i class="fas fa-file-pdf"></i>
                            </div>
                            <h6 class="text-dark fw-bold mb-0 small text-nowrap">Laporan Harian</h6>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="h-100">
                <h5 class="fw-bold mb-3 d-flex align-items-center">
                    <i class="fas fa-chart-pie text-primary me-2"></i> Keuangan
                </h5>
                <div class="card border-0 shadow-sm rounded-4 bg-primary text-white h-100 overflow-hidden position-relative">
                    <div class="card-body p-4 d-flex flex-column justify-content-between position-relative" style="z-index: 2;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 small mb-1">Analisis Keuangan</h6>
                                <h4 class="fw-bold mb-0">Laba Rugi</h4>
                            </div>
                            <div class="bg-white bg-opacity-25 rounded-circle p-3 shadow-sm">
                                <i class="fas fa-wallet fa-lg"></i>
                            </div>
                        </div>
                        <div class="mt-4">
                            <hr class="opacity-25">
                            <a href="/admin/report" class="btn btn-light btn-sm w-100 rounded-pill fw-bold py-2 shadow-sm">
                                Lihat Detail Laporan <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="position-absolute end-0 bottom-0 opacity-10" style="font-size: 100px; transform: translate(20%, 20%);">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
                <div class="card-header bg-dark text-white py-3">
                    <h6 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-users-viewfinder me-2 text-info"></i> Status Personel Aktif
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr class="small text-uppercase">
                                    <th class="ps-4">Nama</th>
                                    <th>Unit</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (users && users.length > 0) { %>
                                    <% users.filter(u => u.role !== 'customer').slice(0, 5).forEach(u => { %>
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="small-avatar bg-dark text-white me-2"><%= u.name.charAt(0) %></div>
                                                    <div>
                                                        <div class="fw-bold small"><%= u.name %></div>
                                                        <small class="text-muted text-capitalize"><%= u.role %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-light text-dark border small px-2 py-1"><%= u.department || '-' %></span></td>
                                            <td><span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 small">AKTIF</span></td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-danger d-flex align-items-center">
                        <i class="fas fa-triangle-exclamation me-2"></i> Peringatan Stok Kritis
                    </h6>
                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3 small">Batas &le; 5</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr class="small text-uppercase">
                                    <th class="ps-4">Suku Cadang</th>
                                    <th>Sisa Stok</th>
                                    <th class="text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (parts && parts.length > 0) { %>
                                    <% const lowStock = parts.filter(p => p.stock <= 5); %>
                                    <% if (lowStock.length > 0) { %>
                                        <% lowStock.forEach(part => { %>
                                            <tr>
                                                <td class="ps-4 fw-bold small"><%= part.name %></td>
                                                <td><span class="badge bg-danger rounded-pill px-3 shadow-sm"><%= part.stock %></span></td>
                                                <td class="text-center">
                                                    <form action="/api/parts/update-stock/<%= part._id %>" method="POST" class="d-inline">
                                                        <input type="hidden" name="adjustment" value="10">
                                                        <button type="submit" class="btn btn-xs btn-success rounded-pill px-3 shadow-sm">
                                                            <i class="fas fa-plus me-1"></i> 10 Stok
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="3" class="text-center py-5 text-muted small">Semua persediaan barang aman.</td></tr>
                                    <% } %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* GRADIENTS */
    .bg-emerald-gradient { background: linear-gradient(135deg, #2ecc71, #27ae60); }
    .bg-primary-gradient { background: linear-gradient(135deg, #3498db, #2980b9); }
    .bg-info-gradient { background: linear-gradient(135deg, #17a2b8, #117a8b); }
    .bg-danger-gradient { background: linear-gradient(135deg, #e74c3c, #c0392b); }
    
    /* SOFT COLORS */
    .bg-primary-soft { background: rgba(52, 152, 219, 0.08); }
    .bg-success-soft { background: rgba(46, 204, 113, 0.08); }
    .bg-info-soft { background: rgba(23, 162, 184, 0.08); }
    .bg-danger-soft { background: rgba(231, 76, 60, 0.08); }

    /* CARDS INTERACTION */
    .quick-action-card {
        transition: all 0.3s cubic-bezier(.25,.8,.25,1);
        border: 1px solid rgba(0,0,0,0.05);
    }
    .quick-action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
        background-color: #fcfdfd !important;
    }
    
    .icon-box {
        width: 48px; height: 48px;
        display: flex; align-items: center; justify-content: center;
        border-radius: 12px; font-size: 1.2rem;
    }

    .small-avatar {
        width: 32px; height: 32px;
        border-radius: 8px;
        display: flex; align-items: center; justify-content: center;
        font-weight: bold; font-size: 0.75rem;
    }

    .btn-xs { padding: 0.2rem 0.6rem; font-size: 0.7rem; }

    /* ANIMATIONS */
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>