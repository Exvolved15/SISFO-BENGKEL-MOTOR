<div class="container-fluid px-4 py-4">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold"><i class="fas fa-chart-bar text-primary me-2"></i>Laporan Keuangan</h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="/admin/report/export" class="btn btn-success shadow-sm rounded-pill">
                <i class="fas fa-file-excel me-2"></i>Export Excel
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body">
            <form action="/admin/report" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label class="small fw-bold text-muted">Mulai Tanggal</label>
                    <input type="date" name="startDate" class="form-control" value="<%= filters.startDate %>">
                </div>
                <div class="col-md-4">
                    <label class="small fw-bold text-muted">Sampai Tanggal</label>
                    <input type="date" name="endDate" class="form-control" value="<%= filters.endDate %>">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill">
                        <i class="fas fa-filter me-2"></i>Terapkan Filter
                    </button>
                </div>
            </form>
        </div>
    </div>
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="small text-uppercase fw-bold">
                            <th class="ps-4">Tanggal</th>
                            <th>Total Pendapatan (Omzet)</th>
                            <th>Laba Bersih (Profit)</th>
                            <th>Persentase Margin</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% report.forEach(item => { %>
                            <tr>
                                <td class="ps-4 fw-bold"><%= item._id %></td>
                                <td class="text-primary">Rp <%= item.totalRevenue.toLocaleString('id-ID') %></td>
                                <td class="text-success fw-bold">Rp <%= item.totalProfit.toLocaleString('id-ID') %></td>
                                <td>
                                    <% const margin = ((item.totalProfit / item.totalRevenue) * 100).toFixed(1); %>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                            <div class="progress-bar bg-success" style="width: <%= margin %>%"></div>
                                        </div>
                                        <span class="small fw-bold"><%= margin %>%</span>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>