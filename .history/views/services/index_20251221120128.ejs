<div class="container mt-4">
    <h1>Daftar Jasa Servis</h1>
    <p>Daftar layanan jasa servis yang tersedia.</p>
    
    <a href="/services/add" class="btn btn-success mb-3">Tambah Jasa Baru</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Nama Jasa</th>
                    <th>Harga</th>
                    <th class="text-center">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% services.forEach(s => { %>
                    <tr>
                        <td><strong><%= s.code %></strong></td>
                        
                        <td><%= s.name %></td>
                        
                        <td>Rp <%= s.price.toLocaleString('id-ID') %></td>
                        
                        <td>
                            <div class="d-flex gap-2">
                                <a href="/services/edit/<%= service._id %>" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                        
                                <form action="/services/delete/<%= service._id %>" method="POST" 
                                      onsubmit="return confirm('Yakin ingin menghapus jasa ini?')">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>