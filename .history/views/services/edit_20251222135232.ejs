<div class="row">
    <div class="container mt-4">
        <h2>Edit Jasa Servis: <%= service.name %></h2>
        <hr>
        <form action="/api/services/update/<%= service._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label">Kode Jasa</label>
                <input type="text" name="code" class="form-control" value="<%= service.code %>" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Nama Jasa</label>
                <input type="text" name="name" class="form-control" value="<%= service.name %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Biaya (Rp)</label>
                <input type="number" name="price" class="form-control" value="<%= service.price %>" required>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Simpan Perubahan</button>
                <a href="/services" class="btn btn-secondary">Batal</a>
            </div>
        </form>
    </div>
</div>