<h1><%= title %></h1>
<p>Daftar layanan jasa servis yang tersedia.</p>

<a href="/services/add" class="btn btn-success mb-3">Tambah Jasa Baru</a>

<% if (services.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tbody>
                <% transactions.forEach(trx => { %>
                    <tr>
                        <td class="text-center">
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="/api/transactions/<%= trx._id %>/detail" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Detail
                                </a>
                
                                <a href="/api/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-print"></i> Resi
                                </a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="alert alert-info" role="alert">
        Belum ada data jasa servis yang tersimpan.
    </div>
<% } %>