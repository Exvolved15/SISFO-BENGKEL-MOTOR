<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1><%= title %></h1>
        <p>Isi detail jasa servis baru.</p>
        
        <form action="/api/services/add" method="POST">
            <div class="mb-3">
                <label class="form-label fw-bold">Nama Jasa Servis</label>
                <input type="text" name="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Kode Jasa (Contoh: SRV-11)</label>
                <input type="text" name="code" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Biaya (Rp)</label>
                <input type="number" name="price" class="form-control" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Simpan Jasa Servis</button>
            </div>
        </form>
    </div>
</div>