<div class="container mt-4">
    <h1>Daftar Jasa Servis</h1>
    <p>Daftar layanan jasa servis yang tersedia.</p>
    
    <a href="/services/add" class="btn btn-success mb-3">Tambah Jasa Baru</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Nama Jasa</th>
                    <th>Harga</th>
                    <th class="text-center">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% services.forEach(s => { %>
                    <tr>
                        <td><strong><%= s.code %></strong></td>
                        
                        <td><%= s.name %></td>
                        
                        <td>Rp <%= s.price.toLocaleString('id-ID') %></td>
                        
                        <td class="text-center">
                            <a href="/services/edit/<%= s._id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/services/delete/<%= s._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Hapus jasa ini?')">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>