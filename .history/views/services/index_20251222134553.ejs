<div class="container mt-4">
    <h2>Daftar Jasa Servis</h2>
    <a href="/services/add" class="btn btn-primary mb-3">Tambah Jasa Baru</a>
    
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Kode</th>
                <th>Nama Jasa</th>
                <th>Biaya (Rp)</th>
                <th class="text-center">Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% if (services.length > 0) { %>
                <% services.forEach(srv => { %>
                    <tr>
                        <td><%= srv.code %></td>
                        <td><%= srv.name %></td>
                        <td>Rp <%= srv.price.toLocaleString('id-ID') %></td>
                        <td class="text-center">
                            <a href="/services/edit/<%= srv._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/api/services/delete/<%= srv._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Belum ada data jasa servis.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>