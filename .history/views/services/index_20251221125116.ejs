<div class="container mt-4">
    <h1>Daftar Jasa Servis</h1>
    <p>Daftar layanan jasa servis yang tersedia.</p>
    
    <a href="/services/add" class="btn btn-success mb-3">Tambah Jasa Baru</a>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Nama Jasa</th>
                    <th>Harga</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (services && services.length > 0) { %>
                    <% services.forEach(service => { %>
                        <tr>
                            <td><%= service.code %></td>
                            <td><%= service.name %></td>
                            <td>Rp <%= service.price.toLocaleString('id-ID') %></td>
                            <td>
                                <form action="/services/delete/<%= service._id %>" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="4" class="text-center">Data Kosong</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>