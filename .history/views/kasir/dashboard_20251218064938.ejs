<div class="container mt-4">
    <h2>Selamat Datang, <%= user.name %></h2>
    <hr>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5>Transaksi Baru</h5>
                    <p>Input servis pelanggan baru.</p>
                    <a href="/transactions/add" class="btn btn-light btn-sm">Buka Form</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-dark text-white d-flex justify-content-between">
            <span>Riwayat Transaksi Terakhir</span>
            <a href="/transactions" class="text-white text-decoration-none small">Lihat Semua</a>
        </div>
        <div class="card-body">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>Invoice</th>
                        <th>Pelanggan</th>
                        <th>Plat</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transactions && transactions.length > 0) { %>
                        <% transactions.forEach(trx => { %>
                            <tr>
                                <td><%= trx.invoiceNumber %></td>
                                <td><%= trx.customerName %></td>
                                <td><%= trx.vehicleLicense %></td>
                                <td>
                                    <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-dark btn-sm">
                                        Print
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="4" class="text-center">Belum ada riwayat.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>