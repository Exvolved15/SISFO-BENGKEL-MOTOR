<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Struk Pembayaran - <%= header.invoiceNumber %></title>
    <style>
        body { font-family: 'Courier New', Courier, monospace; width: 80mm; margin: 0 auto; padding: 10px; }
        .text-center { text-align: center; }
        .header { margin-bottom: 20px; }
        table { width: 100%; border-collapse: collapse; }
        th, td { text-align: left; padding: 5px 0; }
        .total { border-top: 1px dashed #000; margin-top: 10px; padding-top: 10px; }
        @media print { .no-print { display: none; } }
    </style>
</head>
<body onload="window.print()">
    <div class="no-print" style="margin-bottom: 20px;">
        <button onclick="window.print()">Cetak Resi</button>
        <a href="/transactions">Kembali</a>
    </div>

    <div class="text-center header">
        <strong>SISFO BENGKEL</strong><br>
        Jl. Alamat Bengkel Anda No. 123<br>
        Telp: 0812-XXXX-XXXX
    </div>

    <div>
        No: <%= header.invoiceNumber %><br>
        Tgl: <%= new Date(header.createdAt).toLocaleString('id-ID') %><br>
        Cust: <%= header.customerName %> (<%= header.vehicleLicense %>)
    </div>

    <hr>
    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Qty</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            <% details.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.subTotal.toLocaleString('id-ID') %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="total">
        <strong>TOTAL: Rp <%= header.totalAmount.toLocaleString('id-ID') %></strong><br>
        Metode: <%= header.paymentMethod %><br>
        Mekanik: <%= header.assignedToName || '-' %>
    </div>

    <div class="text-center" style="margin-top: 30px;">
        Terima Kasih Atas Kunjungan Anda!
    </div>
</body>
</html>