<!DOCTYPE html>
<html>
<head>
    <title>Resi Bengkel - <%= job.vehicle.licensePlate %></title>
    <style>
        body { font-family: 'Courier New', Courier, monospace; width: 80mm; margin: auto; padding: 10px; }
        .text-center { text-align: center; }
        .divider { border-top: 1px dashed #000; margin: 10px 0; }
        table { width: 100%; font-size: 12px; }
        .total { font-weight: bold; font-size: 14px; }
        @media print { .no-print { display: none; } }
    </style>
</head>
<body onload="window.print()">
    <div class="text-center">
        <h3 style="margin:0;">SISFO BENGKEL</h3>
        <p style="font-size:10px;">Jl. Raya Bengkel No. 123<br>Telp: 0812-3456-789</p>
    </div>
    
    <div class="divider"></div>
    <table>
        <tr><td>No. Plat :</td><td><%= job.vehicle.licensePlate %></td></tr>
        <tr><td>Nama     :</td><td><%= job.customer.name %></td></tr>
        <tr><td>Tanggal  :</td><td><%= new Date(job.completedAt).toLocaleDateString('id-ID') %></td></tr>
    </table>
    
    <div class="divider"></div>
<table>
    <thead>
        <tr>
            <th align="left">Item</th>
            <th align="right">Qty</th>
            <th align="right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        <% if (job.transactionDetails && job.transactionDetails.length > 0) { %>
            <% job.transactionDetails.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td align="right">x<%= item.quantity %></td>
                    <td align="right"><%= new Intl.NumberFormat('id-ID').format(item.subtotal) %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr><td colspan="3" align="center">Tidak ada detail item</td></tr>
        <% } %>
    </tbody>
</table>
<div class="divider"></div>
<table class="total">
    <tr>
        <td>TOTAL AKHIR</td>
        <td align="right">Rp <%= new Intl.NumberFormat('id-ID').format(job.totalAmount) %></td>
    </tr>
</table>
    
    <div class="divider"></div>
    <div class="text-center" style="font-size: 10px;">
        Terima Kasih Atas Kunjungan Anda<br>
        Semoga Kendaraan Anda Selalu Prima
    </div>
    
    <button class="no-print" onclick="window.close()" style="margin-top:20px; width:100%;">Tutup Halaman</button>
</body>
</html>