<div class="container mt-4">
    <h2>Selamat Datang, <%= user.name %></h2>
    <hr>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5>Transaksi Baru</h5>
                    <p>Input servis pelanggan baru.</p>
                    <a href="/transactions/add" class="btn btn-light btn-sm">Buka Form</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Stok Menipis (Segera Restock)</h6>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <thead><tr><th>Nama Barang</th><th>Stok</th><th>Aksi</th></tr></thead>
                <tbody>
                    <% parts.forEach(p => { %>
                        <tr>
                            <td><%= p.name %></td>
                            <td><span class="badge bg-danger"><%= p.stock %></span></td>
                            <td><a href="/parts/edit/<%= p._id %>" class="btn btn-link btn-sm">Update Stok</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>