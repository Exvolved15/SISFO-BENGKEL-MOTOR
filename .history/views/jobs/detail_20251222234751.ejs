<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0 text-primary fw-bold">
            <i class="fas fa-file-alt me-2"></i>Rincian Pekerjaan Mekanik
        </h2>
        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm shadow-sm">
            <i class="fas fa-arrow-left me-1"></i> Kembali
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-dark text-white py-3">
                    <h6 class="mb-0"><i class="fas fa-tools me-2"></i>Data Kendaraan & Keluhan</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Nomor Invoice</div>
                        <div class="col-sm-8 fw-bold text-primary"><%= job.invoiceNumber %></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Status Pekerjaan</div>
                        <div class="col-sm-8">
                            <% if (job.status === 'on_progress') { %>
                                <span class="badge bg-warning text-dark px-3">SEDANG DIKERJAKAN</span>
                            <% } else if (job.status === 'completed') { %>
                                <span class="badge bg-success px-3">SELESAI</span>
                            <% } else { %>
                                <span class="badge bg-secondary px-3"><%= job.status.toUpperCase() %></span>
                            <% } %>
                        </div>
                    </div>
                    <hr class="opacity-10">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Tipe Motor</div>
                        <div class="col-sm-8 fw-bold"><%= job.motorName %></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Nomor Polisi</div>
                        <div class="col-sm-8 fw-bold text-uppercase"><%= job.vehicleLicense %></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Nama Pelanggan</div>
                        <div class="col-sm-8 text-uppercase"><%= job.customerName || 'Umum' %></div>
                    </div>
                    <hr class="opacity-10">
                    <div class="mb-3">
                        <label class="text-muted small d-block mb-2">DESKRIPSI KERUSAKAN / TUGAS:</label>
                        <div class="p-3 bg-light rounded border text-secondary shadow-sm" style="min-height: 100px;">
                            <%= job.description || 'Tidak ada deskripsi pengerjaan.' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Waktu Pengerjaan</h6>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <small class="text-muted d-block">Tanggal Masuk:</small>
                        <span class="fw-bold"><%= new Date(job.createdAt).toLocaleString('id-ID') %></span>
                    </div>
                    <% if (job.updatedAt && job.status === 'completed') { %>
                    <div class="mb-3">
                        <small class="text-muted d-block">Waktu Selesai:</small>
                        <span class="fw-bold text-success"><%= new Date(job.updatedAt).toLocaleString('id-ID') %></span>
                    </div>
                    <% } %>
                    <hr>
                    <div class="text-center p-3 bg-light rounded border-start border-4 border-primary">
                        <i class="fas fa-user-check fa-2x text-primary mb-2"></i>
                        <p class="small text-muted mb-0">Mekanik Penanggung Jawab:</p>
                        <h6 class="fw-bold mb-0 text-dark">
                            <%= job.mechanicName || 'Belum Ditentukan' %>
                        </h6>
                        <small class="text-muted" style="font-size: 0.7rem;">
                            ID: <%= job.mechanicId ? job.mechanicId.toString().slice(-6).toUpperCase() : '-' %>
                        </small>
                    </div>
                </div>
            </div>

            <% if (user.role === 'admin' || user.role === 'kasir') { %>
            <div class="card border-0 shadow-sm border-top border-danger border-4">
                <div class="card-body p-4 text-center">
                    <p class="small text-muted mb-3">Panel Administrasi (Hanya Admin)</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-warning btn-sm"><i class="fas fa-edit me-1"></i>Edit Data</button>
                        <button class="btn btn-danger btn-sm"><i class="fas fa-trash me-1"></i>Hapus Job</button>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>