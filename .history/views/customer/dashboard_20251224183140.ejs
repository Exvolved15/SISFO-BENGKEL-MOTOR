<div class="container py-4 animate-fade-in dashboard-wrapper">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-4 d-flex align-items-center bg-white">
            <div class="rounded-circle bg-info d-flex align-items-center justify-content-center text-white shadow-sm overflow-hidden" style="width: 80px; height: 80px;">
                <% if (user.profileImage) { %>
                    <img src="<%= user.profileImage %>" style="width:100%; height:100%; object-fit:cover;">
                <% } else { %>
                    <span class="fs-2 fw-bold text-uppercase"><%= user.name.charAt(0) %></span>
                <% } %>
            </div>
            <div class="ms-4">
                <h3 class="mb-0 fw-bold text-dark">Halo, <%= user.name %>!</h3>
                <p class="text-muted mb-0"><i class="fas fa-motorcycle me-2 text-info"></i>Pantau status motor Anda secara live.</p>
            </div>
        </div>
    </div>

    <h5 class="fw-bold mb-3"><i class="fas fa-satellite-dish text-danger me-2"></i>Monitor Pengerjaan</h5>
    <div class="row g-4 mb-5">
        <% if (typeof myJobs !== 'undefined' && myJobs.length > 0) { %>
            <% myJobs.filter(j => j.status !== 'completed').forEach(job => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow rounded-4 border-bottom border-4 border-<%= job.status === 'on_progress' ? 'warning' : 'secondary' %>">
                        <div class="card-body p-4 text-center">
                            <div class="mb-3">
                                <i class="fas <%= job.status === 'on_progress' ? 'fa-screwdriver-wrench fa-spin text-warning' : 'fa-clock text-muted' %> fa-3x"></i>
                            </div>
                            <h5 class="fw-bold mb-1"><%= job.motorName %></h5>
                            <span class="badge bg-dark font-monospace mb-3"><%= job.vehicleLicense %></span>
                            <div class="alert <%= job.status === 'on_progress' ? 'bg-warning' : 'bg-light' %> py-2 rounded-pill fw-bold small mb-0">
                                <%= job.status === 'on_progress' ? 'SEDANG DIKERJAKAN' : 'MENUNGGU ANTREAN' %>
                            </div>
                            <hr class="my-3 opacity-10">
                            <button onclick="showDetail('<%= job.invoiceNumber %>', '<%= job.motorName %>', '<%= job.description %>')" class="btn btn-sm btn-outline-primary rounded-pill w-100 fw-bold">
                                <i class="fas fa-search me-1"></i> RINCIAN KERJA
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
        
        <% if (!myJobs.some(j => j.status !== 'completed')) { %>
            <div class="col-12">
                <div class="p-5 text-center bg-white rounded-4 shadow-sm border border-dashed">
                    <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                    <h5>Semua beres!</h5>
                    <p class="text-muted">Tidak ada motor yang sedang diservis saat ini.</p>
                </div>
            </div>
        <% } %>
    </div>

    <h5 class="fw-bold mb-3"><i class="fas fa-clock-rotate-left text-muted me-2"></i>Riwayat Servis</h5>
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="small text-uppercase fw-bold">
                        <th class="ps-4">No. Invoice</th>
                        <th>Motor</th>
                        <th>Rincian Pekerjaan</th>
                        <th>Tanggal</th>
                        <th class="text-end pe-4">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% myJobs.filter(j => j.status === 'completed').forEach(job => { %>
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-primary">#<%= job.invoiceNumber %></span>
                            </td>
                            <td>
                                <div class="fw-bold text-dark"><%= job.motorName %></div>
                                <small class="text-muted font-monospace"><%= job.vehicleLicense %></small>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    
                                    <button class="btn btn-link btn-sm text-info p-0 ms-2 " onclick="showDetail('<%= job.invoiceNumber %>', '<%= job.motorName %>', '<%= job.description %>')">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </div>
                            </td>
                            <td><%= new Date(job.updatedAt).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                            <td class="text-end pe-4">
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                    <i class="fas fa-check me-1"></i> SELESAI
                                </span>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="customerDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg">
            <div class="modal-header bg-dark text-white rounded-top-4 py-3">
                <h5 class="modal-title fw-bold"><i class="fas fa-file-invoice me-2 text-info"></i>Detail Pekerjaan</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="mb-3">
                    <small class="text-muted d-block fw-bold text-uppercase">Nomor Invoice:</small>
                    <h5 id="detInv" class="fw-bold text-primary mb-0"></h5>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block fw-bold text-uppercase">Unit Kendaraan:</small>
                    <h6 id="detMotor" class="fw-bold text-dark mb-0"></h6>
                </div>
                <hr class="opacity-10">
                <div>
                    <small class="text-muted d-block fw-bold mb-2 text-uppercase">Rincian Perbaikan & Suku Cadang:</small>
                    <div id="detDesc" class="p-3 bg-light rounded-4 border-start border-4 border-info shadow-inner text-dark">
                        </div>
                </div>
            </div>
            <div class="modal-footer border-0 bg-light rounded-bottom-4">
                <button type="button" class="btn btn-secondary w-100 rounded-pill fw-bold" data-bs-dismiss="modal">TUTUP</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Memperbaiki area profil di navbar agar tidak tumpang tindih atau terpotong */
    .nav-profile-dropdown {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.1);
        padding: 5px 15px;
        border-radius: 50px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .nav-profile-dropdown:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    /* Memastikan dropdown menu muncul di atas elemen lain */
    .dropdown-menu-end {
        right: 0;
        left: auto;
        z-index: 9999 !important;
        margin-top: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border: none;
        border-radius: 15px;
    }

    /* Mengatur ukuran foto profil di navbar agar konsisten */
    .navbar-avatar {
        width: 35px;
        height: 35px;
        object-fit: cover;
        border: 2px solid #fff;
    }
    .bg-info-soft { background-color: rgba(13, 202, 240, 0.1); }
    .shadow-inner { box-shadow: inset 0 2px 4px 0 rgba(0,0,0,0.05); }
    .card-hover-simple { transition: all 0.3s ease; border: 1px solid rgba(0,0,0,0.05); }
    .card-hover-simple:hover { transform: translateY(-8px); box-shadow: 0 15px 30px rgba(13, 202, 240, 0.1) !important; }
    .font-monospace { font-family: 'Courier New', Courier, monospace; letter-spacing: 1px; }
    .animate-fade-in { animation: fadeIn 0.8s ease-in-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script>
    function showDetail(inv, motor, desc) {
    document.getElementById('detInv').innerText = '#' + inv;
    document.getElementById('detMotor').innerText = motor;
    
    let parts = desc ? desc.split(' | ') : ["-"];
    let items = parts[0].split(', ').join('<br>• ');
    let note = parts[1] ? `<div class="mt-3 small pt-2 border-top text-muted"><strong>Catatan Mekanik:</strong><br>${parts[1]}</div>` : '';
    
    document.getElementById('detDesc').innerHTML = '<div class="fw-bold">• ' + items + '</div>' + note;
    
    const myModal = new bootstrap.Modal(document.getElementById('customerDetailModal'));
    myModal.show();
}
</script>