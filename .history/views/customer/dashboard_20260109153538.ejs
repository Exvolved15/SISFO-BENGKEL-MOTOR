<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-4 d-flex align-items-center bg-white">
            <div class="rounded-circle bg-info d-flex align-items-center justify-content-center text-white shadow-sm overflow-hidden" style="width: 80px; height: 80px;">
                <% if (user.profileImage) { %>
                    <img src="<%= user.profileImage %>" style="width:100%; height:100%; object-fit:cover;">
                <% } else { %>
                    <span class="fs-2 fw-bold text-uppercase text-white"><%= user.name.charAt(0) %></span>
                <% } %>
            </div>
            <div class="ms-4">
                <h3 class="mb-0 fw-bold text-dark">Halo, <%= user.name %>!</h3>
                <p class="text-muted mb-0"><i class="fas fa-motorcycle me-2 text-info"></i>Pantau status motor Anda secara live.</p>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-lg rounded-4 p-4 mb-5" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px);">
        <h5 class="fw-bold mb-4 text-dark"><i class="fas fa-satellite-dish text-danger me-2"></i>Monitor Pengerjaan</h5>
        <div class="row g-4">
            <% if (typeof myJobs !== 'undefined' && myJobs.length > 0 && myJobs.filter(j => j.status !== 'completed').length > 0) { %>
                <% myJobs.filter(j => j.status !== 'completed').forEach(job => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm rounded-4 border-bottom border-4 border-<%= job.status === 'on_progress' ? 'warning' : 'secondary' %> bg-light h-100">
                            <div class="card-body p-4 text-center">
                                <div class="mb-3">
                                    <i class="fas <%= job.status === 'on_progress' ? 'fa-screwdriver-wrench fa-spin text-warning' : 'fa-clock text-muted' %> fa-3x"></i>
                                </div>
                                <h5 class="fw-bold mb-1 text-dark"><%= job.motorName %></h5>
                                <span class="badge bg-dark font-monospace mb-3"><%= job.vehicleLicense %></span>
                                <div class="alert <%= job.status === 'on_progress' ? 'bg-warning text-dark' : 'bg-white text-muted' %> py-2 rounded-pill fw-bold small mb-3 shadow-sm border-0">
                                    <%= job.status === 'on_progress' ? 'SEDANG DIKERJAKAN' : 'MENUNGGU ANTREAN' %>
                                </div>
                                <button onclick="showJobDetail('<%= job.invoiceNumber %>', '<%= job.motorName %>', '<%= job.description %>', '<%= job.status %>')" class="btn btn-sm btn-outline-primary rounded-pill w-100 fw-bold">
                                    <i class="fas fa-search me-1"></i> RINCIAN KERJA
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <div class="p-4 bg-light rounded-4 border border-dashed">
                        <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                        <h5 class="text-dark">Tidak ada pengerjaan aktif.</h5>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <div class="card border-0 shadow-lg rounded-4 p-4" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px);">
        <h5 class="fw-bold mb-4 text-dark"><i class="fas fa-clock-rotate-left text-muted me-2"></i>Riwayat Servis</h5>
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden border">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="small text-uppercase fw-bold text-dark">
                            <th class="ps-4">No. Invoice</th>
                            <th>Motor</th>
                            <th>Rincian</th>
                            <th>Tanggal</th>
                            <th class="text-end pe-4">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof myJobs !== 'undefined' && myJobs.filter(j => j.status === 'completed').length > 0) { %>
                            <% myJobs.filter(j => j.status === 'completed').forEach(job => { %>
                                <tr>
                                    <td class="ps-4"><span class="fw-bold text-primary">#<%= job.invoiceNumber %></span></td>
                                    <td><div class="fw-bold text-dark"><%= job.motorName %></div></td>
                                    <td>
                                        <button class="btn btn-sm btn-light rounded-pill border px-3" 
                                            onclick="showJobDetail('<%= job.invoiceNumber %>', '<%= job.motorName %>', '<%= job.description %>', 'completed')">
                                            <i class="fas fa-file-invoice text-info me-1"></i> Rincian & Resi
                                        </button>
                                    </td>
                                    <td class="text-muted small"><%= new Date(job.updatedAt).toLocaleDateString('id-ID', { day:'numeric', month:'short', year:'numeric' }) %></td>
                                    <td class="text-end pe-4"><span class="badge bg-success text-white rounded-pill px-3">SELESAI</span></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" class="text-center py-4 text-muted">Belum ada riwayat servis.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailJobModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-dark text-white border-0 py-3">
                <h6 class="modal-title fw-bold"><i class="fas fa-info-circle me-2 text-info"></i>Rincian Pekerjaan</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4">
                    <h4 class="fw-bold mb-1 text-dark" id="modalMotorName">Nama Motor</h4>
                    <span class="badge bg-primary rounded-pill px-3" id="modalInvoice">#INV-000</span>
                </div>
                
                <div class="bg-light p-3 rounded-4 mb-4 border-start border-4 border-info">
                    <label class="small text-muted fw-bold text-uppercase mb-2 d-block">Deskripsi Pekerjaan & Suku Cadang:</label>
                    <p class="mb-0 text-dark" id="modalDescription" style="white-space: pre-line; font-size: 0.9rem;">-</p>
                </div>

                <div id="actionButtons" class="d-none">
                    <div class="alert alert-success small py-2 mb-3 border-0">
                        <i class="fas fa-check-circle me-2"></i>Servis telah selesai. Silakan unduh atau cetak resi Anda.
                    </div>
                    <div class="d-grid gap-2">
                        <a href="#" id="btnDownloadInvoice" target="_blank" class="btn btn-success fw-bold py-2 rounded-3 shadow-sm">
                            <i class="fas fa-file-pdf me-2"></i>UNDUH INVOICE (PDF)
                        </a>
                        <a href="#" id="btnPrintInvoice" target="_blank" class="btn btn-outline-dark fw-bold py-2 rounded-3 shadow-sm">
                            <i class="fas fa-print me-2"></i>CETAK NOTA BENGKEL
                        </a>
                    </div>
                </div>

                <div id="onProgressMsg" class="d-none text-center py-2 bg-light rounded-pill">
                    <div class="spinner-border spinner-border-sm text-warning me-2" role="status"></div>
                    <span class="text-muted small fw-bold">Pengerjaan berlangsung. Resi tersedia jika sudah selesai.</span>
                </div>
            </div>
            <div class="modal-footer border-0 bg-light rounded-bottom-4">
                <button type="button" class="btn btn-secondary w-100 rounded-pill fw-bold" data-bs-dismiss="modal">TUTUP</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="customerDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg">
            <div class="modal-header bg-dark text-white rounded-top-4 py-3">
                <h5 class="modal-title fw-bold"><i class="fas fa-file-invoice me-2 text-info"></i>Detail Pekerjaan</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="mb-3">
                    <small class="text-muted d-block fw-bold text-uppercase">Nomor Invoice:</small>
                    <h5 id="detInv" class="fw-bold text-primary mb-0"></h5>
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block fw-bold text-uppercase">Unit Kendaraan:</small>
                    <h6 id="detMotor" class="fw-bold text-dark mb-0"></h6>
                </div>
                <hr class="opacity-10">
                <div>
                    <small class="text-muted d-block fw-bold mb-2 text-uppercase">Rincian Perbaikan & Suku Cadang:</small>
                    <div id="detDesc" class="p-3 bg-light rounded-4 border-start border-4 border-info shadow-inner text-dark">
                        </div>
                </div>
            </div>
            <div class="modal-footer border-0 bg-light rounded-bottom-4">
                <button type="button" class="btn btn-secondary w-100 rounded-pill fw-bold" data-bs-dismiss="modal">TUTUP</button>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-info-soft { background-color: rgba(13, 202, 240, 0.1); }
    .shadow-inner { box-shadow: inset 0 2px 4px 0 rgba(0,0,0,0.05); }
    .card-hover-simple { transition: all 0.3s ease; border: 1px solid rgba(0,0,0,0.05); }
    .card-hover-simple:hover { transform: translateY(-8px); box-shadow: 0 15px 30px rgba(13, 202, 240, 0.1) !important; }
    .font-monospace { font-family: 'Courier New', Courier, monospace; letter-spacing: 1px; }
    .animate-fade-in { animation: fadeIn 0.8s ease-in-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script>
    function showJobDetail(invoice, motor, desc, status) {
        // Reset Modal Content
        document.getElementById('modalMotorName').innerText = motor;
        document.getElementById('modalInvoice').innerText = '#' + invoice;
        document.getElementById('modalDescription').innerText = desc || 'Menunggu rincian mekanik...';

        const actionSection = document.getElementById('actionButtons');
        const progressMsg = document.getElementById('onProgressMsg');

        // Logic Visibility Cetak Berdasarkan Status
        if (status === 'completed' || status === 'selesai') {
            actionSection.classList.remove('d-none');
            progressMsg.classList.add('d-none');
            
            // Perbaikan Rute: Pastikan rute ini ada di server.js (app.use('/api/transactions', ...))
            document.getElementById('btnDownloadInvoice').href = '/api/transactions/print/' + invoice;
document.getElementById('btnPrintInvoice').href = '/api/transactions/print/' + invoice;
        } else {
            actionSection.classList.add('d-none');
            progressMsg.classList.remove('d-none');
        }

        // Jalankan Modal Bootstrap 5
        const myModal = new bootstrap.Modal(document.getElementById('detailJobModal'));
        myModal.show();
    }
</script>