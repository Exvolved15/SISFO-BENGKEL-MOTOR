<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Dashboard Pelanggan</h3>
        <span class="badge bg-primary">User: <%= user.name %></span>
    </div>
    <hr>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="fw-bold text-primary">Status Motor Saya</h5>
            <hr>
            <% if (myJobs && myJobs.length > 0) { %>
                <% myJobs.forEach(job => { %>
                    <div class="d-flex justify-content-between align-items-center mb-3 p-3 bg-light rounded">
                        <div>
                            <h6 class="mb-1 fw-bold"><%= job.motorName %> (<%= job.vehicleLicense %>)</h6>
                            <small class="text-muted">Mekanik: <%= job.mechanicId?.name || 'Menunggu Antrean' %></small><br>
                            <small class="badge bg-info text-dark">Bagian: <%= job.mechanicId?.department || '-' %></small>
                        </div>
                        <span class="badge <%= job.status === 'on_progress' ? 'bg-warning' : 'bg-success' %> p-2">
                            <%= job.status === 'on_progress' ? 'Sedang Dikerjakan' : 'Selesai' %>
                        </span>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center text-muted">Belum ada riwayat servis.</p>
            <% } %>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white py-3">
            <h6 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Riwayat Transaksi</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Invoice</th>
                            <th>Tanggal</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions && transactions.length > 0) { %>
                            <% transactions.forEach(trx => { %>
                                <tr>
                                    <td><strong><%= trx.invoiceNumber %></strong></td>
                                    <td><%= new Date(trx.createdAt).toLocaleDateString('id-ID') %></td>
                                    <td>Rp<%= trx.grandTotal.toLocaleString() %></td>
                                    <td>
                                        <% let s = (trx.status || '').toLowerCase(); %>
                                        <span class="badge <%= s === 'completed' ? 'bg-success' : 'bg-secondary' %>">
                                            <%= s === 'completed' ? 'Lunas' : 'Pending' %>
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="/transactions/print/<%= trx._id %>" target="_blank" class="btn btn-sm btn-outline-dark">
                                            <i class="fas fa-print me-1"></i> Resi
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" class="text-center py-4">Belum ada riwayat transaksi.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>