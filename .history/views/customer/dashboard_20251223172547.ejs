<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden rounded-4">
        <div class="card-body p-4 d-flex align-items-center bg-white">
            <div class="rounded-circle bg-info d-flex align-items-center justify-content-center text-white shadow-sm overflow-hidden" style="width: 80px; height: 80px;">
                <% if (user.profileImage) { %>
                    <img src="<%= user.profileImage %>" style="width:100%; height:100%; object-fit:cover;">
                <% } else { %>
                    <span class="fs-2 fw-bold"><%= user.name.charAt(0).toUpperCase() %></span>
                <% } %>
            </div>
            <div class="ms-4">
                <h3 class="mb-0 fw-bold text-dark">Halo, <%= user.name %>!</h3>
                <p class="text-muted mb-0"><i class="fas fa-motorcycle me-2 text-info"></i>Pantau status motor Anda secara live.</p>
            </div>
        </div>
    </div>

    <h5 class="fw-bold mb-3"><i class="fas fa-satellite-dish text-danger me-2"></i>Monitor Pengerjaan</h5>
    <div class="row g-4 mb-5">
        <% if (typeof myJobs !== 'undefined' && myJobs.length > 0) { %>
            <% myJobs.filter(j => j.status !== 'completed').forEach(job => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow rounded-4 border-bottom border-4 border-<%= job.status === 'on_progress' ? 'warning' : 'secondary' %>">
                        <div class="card-body p-4 text-center">
                            <div class="mb-3">
                                <i class="fas <%= job.status === 'on_progress' ? 'fa-screwdriver-wrench fa-spin text-warning' : 'fa-clock text-muted' %> fa-3x"></i>
                            </div>
                            <h5 class="fw-bold mb-1"><%= job.motorName %></h5>
                            <span class="badge bg-dark font-monospace mb-3"><%= job.vehicleLicense %></span>
                            <div class="alert <%= job.status === 'on_progress' ? 'bg-warning' : 'bg-light' %> py-2 rounded-pill fw-bold small mb-0">
                                <%= job.status === 'on_progress' ? 'SEDANG DIKERJAKAN' : 'MENUNGGU ANTREAN' %>
                            </div>
                            <hr class="my-3 opacity-10">
                            <a href="/track-status?invoice=<%= job.invoiceNumber %>" class="btn btn-sm btn-outline-primary rounded-pill w-100">
                                LIHAT DETAIL TRACKING
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
        
        <% if (!myJobs.some(j => j.status !== 'completed')) { %>
            <div class="col-12">
                <div class="p-5 text-center bg-white rounded-4 shadow-sm border border-dashed">
                    <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                    <h5>Semua beres!</h5>
                    <p class="text-muted">Tidak ada motor yang sedang diservis saat ini.</p>
                </div>
            </div>
        <% } %>
    </div>

    <h5 class="fw-bold mb-3"><i class="fas fa-clock-rotate-left text-muted me-2"></i>Riwayat Servis</h5>
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="small text-uppercase fw-bold">
                        <th class="ps-4">No. Invoice</th>
                        <th>Motor</th>
                        <th>Tanggal</th>
                        <th class="text-end pe-4">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% myJobs.filter(j => j.status === 'completed').forEach(job => { %>
                        <tr>
                            <td class="ps-4"><span class="fw-bold text-primary">#<%= job.invoiceNumber %></span></td>
                            <td><%= job.motorName %></td>
                            <td><%= new Date(job.updatedAt).toLocaleDateString('id-ID') %></td>
                            <td class="text-end pe-4">
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">SELESAI</span>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* CUSTOM CUSTOMER THEME */
    .bg-info-soft { background-color: rgba(13, 202, 240, 0.1); }
    .bg-warning-soft { background-color: rgba(255, 193, 7, 0.1); }
    .bg-success-soft { background-color: rgba(25, 135, 84, 0.1); }
    .bg-secondary-soft { background-color: rgba(108, 117, 125, 0.1); }

    .card-hover-simple {
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }
    .card-hover-simple:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(13, 202, 240, 0.1) !important;
    }

    .font-monospace { font-family: 'Courier New', Courier, monospace; letter-spacing: 1px; }
    .animate-fade-in { animation: fadeIn 0.8s ease-in-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>