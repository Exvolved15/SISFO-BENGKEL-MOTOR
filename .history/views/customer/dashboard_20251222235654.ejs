<div class="container py-4">
    <div class="card border-0 shadow-sm mb-4 card-hover bg-info text-dark">
        <div class="card-body d-flex align-items-center">
            <div class="rounded-circle border border-white" style="width:70px; height:70px; overflow:hidden;">
                <img src="<%= user.profileImage %>?t=<%= Date.now() %>" style="width:100%; height:100%; object-fit:cover;">
            </div>
            <div class="ms-3">
                <h4 class="mb-0 fw-bold">Hai, <%= user.name %>!</h4>
                <small>Selamat datang di area pelanggan.</small>
            </div>
            <a href="/users/edit/<%= user._id %>" class="btn btn-dark btn-sm ms-auto btn-hover">Edit Profil</a>
        </div>
    </div>

    <div class="card border-0 shadow-sm card-hover">
        <div class="card-header bg-white fw-bold text-primary">Status Motor Saya</div>
        <div class="card-body">
            <% if (myJobs.length > 0) { %>
                <% myJobs.forEach(job => { %>
                    <div class="d-flex justify-content-between border-bottom py-3">
                        <div><strong><%= job.motorName %></strong> (<%= job.vehicleLicense %>)</div>
                        <div>
                            <% if (job.status === 'on_progress') { %>
                                <span class="badge bg-warning text-dark pulse">Proses Servis</span>
                            <% } else if (job.status === 'completed') { %>
                                <span class="badge bg-success text-white">Siap Diambil</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Antre</span>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center text-muted">Belum ada riwayat servis.</p>
            <% } %>
        </div>
    </div>
</div>