<div class="container-fluid px-4 py-4">
    <div class="card border-0 shadow-sm mb-4 overflow-hidden" style="border-radius: 15px;">
        <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-md-8 p-4 d-flex align-items-center bg-white">
                    <div class="rounded-circle bg-info d-flex align-items-center justify-content-center text-white shadow-sm overflow-hidden" 
                         style="width: 80px; height: 80px; min-width: 80px; border: 3px solid #f8f9fa;">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>?t=<%= Date.now() %>" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <span style="font-size: 2rem; font-weight: bold;"><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    
                    <div class="ms-4">
                        <h3 class="mb-1 fw-bold text-dark">Halo, <%= user.name %>!</h3>
                        <p class="text-muted mb-0">
                            <span class="badge bg-info text-dark me-2">Pelanggan Setia</span>
                            <i class="fas fa-envelope me-1"></i> <%= user.email %>
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4 bg-light p-4 d-flex align-items-center border-start text-center">
                    <div class="w-100">
                        <div class="small text-muted mb-2">Akses Level</div>
                        <span class="badge bg-white text-dark border px-3 py-2">CUSTOMER AREA</span>
                        <hr class="my-2">
                        <a href="/users/edit/<%= user._id %>" class="btn btn-sm btn-outline-info w-100">
                            <i class="fas fa-user-edit me-1"></i> Edit Profil Saya
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px;">
        <div class="card-header bg-white py-3">
            <h5 class="fw-bold text-primary mb-0"><i class="fas fa-motorcycle me-2"></i>Status Motor Saya</h5>
        </div>
        <div class="card-body">
            <% if (typeof myJobs !== 'undefined' && myJobs.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Motor</th>
                                <th>No. Polisi</th>
                                <th>Status</th>
                                <th>Terakhir Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% myJobs.forEach(job => { %>
                                <tr>
                                    <td><strong><%= job.motorName %></strong></td>
                                    <td><span class="badge bg-dark"><%= job.vehicleLicense %></span></td>
                                    <td>
                                        <% if (job.status === 'pending') { %>
                                            <span class="badge bg-secondary">Menunggu Antrean</span>
                                        <% } else if (job.status === 'on_progress') { %>
                                            <span class="badge bg-warning text-dark"><i class="fas fa-tools fa-spin me-1"></i> Sedang Dikerjakan</span>
                                        <% } else { %>
                                            <span class="badge bg-success">Selesai / Bisa Diambil</span>
                                        <% } %>
                                    </td>
                                    <td class="small text-muted"><%= new Date(job.updatedAt).toLocaleDateString('id-ID') %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-3x text-light mb-3"></i>
                    <p class="text-muted">Anda belum memiliki riwayat servis di bengkel kami.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>