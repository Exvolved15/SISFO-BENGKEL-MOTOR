<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">üõ†Ô∏è Dashboard Mekanik</h1>
        <div class="badge bg-dark p-2">Mekanik: <%= user.name %></div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-list-ul me-2"></i>Antrean Pekerjaan Tersedia</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <% if (pendingJobs.length > 0) { %>
                            <% pendingJobs.forEach(job => { %>
                                <div class="list-group-item p-3 border-bottom">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-bold text-primary mb-1"><%= job.vehicleLicense %></h6>
                                        <small class="text-muted"><%= job.invoiceNumber %></small>
                                    </div>
                                    <p class="mb-1">Pelanggan: <strong><%= job.customer.name %></strong></p>
                                    <p class="small text-muted mb-2"><%= job.description || 'Tidak ada catatan' %></p>
                                    <form action="/jobs/take-job/<%= job._id %>" method="POST">
                                        <button type="submit" class="btn btn-outline-primary btn-sm w-100">Ambil Pekerjaan</button>
                                    </form>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="p-5 text-center text-muted">Belum ada antrean pekerjaan.</div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-wrench me-2"></i>Pekerjaan Saya (On Progress)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Plat Nomor</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% const myActiveJobs = historyJobs.filter(j => j.assignedTo && j.assignedTo._id.toString() === user._id.toString() && j.status === 'on_progress') %>
                                <% if (myActiveJobs.length > 0) { %>
                                    <% myActiveJobs.forEach(job => { %>
                                        <tr>
                                            <td><span class="fw-bold"><%= job.vehicleLicense %></span></td>
                                            <td><span class="badge bg-info">Proses</span></td>
                                            <td>
                                                <button onclick="finishJob('<%= job._id %>')" class="btn btn-success btn-sm">Selesai</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="3" class="text-center py-4 text-muted">Anda belum mengambil pekerjaan.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-secondary text-white py-3">
                    <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Aktivitas Bengkel Terakhir</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush small">
                        <% historyJobs.slice(0, 5).forEach(job => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= job.vehicleLicense %> (<%= job.assignedTo ? job.assignedTo.name : 'Unknown' %>)
                                <span class="badge <%= job.status === 'completed' ? 'bg-success' : 'bg-info' %> rounded-pill">
                                    <%= job.status %>
                                </span>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
async function finishJob(id) {
    if(confirm('Yakin pekerjaan ini sudah selesai?')) {
        const res = await fetch(`/jobs/status/${id}`, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ status: 'completed' })
        });
        if(res.ok) window.location.reload();
    }
}
</script>