<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    </head>
<body>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Halo, <%= user.name %>!</h1>
        <p class="text-muted">Kelola pekerjaan Anda hari ini.</p>
    
        <div class="row">
            <div class="col-xl-6">
                <div class="card shadow mb-4 border-left-primary">
                    <div class="card-header py-3 bg-primary text-white">
                        <h6 class="m-0 font-weight-bold"><i class="fas fa-hand-pointer me-2"></i> Antrean Pekerjaan Baru</h6>
                    </div>
                    <div class="card-body">
                        <% if (pendingJobs.length > 0) { %>
                            <% pendingJobs.forEach(job => { %>
                                <div class="border p-3 mb-3 rounded bg-light shadow-sm">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-1 text-primary"><%= job.vehicleLicense %></h5>
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    </div>
                                    <p class="mb-2"><strong>Pelanggan:</strong> <%= job.customerName %></p>
                                    <p class="small text-muted mb-3"><%= job.description %></p>
                                    
                                    <form action="/jobs/take-job/<%= job._id %>" method="POST">
                                        <button type="submit" class="btn btn-primary w-100 fw-bold">
                                            AMBIL PEKERJAAN INI
                                        </button>
                                    </form>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                <p>Belum ada antrean pekerjaan saat ini.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
    
            <div class="col-xl-6">
                <div class="card shadow mb-4 border-left-info">
                    <div class="card-header py-3 bg-info text-white">
                        <h6 class="m-0 font-weight-bold"><i class="fas fa-history me-2"></i> Riwayat & Status Bengkel</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Plat</th>
                                        <th>Mekanik</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% historyJobs.forEach(job => { %>
                                        <tr>
                                            <td><strong><%= job.vehicleLicense %></strong></td>
                                            <td><small><%= job.mechanicId ? job.mechanicId.name : '-' %></small></td>
                                            <td>
                                                <% if(job.status === 'on_progress') { %>
                                                    <span class="badge bg-info text-white">Proses</span>
                                                <% } else { %>
                                                    <span class="badge bg-success text-white">Selesai</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>