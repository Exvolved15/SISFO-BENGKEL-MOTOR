<script type="module">
    // 1. Pastikan import Anda benar
    import auth from '/js/firebaseAuth.js'; 
    import { signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js"; 

    document.getElementById('loginForm').addEventListener('submit', async (e) => {
        e.preventDefault(); 
        
        // =========================================================
        // === BAGIAN KRITIS: AMBIL NILAI DARI INPUTS (Wajib Ada) ===
        // =========================================================
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const errorMessageDiv = document.getElementById('errorMessage');
        
        // Reset error message
        errorMessageDiv.textContent = '';
        errorMessageDiv.classList.add('d-none');
        
        try {
            // 1. Login Sisi Klien di Firebase
            const userCredential = await signInWithEmailAndPassword(auth, email, password);
            const idToken = await userCredential.user.getIdToken(); 
            
            // 2. Kirim Token ke Server Kita (Server Verification)
            const response = await fetch('/api/auth/verify-token', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ idToken: idToken })
            });

            if (!response.ok) {
                const errorData = await response.json();
                // Melempar error agar ditangkap di catch
                throw new Error(errorData.message || 'Verifikasi server gagal.');
            }

            // 3. Sukses: Redirect ke dashboard
            window.location.href = '/'; 

        } catch (error) {
            // ===================================
            // === BLOK CATCH: TAMPILKAN ERROR ===
            // ===================================
            console.error("Login Gagal:", error); 
            
            let message = 'Login Gagal: Silakan periksa kembali kredensial Anda.';
            
            // Tangani error spesifik dari Firebase Auth
            if (error.code === 'auth/invalid-credential' || error.code === 'auth/user-not-found') {
                 message = 'Email atau kata sandi salah. Atau akun tidak terdaftar.';
            } else if (error.message) {
                 message = error.message;
            }
            
            errorMessageDiv.textContent = message;
            errorMessageDiv.classList.remove('d-none'); // Tampilkan div error
        }
    });
</script>

<body class="bg-light"> 
    
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5"> 
                <div class="card shadow-lg p-4"> 
                    <h2 class="text-center mb-4">Login Sisfo Bengkel</h2>
                    
                    <form id="loginForm"> 
                        <% if (query.success) { %>
                            <div class="alert alert-success text-center">Registrasi berhasil! Silakan login.</div>
                        <% } %>
                        
                        <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   required
                                   autocomplete="current-password"> </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                    </form>

                    <div class="text-center mt-3">
                        Belum punya akun? <a href="/register">Daftar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    

    </body>