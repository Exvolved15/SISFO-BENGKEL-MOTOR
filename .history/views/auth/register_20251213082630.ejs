<body class="bg-light"> 
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Register User Baru</h2>
                    
                    <form id="registerForm" method="POST" action="/register"> 
                        <div class="mb-3">
                            <label for="name" class="form-label">Nama User</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= oldData ? oldData.name : '' %>" required>
                            <% if (errors && errors.name) { %> <div class="text-danger"><%= errors.name.message %></div> <% } %>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= oldData ? oldData.email : '' %>" required>
                            <% if (errors && errors.email) { %> <div class="text-danger"><%= errors.email.message %></div> <% } %>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <% if (errors && errors.password) { %> <div class="text-danger"><%= errors.password.message %></div> <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="role" class="form-label">Role</label>
                            <select class="form-select" id="role" name="role">
                                <option value="kasir">Kasir</option>
                                <option value="mekanik">Mekanik</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                        
                        <% if (errors && errors.general) { %>
                            <div class="alert alert-danger text-center"><%= errors.general %></div>
                        <% } %>

                        <button type="submit" class="btn btn-info w-100">Daftar</button>
                    </form>

                    <div class="text-center mt-3">
                        Sudah punya akun? <a href="/login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>