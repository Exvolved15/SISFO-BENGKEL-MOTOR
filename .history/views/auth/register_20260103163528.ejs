<body class="bg-login-gradient min-vh-100 d-flex align-items-center">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="card border-0 shadow-lg p-3 login-card animate-fade-in">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="icon-shape bg-success bg-opacity-10 text-success rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center shadow-sm" style="width: 60px; height: 60px;">
                                <i class="fas fa-user-plus fa-xl"></i>
                            </div>
                            <h3 class="fw-bold text-dark mb-1">BUAT AKUN BARU</h3>
                            <p class="text-muted small">Silakan lengkapi data pendaftaran Anda</p>
                        </div>

                        <div id="alertMessage" class="alert d-none small rounded-3 mb-4 border-0 shadow-sm" role="alert"></div>

                        <form id="registerForm">
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label class="form-label small fw-bold text-muted text-uppercase">Nama Lengkap</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                        <input type="text" class="form-control border-0 bg-light py-2" id="name" name="name" placeholder="Nama lengkap Anda" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted text-uppercase">Alamat Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-envelope text-muted"></i></span>
                                        <input type="email" class="form-control border-0 bg-light py-2" id="email" name="email" placeholder="nama@email.com" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted text-uppercase" id="roleLabel">Daftar Sebagai</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-user-tag text-muted"></i></span>
                                        <select class="form-select border-0 bg-light py-2" id="role" name="role" required>
                                            <option value="" selected disabled>-- Pilih --</option>
                                            <option value="user">Pelanggan</option>
                                            <option value="mekanik">Mekanik</option>
                                            <option value="kasir">Kasir</option>
                                            <option value="admin">Administrator</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <label class="form-label small fw-bold text-muted text-uppercase">Bagian / Departemen</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-building text-muted"></i></span>
                                        <input type="text" id="department" name="department" class="form-control border-0 bg-light py-2" 
                                               placeholder="Contoh: Mekanik Area A / Kasir Depan" required>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted text-uppercase">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-key text-muted"></i></span>
                                        <input type="password" class="form-control border-0 bg-light py-2" id="password" name="password" 
                                            placeholder="••••••••" required autocomplete="new-password"> </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-muted text-uppercase">Konfirmasi</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-check-double text-muted"></i></span>
                                        <input type="password" class="form-control border-0 bg-light py-2" id="confirmPassword" name="confirmPassword" 
                                            placeholder="••••••••" required autocomplete="new-password"> </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-success py-2 fw-bold rounded-3 shadow btn-emerald" id="btnSubmit">
                                    <span id="btnText">DAFTAR SEKARANG</span>
                                    <span id="btnLoading" class="d-none"><i class="fas fa-spinner fa-spin me-2"></i>PROSES...</span>
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4 pt-2 border-top">
                            <p class="text-muted small mb-0">Sudah memiliki akun?</p>
                            <a href="/login" class="text-success fw-bold text-decoration-none small">Masuk disini</a>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="/" class="text-white opacity-75 text-decoration-none small"><i class="fas fa-arrow-left me-1"></i> Beranda</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        .bg-login-gradient {
            background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
            position: relative;
            overflow-x: hidden;
        }
        .bg-login-gradient::before {
            content: ""; position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background-image: radial-gradient(#2ecc71 0.5px, transparent 0.5px);
            background-size: 30px 30px; opacity: 0.1; z-index: 0;
        }
        .login-card { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border-radius: 20px !important; z-index: 1; }
        .input-group-text { border-radius: 10px 0 0 10px !important; }
        .form-control, .form-select { border-radius: 0 10px 10px 0 !important; }
        .form-control:focus, .form-select:focus { box-shadow: none; background-color: #fff; border: 1px solid #2ecc71 !important; }
        .btn-emerald { background-color: #2ecc71; border: none; transition: 0.3s; }
        .btn-emerald:hover { background-color: #27ae60; transform: translateY(-2px); box-shadow: 0 8px 15px rgba(46, 204, 113, 0.3) !important; }
        .animate-fade-in { animation: fadeIn 0.8s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        
        /* Gaya untuk dropdown yang terkunci */
        .select-locked { background-color: #e9ecef !important; cursor: not-allowed; border: 1px solid #ced4da !important; color: #6c757d !important; }
    </style>

    <script>
                document.addEventListener('DOMContentLoaded', () => {
            const roleSelect = document.getElementById('role');
            
            // Pasang listener di sini (Sesuai aturan CSP)
            roleSelect.addEventListener('change', function() {
                handleRoleLock(this);
            });
        });
        // FUNGSI UNTUK MENGUNCI ROLE SETELAH DIPILIH
       function handleRoleLock(selectElement) {
    if (selectElement.value !== "") {
        const label = document.getElementById('roleLabel');
        if (!document.getElementById('resetRoleBtn')) {
            const resetLink = document.createElement('a');
            resetLink.id = 'resetRoleBtn';
            resetLink.href = "#"; // Gunakan # jangan javascript:void(0)
            resetLink.className = "ms-2 text-danger text-decoration-none fw-normal";
            resetLink.style.fontSize = "10px";
            resetLink.innerHTML = "<i class='fas fa-redo me-1'></i>Ganti Role";
            
            // Pasang click listener di sini (Sesuai aturan CSP)
            resetLink.addEventListener('click', (e) => {
                e.preventDefault();
                resetRole();
            });
            
            label.appendChild(resetLink);
        }
        selectElement.classList.add('select-locked');
    }
}

function resetRole() {
    const roleSelect = document.getElementById('role');
    roleSelect.classList.remove('select-locked');
    roleSelect.value = "";
    const resetBtn = document.getElementById('resetRoleBtn');
    if (resetBtn) resetBtn.remove();
}
        const registerForm = document.getElementById('registerForm');
        const alertMessage = document.getElementById('alertMessage');
        const btnSubmit = document.getElementById('btnSubmit');
        const btnText = document.getElementById('btnText');
        const btnLoading = document.getElementById('btnLoading');

        registerForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const role = document.getElementById('role').value;
            const department = document.getElementById('department').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                showAlert('Password tidak cocok!', 'danger');
                return;
            }

            alertMessage.classList.add('d-none');
            btnSubmit.disabled = true;
            btnText.classList.add('d-none');
            btnLoading.classList.remove('d-none');

            try {
                const res = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, email, password, role, department })
                });

                const data = await res.json();

                if (res.ok) {
                    showAlert('<i class="fas fa-check-circle me-2"></i> Akun berhasil dibuat! Mengalihkan...', 'success');
                    setTimeout(() => window.location.href = '/login?success=1', 1500);
                } else {
                    throw new Error(data.message || 'Pendaftaran gagal');
                }
            } catch (error) {
                btnSubmit.disabled = false;
                btnText.classList.remove('d-none');
                btnLoading.classList.add('d-none');
                showAlert('<i class="fas fa-exclamation-triangle me-2"></i> ' + error.message, 'danger');
            }
        });

        function showAlert(msg, type) {
            alertMessage.className = `alert alert-${type} shadow-sm`;
            alertMessage.innerHTML = msg;
            alertMessage.classList.remove('d-none');
        }
    </script>
</body>