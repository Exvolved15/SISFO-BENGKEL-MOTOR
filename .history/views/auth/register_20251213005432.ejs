<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header text-center bg-secondary text-white">
                <h4>Register User Baru</h4>
            </div>
            <div class="card-body">
                
                <% if (errors) { %>
                    <div class="alert alert-danger" role="alert">
                        Registrasi gagal! Mohon periksa kembali input Anda.
                    </div>
                <% } %>
                
                <form action="/register" method="POST">
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Nama User</label>
                        <input type="text" class="form-control" id="name" name="name" 
                            value="<%= oldData ? oldData.name : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control <%= errors && errors.email ? 'is-invalid' : '' %>" 
                            id="email" name="email" value="<%= oldData ? oldData.email : '' %>" required>
                        <% if (errors && errors.email) { %>
                            <div class="invalid-feedback">
                                <%= errors.email.message %>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control <%= errors && errors.password ? 'is-invalid' : '' %>" 
                            id="password" name="password" required>
                        <% if (errors && errors.password) { %>
                            <div class="invalid-feedback">
                                <%= errors.password.message %>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select class="form-select" id="role" name="role">
                            <option value="kasir" <%= oldData && oldData.role === 'kasir' ? 'selected' : '' %>>Kasir</option>
                            <option value="admin" <%= oldData && oldData.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-info text-white w-100">Daftar</button>
                </form>
            </div>
            <div class="card-footer text-center">
                <small>Sudah punya akun? <a href="/login">Login</a></small>
            </div>
        </div>
    </div>
</div>