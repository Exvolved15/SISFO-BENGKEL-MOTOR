<div class="container py-4">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-dark text-white py-3">
            <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Edit Pengguna</h5>
        </div>
        <div class="card-body p-4 text-center">
            <form action="/api/users/update-profile/<%= targetUser._id %>" method="POST" enctype="multipart/form-data">
                
                <div class="position-relative d-inline-block mb-4">
                    <div class="rounded-circle overflow-hidden border shadow-sm" style="width: 150px; height: 150px; background-color: #f8f9fa;">
                        <% if (targetUser.profileImage) { %>
                            <img src="<%= targetUser.profileImage %>?t=<%= Date.now() %>" 
                                 id="preview" 
                                 style="width: 100%; height: 100%; object-fit: cover;">
                        <% } else { %>
                            <div id="placeholder-initial" class="w-100 h-100 d-flex align-items-center justify-content-center bg-primary text-white fs-1 fw-bold">
                                <%= targetUser.name.charAt(0).toUpperCase() %>
                            </div>
                            <img src="" id="preview" style="width: 100%; height: 100%; object-fit: cover; display: none;">
                        <% } %>
                    </div>
                    
                    <label for="fileInput" class="position-absolute bottom-0 end-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow" 
                           style="width: 42px; height: 42px; cursor: pointer; border: 3px solid white;">
                        <i class="fas fa-camera"></i>
                    </label>
                    <input type="file" id="fileInput" name="profileImage" class="d-none" onchange="previewImage(this)" accept="image/*">
                </div>
                
                <p class="small text-muted mb-4">Klik ikon kamera untuk mengubah foto</p>

                <div class="text-start">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nama Lengkap</label>
                        <input type="text" name="name" class="form-control" value="<%= targetUser.name %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" name="email" class="form-control" value="<%= targetUser.email %>" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Role / Akses</label>
                            <select name="role" class="form-select text-capitalize">
                                <% ['admin', 'kasir', 'mekanik', 'customer'].forEach(r => { %>
                                    <option value="<%= r %>" <%= targetUser.role === r ? 'selected' : '' %>><%= r %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Bagian (Department)</label>
                            <input type="text" name="department" class="form-control" value="<%= targetUser.department %>">
                        </div>
                    </div>
                </div>

                <hr class="my-4">
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Simpan Perubahan
                    </button>
                    <a href="javascript:history.back()" class="btn btn-light border">Batal</a>
                </div>
            </form>

            <div class="mt-5 pt-3 border-top">
                <p class="text-danger small fw-bold mb-2">ZONA BERBAHAYA</p>
                <form action="/api/users/delete/<%= targetUser._id %>" method="POST" 
                      onsubmit="return confirm('Hapus user ini secara permanen?')">
                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                        <i class="fas fa-trash-alt me-1"></i> Hapus Pengguna Ini
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(input) {
        const preview = document.getElementById('preview');
        const placeholder = document.getElementById('placeholder-initial');
    
        if (input.files && input.files[0]) {
            const reader = new FileReader();
    
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
                if (placeholder) {
                    placeholder.style.display = 'none';
                }
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>