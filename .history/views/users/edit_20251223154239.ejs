<div class="container py-5 animate-fade-in">
    <div class="card shadow-lg border-0 mx-auto overflow-hidden" style="max-width: 700px; border-radius: 20px;">
        <div class="card-header bg-emerald-gradient text-white py-4 border-0">
            <div class="d-flex align-items-center justify-content-center">
                <i class="fas fa-user-gear fa-2x me-3"></i>
                <h4 class="mb-0 fw-bold">Konfigurasi Pengguna</h4>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form action="/api/users/update-profile/<%= targetUser._id %>" method="POST" enctype="multipart/form-data">
                
                <div class="text-center mb-5">
                    <div class="position-relative d-inline-block">
                        <div class="profile-preview-wrapper rounded-circle border border-4 border-white shadow-md overflow-hidden bg-light" 
                             style="width: 160px; height: 160px;">
                            <% if (targetUser.profileImage) { %>
                                <img src="<%= targetUser.profileImage %>?t=<%= Date.now() %>" 
                                     id="preview" 
                                     class="w-100 h-100 object-fit-cover">
                            <% } else { %>
                                <div id="placeholder-initial" class="w-100 h-100 d-flex align-items-center justify-content-center bg-emerald-soft text-emerald fs-1 fw-bold">
                                    <%= targetUser.name.charAt(0).toUpperCase() %>
                                </div>
                                <img src="" id="preview" class="w-100 h-100 object-fit-cover" style="display: none;">
                            <% } %>
                        </div>
                        
                        <label for="fileInput" class="camera-btn shadow-sm">
                            <i class="fas fa-camera"></i>
                        </label>
                        <input type="file" id="fileInput" name="profileImage" class="d-none" onchange="previewImage(this)" accept="image/*">
                    </div>
                    <div class="mt-3">
                        <h5 class="fw-bold mb-0 text-dark"><%= targetUser.name %></h5>
                        <span class="badge bg-light text-muted border px-3 rounded-pill"><%= targetUser.role.toUpperCase() %></span>
                    </div>
                </div>

                <div class="row g-4">
                    <div class="col-md-12">
                        <label class="form-label small fw-bold text-muted text-uppercase">Nama Lengkap</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-id-card"></i></span>
                            <input type="text" name="name" class="form-control border-start-0 ps-0" value="<%= targetUser.name %>" required>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <label class="form-label small fw-bold text-muted text-uppercase">Alamat Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-envelope"></i></span>
                            <input type="email" name="email" class="form-control border-start-0 ps-0" value="<%= targetUser.email %>" required>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label small fw-bold text-muted text-uppercase">Level Akses</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-user-tag"></i></span>
                            <select name="role" class="form-select border-start-0 ps-0 text-capitalize">
                                <% ['admin', 'kasir', 'mekanik', 'customer'].forEach(r => { %>
                                    <option value="<%= r %>" <%= targetUser.role === r ? 'selected' : '' %>><%= r %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label small fw-bold text-muted text-uppercase">Departemen / Bagian</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-building"></i></span>
                            <input type="text" name="department" class="form-control border-start-0 ps-0" value="<%= targetUser.department %>" placeholder="Contoh: Area Mesin A">
                        </div>
                    </div>
                </div>

                <div class="mt-5 pt-4 border-top">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-success btn-emerald w-100 py-2 fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i>Simpan Konfigurasi
                            </button>
                        </div>
                        <div class="col-md-4">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary w-100 py-2 fw-bold shadow-sm">
                                Batal
                            </a>
                        </div>
                    </div>
                </div>
            </form>

            <div class="mt-5 rounded-4 bg-danger bg-opacity-10 border border-danger border-opacity-10 p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                    <h6 class="mb-0 text-danger fw-bold">ZONA BERBAHAYA</h6>
                </div>
                <p class="small text-muted mb-3">Menghapus pengguna ini akan menghilangkan semua data terkait dari sistem secara permanen.</p>
                <form action="/api/users/delete/<%= targetUser._id %>" method="POST" 
                      onsubmit="return confirm('Peringatan: Data akan dihapus permanen. Lanjutkan?')">
                    <button type="submit" class="btn btn-danger btn-sm px-4 rounded-pill fw-bold shadow-sm">
                        <i class="fas fa-trash-alt me-2"></i>Hapus User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-emerald-gradient { background: linear-gradient(135deg, #2ecc71, #27ae60); }
    .bg-emerald-soft { background-color: #e8f8f0; }
    .text-emerald { color: #27ae60; }
    
    .profile-preview-wrapper { border: 1px solid rgba(0,0,0,0.1); }
    
    .camera-btn {
        position: absolute; bottom: 5px; right: 5px;
        background-color: #2ecc71; color: white;
        width: 45px; height: 45px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        border: 4px solid white; cursor: pointer; transition: 0.3s;
    }
    .camera-btn:hover { background-color: #27ae60; transform: scale(1.1); }

    .form-control:focus, .form-select:focus {
        border-color: #2ecc71;
        box-shadow: none;
    }
    
    .btn-emerald { background-color: #2ecc71; border: none; }
    .btn-emerald:hover { background-color: #27ae60; transform: translateY(-2px); }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(15px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    function previewImage(input) {
        const preview = document.getElementById('preview');
        const placeholder = document.getElementById('placeholder-initial');
    
        if (input.files && input.files[0]) {
            const reader = new FileReader();
    
            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
                preview.classList.add('w-100', 'h-100', 'object-fit-cover');
                if (placeholder) {
                    placeholder.style.display = 'none';
                }
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>