<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<div class="container-fluid px-4 py-4 animate-fade-in">
    <div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
                <h1 class="h3 fw-bold text-dark mb-1"><%= title %></h1>
                <p class="text-secondary mb-0 fw-medium">Kelola katalog layanan jasa servis dan estimasi biaya pengerjaan bengkel.</p>
            </div>
            <div>
                <a href="/services/add" class="btn btn-success px-4 py-2 fw-bold rounded-3 shadow-sm btn-emerald">
                    <i class="fas fa-plus-circle me-2"></i>Tambah Jasa Baru
                </a>
            </div>
        </div>
    </div>
</div>

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white border-start border-4 border-primary">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
                        <i class="fas fa-hand-holding-heart fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Total Layanan Jasa</h6>
                        <h4 class="fw-bold mb-0"><%= services.length %> <span class="small fw-normal text-muted">Kategori</span></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-3 bg-white border-start border-4 border-info">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
                        <i class="fas fa-tags fa-xl"></i>
                    </div>
                    <div>
                        <h6 class="text-muted small mb-1">Rata-rata Biaya Jasa</h6>
                        <% 
                            let avgPrice = services.length > 0 
                                ? services.reduce((acc, s) => acc + (s.price || 0), 0) / services.length 
                                : 0;
                        %>
                        <h4 class="fw-bold mb-0">Rp <%= Math.round(avgPrice).toLocaleString('id-ID') %></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom border-light">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2 text-success"></i>Katalog Jasa Servis</h6>
                </div>
                <div class="col-auto">
                    <div class="input-group input-group-sm shadow-sm rounded-pill overflow-hidden border">
                        <span class="input-group-text bg-white border-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" id="serviceSearch" class="form-control border-0 ps-0" placeholder="Cari nama jasa...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <% if (services.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="serviceTable">
                        <thead class="table-light">
                            <tr class="small text-uppercase fw-bold text-muted">
                                <th class="ps-4">No</th>
                                <th>Nama Layanan Jasa</th>
                                <th>Deskripsi Pengerjaan</th>
                                <th>Estimasi Biaya</th>
                                <th class="text-center pe-4">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% services.forEach((service, index) => { %>
                                <tr>
                                    <td class="ps-4 text-muted"><%= index + 1 %></td>
                                    <td>
                                        <div class="fw-bold text-dark text-capitalize"><%= service.name %></div>
                                        <span class="badge bg-light text-success border border-success border-opacity-25 small">Verified Service</span>
                                    </td>
                                    <td>
                                        <small class="text-muted text-wrap d-block" style="max-width: 300px;">
                                            <%= service.description || 'Tidak ada deskripsi layanan.' %>
                                        </small>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">Rp <%= (service.price || 0).toLocaleString('id-ID') %></div>
                                        <small class="text-muted" style="font-size: 0.7rem;">Flat Rate</small>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group shadow-sm rounded-3">
                                            <a href="/services/<%= service._id %>/edit" class="btn btn-sm btn-white border border-light" title="Edit Jasa">
                                                <i class="fas fa-edit text-warning"></i>
                                            </a>
                                            <form action="/api/services/delete/<%= service._id %>?_method=DELETE" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-white border border-light" 
                                                    onclick="return confirm('Hapus layanan jasa ini?');">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-concierge-bell fa-4x text-muted opacity-25 mb-3"></i>
                    <h5 class="text-muted fw-bold">Belum Ada Layanan Jasa</h5>
                    <p class="small text-muted">Silakan tambahkan jasa servis untuk memulai operasional transaksi.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
    .btn-emerald { background-color: #2ecc71; border: none; transition: 0.3s; color: white; }
    .btn-emerald:hover { background-color: #27ae60; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3); color: white; }
    
    .btn-white { background: #fff; }
    .btn-white:hover { background: #f8f9fa; }

    .icon-box { width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; }

    .animate-fade-in { animation: fadeIn 0.5s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    #serviceTable tbody tr:hover { background-color: #f8fffb; }
</style>

<script>
    // Pencarian Jasa Real-time
    document.getElementById('serviceSearch').addEventListener('keyup', function() {
        let value = this.value.toLowerCase();
        let rows = document.querySelectorAll("#serviceTable tbody tr");
        
        rows.forEach(row => {
            let text = row.querySelector("td:nth-child(2)").innerText.toLowerCase();
            row.style.display = text.includes(value) ? "" : "none";
        });
    });
</script>